# API Configuration
# Copy this file to .env and update with your values
# DO NOT commit .env to version control

# API Base URL - set this to your backend API URL
# For local development: http://localhost:5001/api
# For production: https://your-api-domain.com/api
API_URL=http://localhost:5001/api

# Offline Mode - app works fully offline by default
# Set to false if you want to require network connection
OFFLINE_FIRST=true

# Sync on WiFi only - only sync when connected to WiFi
# Set to false to allow sync on mobile data
WIFI_ONLY_SYNC=true
