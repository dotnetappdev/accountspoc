@page "/parcel-scanning"
@using AccountsPOC.Domain.Entities

<PageTitle>Parcel Scanning</PageTitle>

<div class="parcel-scanning-page">
    <h1>üì¶ Parcel Scanning</h1>

    <div class="scanner-section">
        <div class="scan-mode-selector">
            <button class="mode-btn @(scanMode == "Bag" ? "active" : "")" @onclick='() => scanMode = "Bag"'>
                üëú Bag
            </button>
            <button class="mode-btn @(scanMode == "Cage" ? "active" : "")" @onclick='() => scanMode = "Cage"'>
                üóÉÔ∏è Cage
            </button>
            <button class="mode-btn @(scanMode == "Loose" ? "active" : "")" @onclick='() => scanMode = "Loose"'>
                üì¶ Loose
            </button>
        </div>

        @if (scanMode != "Loose")
        {
            <div class="container-selection">
                <label>Select @scanMode</label>
                <select class="form-control" @bind="selectedContainerId">
                    <option value="0">-- Select @scanMode --</option>
                    @foreach (var container in containers.Where(c => c.ContainerType == scanMode))
                    {
                        <option value="@container.Id">@container.ContainerCode (@container.Parcels.Count/@container.MaxCapacity)</option>
                    }
                </select>
                <button class="btn-new-container" @onclick="CreateNewContainer">+ New @scanMode</button>
            </div>
        }

        <div class="barcode-scanner">
            <div class="scanner-box">
                <div class="scanner-line"></div>
                <p>üì∑ Position barcode in frame</p>
            </div>
            <input type="text" 
                   class="barcode-input" 
                   placeholder="Or enter barcode manually" 
                   @bind="manualBarcode"
                   @bind:event="oninput"
                   @onkeypress="HandleBarcodeInput" />
        </div>

        @if (!string.IsNullOrEmpty(scanMessage))
        {
            <div class="scan-message @scanMessageType">
                @scanMessage
            </div>
        }
    </div>

    <div class="scanned-parcels-section">
        <h3>Scanned Parcels (@scannedParcels.Count)</h3>
        
        @if (scannedParcels.Any())
        {
            <div class="parcels-list">
                @foreach (var parcel in scannedParcels.OrderByDescending(p => p.ScannedToVanAt))
                {
                    <div class="parcel-card">
                        <div class="parcel-header">
                            <span class="parcel-barcode">üì¶ @parcel.ParcelBarcode</span>
                            <span class="parcel-time">@GetTimeAgo(parcel.ScannedToVanAt)</span>
                        </div>
                        @if (parcel.Container != null)
                        {
                            <div class="parcel-container">
                                @(parcel.Container.ContainerType): @parcel.Container.ContainerCode
                            </div>
                        }
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted">No parcels scanned yet. Start scanning to load your van.</p>
        }
    </div>
</div>

@code {
    private string scanMode = "Bag";
    private int selectedContainerId = 0;
    private string manualBarcode = "";
    private string scanMessage = "";
    private string scanMessageType = "";
    private List<Container> containers = new();
    private List<Parcel> scannedParcels = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadContainers();
        await LoadScannedParcels();
    }

    private async Task LoadContainers()
    {
        // TODO: Load from API
        containers = new List<Container>
        {
            new Container
            {
                Id = 1,
                TenantId = 1,
                ContainerCode = "BAG-001",
                ContainerType = "Bag",
                MaxCapacity = 50,
                Status = "InUse",
                CreatedDate = DateTime.Now
            },
            new Container
            {
                Id = 2,
                TenantId = 1,
                ContainerCode = "CAGE-001",
                ContainerType = "Cage",
                MaxCapacity = 200,
                Status = "InUse",
                CreatedDate = DateTime.Now
            }
        };
    }

    private async Task LoadScannedParcels()
    {
        // TODO: Load from API
        await Task.Delay(100);
    }

    private async Task HandleBarcodeInput(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrEmpty(manualBarcode))
        {
            await ScanParcel(manualBarcode);
            manualBarcode = "";
        }
    }

    private async Task ScanParcel(string barcode)
    {
        if (scanMode != "Loose" && selectedContainerId == 0)
        {
            ShowMessage("Please select a " + scanMode + " first", "error");
            return;
        }

        // TODO: Call API to scan parcel
        var parcel = new Parcel
        {
            Id = scannedParcels.Count + 1,
            TenantId = 1,
            ParcelBarcode = barcode,
            Status = "Scanned",
            ScannedToVanAt = DateTime.UtcNow,
            ContainerId = selectedContainerId > 0 ? selectedContainerId : null,
            Container = selectedContainerId > 0 ? containers.FirstOrDefault(c => c.Id == selectedContainerId) : null,
            CreatedDate = DateTime.UtcNow
        };

        scannedParcels.Add(parcel);
        ShowMessage($"‚úì Scanned: {barcode}", "success");
        
        StateHasChanged();
    }

    private void CreateNewContainer()
    {
        // TODO: Show dialog to create new container
        ShowMessage("Create new " + scanMode + " functionality coming soon", "info");
    }

    private void ShowMessage(string message, string type)
    {
        scanMessage = message;
        scanMessageType = type;
        StateHasChanged();
        
        Task.Delay(3000).ContinueWith(_ =>
        {
            scanMessage = "";
            InvokeAsync(StateHasChanged);
        });
    }

    private string GetTimeAgo(DateTime? dateTime)
    {
        if (!dateTime.HasValue) return "";
        
        var timeSpan = DateTime.UtcNow - dateTime.Value;
        if (timeSpan.TotalSeconds < 60) return "Just now";
        if (timeSpan.TotalMinutes < 60) return $"{(int)timeSpan.TotalMinutes}m ago";
        if (timeSpan.TotalHours < 24) return $"{(int)timeSpan.TotalHours}h ago";
        return $"{(int)timeSpan.TotalDays}d ago";
    }
}

<style>
    .parcel-scanning-page {
        padding: 16px;
        padding-bottom: 80px;
    }

    .scanner-section {
        background: white;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 24px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .scan-mode-selector {
        display: flex;
        gap: 8px;
        margin-bottom: 20px;
    }

    .mode-btn {
        flex: 1;
        padding: 12px;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        background: white;
        font-size: 0.875rem;
        cursor: pointer;
        transition: all 0.3s;
    }

    .mode-btn.active {
        background: #667eea;
        color: white;
        border-color: #667eea;
    }

    .container-selection {
        margin-bottom: 20px;
    }

    .container-selection label {
        display: block;
        margin-bottom: 8px;
        font-weight: 500;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 8px;
        margin-bottom: 8px;
    }

    .btn-new-container {
        width: 100%;
        padding: 10px;
        background: #28a745;
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
    }

    .barcode-scanner {
        margin-bottom: 20px;
    }

    .scanner-box {
        background: #f8f9fa;
        border: 2px dashed #667eea;
        border-radius: 12px;
        padding: 40px 20px;
        text-align: center;
        position: relative;
        margin-bottom: 16px;
    }

    .scanner-line {
        width: 80%;
        height: 2px;
        background: #667eea;
        position: absolute;
        left: 10%;
        top: 50%;
        animation: scan 2s infinite;
    }

    .barcode-input {
        width: 100%;
        padding: 12px;
        border: 2px solid #667eea;
        border-radius: 8px;
        font-size: 1rem;
    }

    .scan-message {
        padding: 12px;
        border-radius: 8px;
        margin-top: 12px;
        animation: fadeIn 0.3s;
    }

    .scan-message.success {
        background: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .scan-message.error {
        background: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .scan-message.info {
        background: #d1ecf1;
        color: #0c5460;
        border: 1px solid #bee5eb;
    }

    .scanned-parcels-section h3 {
        margin-bottom: 16px;
    }

    .parcels-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .parcel-card {
        background: white;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 16px;
    }

    .parcel-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 8px;
    }

    .parcel-barcode {
        font-weight: 600;
    }

    .parcel-time {
        font-size: 0.75rem;
        color: #666;
    }

    .parcel-container {
        font-size: 0.875rem;
        color: #667eea;
        background: #f0f3ff;
        padding: 4px 8px;
        border-radius: 4px;
        display: inline-block;
    }

    .text-muted {
        text-align: center;
        color: #666;
        padding: 20px;
    }

    @keyframes scan {
        0%, 100% {
            top: 30%;
        }
        50% {
            top: 70%;
        }
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }
</style>
