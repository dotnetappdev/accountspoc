    }

    .metric-box.success {
        border-color: #28a745;
    }

    .metric-box.rate {
        border-color: #667eea;
    }

    .metric-value {
        font-size: 2em;
        font-weight: bold;
        color: #333;
        margin-bottom: 5px;
    }

    .metric-label {
        font-size: 0.9em;
        color: #666;
    }

    .alert {
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .alert-warning {
        background: #fff3cd;
        border: 1px solid #ffc107;
        color: #856404;
    }

    .alert-danger {
        background: #f8d7da;
        border: 1px solid #dc3545;
        color: #721c24;
    }

    .info-card {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

