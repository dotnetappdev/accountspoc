@page "/driver-dashboard"
@inject HttpClient Http
@using System.Timers

<h3>üìä My Dashboard</h3>

<div class="driver-dashboard">
    @if (isLoading && performance == null)
    {
        <div class="loading-spinner">
            <div class="spinner"></div>
            <p>Loading your dashboard...</p>
        </div>
    }
    else if (performance != null)
    {
        <!-- Performance Summary -->
        <div class="summary-card">
            <h4>üë§ @performance.DriverName</h4>
            <div class="status-badge @performance.CurrentStatus.ToLower().Replace(" ", "-")">
                @performance.CurrentStatus
            </div>
        </div>

        <!-- Key Metrics -->
        <div class="metrics-grid">
            <div class="metric-box">
                <div class="metric-value">@performance.TotalRoutes</div>
                <div class="metric-label">Total Routes</div>
            </div>
            <div class="metric-box">
                <div class="metric-value">@performance.CompletedRoutes</div>
                <div class="metric-label">Completed</div>
            </div>
            <div class="metric-box success">
                <div class="metric-value">@performance.CompletedDeliveries</div>
                <div class="metric-label">Deliveries</div>
            </div>
            <div class="metric-box rate">
                <div class="metric-value">@performance.SuccessRate%</div>
                <div class="metric-label">Success Rate</div>
            </div>
        </div>

        @if (performance.FailedDeliveries > 0)
        {
            <div class="alert alert-warning">
                <strong>‚ö†Ô∏è @performance.FailedDeliveries Failed Deliveries</strong>
                <p>Review and update failed delivery attempts</p>
            </div>
        }

        <!-- Vehicle Info -->
        @if (!string.IsNullOrEmpty(performance.VehicleRegistration))
        {
            <div class="info-card">
                <strong>üöö Vehicle:</strong> @performance.VehicleRegistration
            </div>
        }

        <!-- Active Route Section -->
        @if (activeRoute != null)
        {
            <div class="active-route-section">
                <h4>üó∫Ô∏è Active Route: @activeRoute.RouteName</h4>
                
                <div class="progress-container">
                    <div class="progress-bar" style="width: @activeRoute.Progress%"></div>
                    <span class="progress-text">@activeRoute.Progress% Complete</span>
                </div>

                <div class="route-stats">
                    <div class="stat">
                        <span class="stat-label">Total Stops:</span>
                        <span class="stat-value">@activeRoute.TotalStops</span>
                    </div>
                    <div class="stat">
                        <span class="stat-label">Completed:</span>
                        <span class="stat-value">‚úÖ @activeRoute.CompletedStops</span>
                    </div>
                    <div class="stat">
                        <span class="stat-label">Remaining:</span>
                        <span class="stat-value">‚è≥ @(activeRoute.TotalStops - activeRoute.CompletedStops)</span>
                    </div>
                    @if (activeRoute.CurrentStopSequence > 0)
                    {
                        <div class="stat">
                            <span class="stat-label">Current Stop:</span>
                            <span class="stat-value">#@activeRoute.CurrentStopSequence</span>
                        </div>
                    }
                </div>

                <button class="btn btn-primary btn-block" @onclick="() => Navigation.NavigateTo($\"/delivery-routes\")">
                    View Route Details ‚Üí
                </button>
            </div>
        }
        else if (performance.CurrentStatus == "Available")
        {
            <div class="info-message">
                <p>‚úÖ No active routes. You're ready for assignment!</p>
            </div>
        }

        <button class="btn btn-secondary btn-block" @onclick="RefreshDashboard">
            üîÑ Refresh Dashboard
        </button>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger">
            ‚ùå @errorMessage
        </div>
        <button class="btn btn-primary" @onclick="LoadDashboard">
            Try Again
        </button>
    }
</div>

@code {
    [Inject] private NavigationManager Navigation { get; set; } = default!;
    
    private DriverPerformance? performance;
    private RouteProgress? activeRoute;
    private bool isLoading = false;
    private string? errorMessage;
    private Timer? refreshTimer;

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboard();

        // Auto-refresh every 30 seconds
        refreshTimer = new Timer(30000);
        refreshTimer.Elapsed += async (sender, e) => await InvokeAsync(async () =>
        {
            await LoadDashboard();
            StateHasChanged();
        });
        refreshTimer.Start();
    }

    private async Task LoadDashboard()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            // In a real app, you'd get the driver ID from authentication
            // For now, we'll get the first driver's data
            var allPerformance = await Http.GetFromJsonAsync<List<DriverPerformance>>("api/dashboard/driver-performance");
            performance = allPerformance?.FirstOrDefault();

            if (performance != null && performance.CurrentStatus == "On Route")
            {
                var routes = await Http.GetFromJsonAsync<List<RouteProgress>>("api/dashboard/active-routes");
                activeRoute = routes?.FirstOrDefault(r => r.DriverName == performance.DriverName);
            }
            else
            {
                activeRoute = null;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Unable to load dashboard: {ex.Message}";
            Console.WriteLine($"Dashboard error: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshDashboard()
    {
        await LoadDashboard();
    }

    public void Dispose()
    {
        refreshTimer?.Stop();
        refreshTimer?.Dispose();
    }

    public class DriverPerformance
    {
        public int DriverId { get; set; }
        public string DriverName { get; set; } = string.Empty;
        public string? Phone { get; set; }
        public int TotalRoutes { get; set; }
        public int CompletedRoutes { get; set; }
        public int TotalDeliveries { get; set; }
        public int CompletedDeliveries { get; set; }
        public int FailedDeliveries { get; set; }
        public double SuccessRate { get; set; }
        public string? VehicleRegistration { get; set; }
        public string CurrentStatus { get; set; } = string.Empty;
    }

    public class RouteProgress
    {
        public int RouteId { get; set; }
        public string RouteName { get; set; } = string.Empty;
        public string DriverName { get; set; } = string.Empty;
        public string? DriverPhone { get; set; }
        public string Status { get; set; } = string.Empty;
        public int TotalStops { get; set; }
        public int CompletedStops { get; set; }
        public int InProgressStops { get; set; }
        public int PendingStops { get; set; }
        public int FailedStops { get; set; }
        public double Progress { get; set; }
        public int CurrentStopSequence { get; set; }
    }
}

<style>
    .driver-dashboard {
        padding: 15px;
    }

    .loading-spinner {
        text-align: center;
        padding: 60px 20px;
    }

    .spinner {
        width: 50px;
        height: 50px;
