@page "/route-map/{RouteId:int}"
@using AccountsPOC.Domain.Entities
@using Microsoft.Maui.Controls.Maps
@using Microsoft.Maui.Maps
@inject NavigationManager Navigation
@inject IHttpClientFactory HttpClientFactory

<PageTitle>Route Map</PageTitle>

<div class="route-map-page">
    <div class="header">
        <button class="back-button" @onclick="GoBack">‚Üê Back</button>
        <h2>üó∫Ô∏è Route @routeNumber</h2>
        <button class="optimize-button" @onclick="OptimizeRoute">‚ö° Optimize</button>
    </div>

    @if (isLoading)
    {
        <div class="loading">Loading route...</div>
    }
    else if (deliveryRoute != null)
    {
        <div class="route-info-bar">
            <div class="info-item">
                <span class="label">Stops:</span>
                <span class="value">@deliveryRoute.Stops.Count</span>
            </div>
            <div class="info-item">
                <span class="label">Status:</span>
                <span class="value status-@deliveryRoute.Status.ToLower()">@deliveryRoute.Status</span>
            </div>
            @if (totalDistance > 0)
            {
                <div class="info-item">
                    <span class="label">Distance:</span>
                    <span class="value">@totalDistance.ToString("F2") km</span>
                </div>
            }
        </div>

        <div class="map-container">
            @if (hasMapSupport)
            {
                <p class="map-placeholder">
                    üìç Interactive map will be displayed here on device.<br/>
                    Showing @deliveryRoute.Stops.Count delivery locations.
                </p>
            }
            else
            {
                <p class="map-info">Map view requires device with GPS support.</p>
            }
        </div>

        <div class="stops-list">
            <h3>Delivery Stops</h3>
            @foreach (var stop in deliveryRoute.Stops.OrderBy(s => s.SequenceNumber))
            {
                <div class="stop-card @(selectedStop?.Id == stop.Id ? "selected" : "")" @onclick="() => SelectStop(stop)">
                    <div class="stop-header">
                        <div class="sequence-circle">@stop.SequenceNumber</div>
                        <div class="stop-details">
                            <div class="stop-name">@stop.ContactName</div>
                            <div class="stop-address">@stop.DeliveryAddress</div>
                            @if (!string.IsNullOrEmpty(stop.DoorNumber))
                            {
                                <div class="door-number">üö™ Door: @stop.DoorNumber</div>
                            }
                        </div>
                        <div class="stop-metrics">
                            @if (stop.ParcelCount > 0)
                            {
                                <div class="parcel-badge">üì¶ @stop.ParcelCount</div>
                            }
                            @if (stop.Latitude.HasValue && stop.Longitude.HasValue)
                            {
                                <div class="gps-badge">üìç</div>
                            }
                        </div>
                    </div>
                    
                    @if (selectedStop?.Id == stop.Id)
                    {
                        <div class="stop-actions">
                            <button class="action-btn" @onclick="() => NavigateToStop(stop)" @onclick:stopPropagation="true">
                                üß≠ Navigate
                            </button>
                            <button class="action-btn" @onclick="() => ShowDeliveryOptions(stop)" @onclick:stopPropagation="true">
                                ‚úì Mark Delivered
                            </button>
                        </div>
                        
                        @if (stop.Latitude.HasValue && stop.Longitude.HasValue)
                        {
                            <div class="gps-info">
                                <small>GPS: @stop.Latitude.Value.ToString("F6"), @stop.Longitude.Value.ToString("F6")</small>
                            </div>
                        }
                    }
                </div>
            }
        </div>

        @if (showDeliveryModal)
        {
            <div class="modal-overlay" @onclick="CloseDeliveryModal">
                <div class="modal-content" @onclick:stopPropagation="true">
                    <h3>Mark Delivery Status</h3>
                    <p>@selectedStop?.ContactName - @selectedStop?.DeliveryAddress</p>
                    
                    <div class="delivery-options">
                        <button class="option-btn delivered" @onclick='() => UpdateDeliveryStatus(DeliveryStatusType.Delivered)'>
                            ‚úì Delivered
                        </button>
                        <button class="option-btn safe-place" @onclick='() => UpdateDeliveryStatus(DeliveryStatusType.SafePlace)'>
                            üè† Left at Safe Place
                        </button>
                        <button class="option-btn neighbor" @onclick="ShowNeighborInput">
                            üë• Left with Neighbor
                        </button>
                    </div>

                    @if (showNeighborInput)
                    {
                        <div class="neighbor-input">
                            <label>Neighbor's Door Number:</label>
                            <input type="text" @bind="neighborDoorNumber" placeholder="e.g., 12B" class="form-control" />
                            <button class="btn-primary" @onclick='() => UpdateDeliveryStatus(DeliveryStatusType.LeftWithNeighbor)'>
                                Confirm
                            </button>
                        </div>
                    }

                    <button class="close-btn" @onclick="CloseDeliveryModal">Cancel</button>
                </div>
            </div>
        }
    }
</div>

@code {
    [Parameter]
    public int RouteId { get; set; }

    private DeliveryRoute? deliveryRoute;
    private DeliveryStop? selectedStop;
    private string routeNumber = "";
    private bool isLoading = true;
    private bool hasMapSupport = true;
    private bool showDeliveryModal = false;
    private bool showNeighborInput = false;
    private string neighborDoorNumber = "";
    private double totalDistance = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadRoute();
    }

    private async Task LoadRoute()
    {
        isLoading = true;

        try
        {
            var httpClient = HttpClientFactory.CreateClient("AccountsPOCAPI");
            deliveryRoute = await httpClient.GetFromJsonAsync<DeliveryRoute>($"api/deliveryroutes/{RouteId}");
            
            if (deliveryRoute != null)
            {
                routeNumber = deliveryRoute.RouteNumber;
                totalDistance = deliveryRoute.Stops.Sum(s => s.OptimizedDistance ?? 0);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading route: {ex.Message}");
            // Use mock data for development
            deliveryRoute = new DeliveryRoute
            {
                Id = RouteId,
                TenantId = 1,
                RouteNumber = "ROUTE-001",
                RouteDate = DateTime.Today,
                Status = "Planned",
                CreatedDate = DateTime.Now,
                Stops = new List<DeliveryStop>
                {
                    new DeliveryStop
                    {
                        Id = 1,
                        DeliveryRouteId = RouteId,
                        SequenceNumber = 1,
                        DeliveryAddress = "123 Main St, London",
                        ContactName = "John Smith",
                        ContactPhone = "+44 20 1234 5678",
                        Status = "Pending",
                        Latitude = 51.5074,
                        Longitude = -0.1278,
                        DoorNumber = "12A",
                        ParcelCount = 3
                    },
                    new DeliveryStop
                    {
                        Id = 2,
                        DeliveryRouteId = RouteId,
                        SequenceNumber = 2,
                        DeliveryAddress = "456 Oxford Street, London",
                        ContactName = "Jane Doe",
                        ContactPhone = "+44 20 9876 5432",
                        Status = "Pending",
                        Latitude = 51.5155,
                        Longitude = -0.1415,
                        DoorNumber = "45B",
                        ParcelCount = 5
                    },
                    new DeliveryStop
                    {
                        Id = 3,
                        DeliveryRouteId = RouteId,
                        SequenceNumber = 3,
                        DeliveryAddress = "789 Baker Street, London",
                        ContactName = "Bob Johnson",
                        ContactPhone = "+44 20 5555 1234",
                        Status = "Pending",
                        Latitude = 51.5236,
                        Longitude = -0.1586,
                        DoorNumber = "221B",
                        ParcelCount = 2
                    }
                }
            };
            routeNumber = deliveryRoute.RouteNumber;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task OptimizeRoute()
    {
        try
        {
            var httpClient = HttpClientFactory.CreateClient("AccountsPOCAPI");
            var response = await httpClient.PostAsync($"api/deliveryroutes/{RouteId}/optimize-route", null);
            
            if (response.IsSuccessStatusCode)
            {
                await LoadRoute(); // Reload to get updated sequence
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error optimizing route: {ex.Message}");
        }
    }

    private void SelectStop(DeliveryStop stop)
    {
        selectedStop = selectedStop?.Id == stop.Id ? null : stop;
    }

    private void NavigateToStop(DeliveryStop stop)
    {
        if (stop.Latitude.HasValue && stop.Longitude.HasValue)
        {
            // On device, this would open the native maps app
#if ANDROID || IOS
            var location = new Location(stop.Latitude.Value, stop.Longitude.Value);
            var options = new MapLaunchOptions { Name = stop.ContactName };
            Map.OpenAsync(location, options);
#endif
        }
    }

    private void ShowDeliveryOptions(DeliveryStop stop)
    {
        selectedStop = stop;
        showDeliveryModal = true;
        showNeighborInput = false;
        neighborDoorNumber = "";
    }

    private void CloseDeliveryModal()
    {
        showDeliveryModal = false;
        showNeighborInput = false;
    }

    private void ShowNeighborInput()
    {
        showNeighborInput = true;
    }

    private async Task UpdateDeliveryStatus(string status)
    {
        if (selectedStop == null) return;

        try
        {
            var httpClient = HttpClientFactory.CreateClient("AccountsPOCAPI");
            var request = new
            {
                DeliveryStatus = status,
                NeighborDoorNumber = status == "LeftWithNeighbor" ? neighborDoorNumber : null,
                DeliveryNotes = $"Marked as {status} via mobile app"
            };

            var response = await httpClient.PatchAsJsonAsync(
                $"api/deliveryroutes/stops/{selectedStop.Id}/update-delivery-status",
                request
            );

            if (response.IsSuccessStatusCode)
            {
                selectedStop.DeliveryStatus = status;
                selectedStop.Status = DeliveryStopStatus.Delivered;
                CloseDeliveryModal();
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error updating delivery status: {ex.Message}");
            // Update locally even if API fails (for offline support)
            selectedStop.DeliveryStatus = status;
            selectedStop.Status = DeliveryStopStatus.Delivered;
            CloseDeliveryModal();
            StateHasChanged();
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/delivery-routes");
    }
}

