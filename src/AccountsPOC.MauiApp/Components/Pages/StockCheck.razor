@page "/stock-check"
@using AccountsPOC.SharedComponents
@using AccountsPOC.Domain.Entities

<PageTitle>Stock Check</PageTitle>

<div class="stock-check-page">
    <h1>ðŸ“¦ Stock Check</h1>
    
    <div class="scanner-section">
        <button class="btn btn-primary btn-block" @onclick="OpenScanner">
            ðŸ“· Scan Barcode
        </button>
        
        <div class="manual-entry">
            <input type="text" 
                   class="form-control" 
                   placeholder="Or enter stock code manually" 
                   @bind="stockCode"
                   @bind:event="oninput" />
            <button class="btn btn-success" @onclick="LookupStock">Search</button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading">Loading...</div>
    }
    else if (currentStockItem != null)
    {
        <StockCheckCard StockItem="@currentStockItem" />
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
</div>

@code {
    private string stockCode = "";
    private StockItem? currentStockItem;
    private bool isLoading = false;
    private string errorMessage = "";

    private async Task OpenScanner()
    {
        // This would integrate with ZXing.Net.Maui for actual barcode scanning
        // For now, we'll simulate it
        await Task.Delay(100);
        // TODO: Implement barcode scanner integration
        errorMessage = "Barcode scanner will be available on device";
    }

    private async Task LookupStock()
    {
        if (string.IsNullOrWhiteSpace(stockCode))
            return;

        isLoading = true;
        errorMessage = "";
        
        try
        {
            // TODO: Call API to lookup stock item
            // For now, create a mock item
            await Task.Delay(500); // Simulate API call
            
            currentStockItem = new StockItem
            {
                Id = 1,
                TenantId = 1,
                StockCode = stockCode,
                Description = "Mock Stock Item",
                ProductId = 1,
                QuantityOnHand = 50,
                QuantityAllocated = 10,
                ReorderLevel = 20,
                ReorderQuantity = 100,
                BinLocation = "A1-B2",
                CostPrice = 10.00m,
                SellingPrice = 15.00m,
                IsActive = true,
                CreatedDate = DateTime.Now
            };
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}

<style>
    .stock-check-page {
        padding: 16px;
    }

    .scanner-section {
        margin-bottom: 24px;
    }

    .manual-entry {
        display: flex;
        gap: 8px;
        margin-top: 16px;
    }

    .form-control {
        flex: 1;
        padding: 12px;
        border: 1px solid #ddd;
        border-radius: 6px;
        font-size: 16px;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        padding: 12px;
        border-radius: 6px;
        border: 1px solid #f5c6cb;
    }
</style>
