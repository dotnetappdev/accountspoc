@page "/route-organizer/{RouteId:int}"
@using AccountsPOC.Domain.Entities
@inject NavigationManager Navigation

<PageTitle>Organize Route</PageTitle>

<div class="route-organizer-page">
    <div class="header">
        <button class="back-button" @onclick="GoBack">‚Üê Back</button>
        <h2>üìã Route @routeNumber</h2>
        <button class="save-button" @onclick="SaveOrder">üíæ Save Order</button>
    </div>

    @if (deliveryStops.Any())
    {
        <div class="instructions">
            <p>Drag and drop to reorder deliveries. Tap arrows to move up/down.</p>
        </div>

        <div class="stops-list">
            @foreach (var (stop, index) in deliveryStops.Select((s, i) => (s, i)))
            {
                <div class="stop-card @(selectedStop == stop ? "selected" : "")">
                    <div class="stop-header" @onclick="() => SelectStop(stop)">
                        <div class="sequence-badge">@(index + 1)</div>
                        <div class="stop-info">
                            <strong>@stop.ContactName</strong>
                            <p>@stop.DeliveryAddress</p>
                        </div>
                        <div class="move-controls">
                            @if (index > 0)
                            {
                                <button class="move-btn" @onclick="() => MoveUp(index)" @onclick:stopPropagation="true">‚ñ≤</button>
                            }
                            @if (index < deliveryStops.Count - 1)
                            {
                                <button class="move-btn" @onclick="() => MoveDown(index)" @onclick:stopPropagation="true">‚ñº</button>
                            }
                        </div>
                    </div>
                    <div class="stop-status">
                        <span class="status-badge @stop.Status.ToLower()">@stop.Status</span>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">No delivery stops found.</p>
    }

    @if (showSaveMessage)
    {
        <div class="save-message">‚úì Route order saved successfully!</div>
    }
</div>

@code {
    [Parameter]
    public int RouteId { get; set; }

    private string routeNumber = "";
    private List<DeliveryStop> deliveryStops = new();
    private DeliveryStop? selectedStop;
    private bool showSaveMessage = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadRoute();
    }

    private async Task LoadRoute()
    {
        // TODO: Load from API
        await Task.Delay(100);
        
        routeNumber = "ROUTE-001";
        deliveryStops = new List<DeliveryStop>
        {
            new DeliveryStop
            {
                Id = 1,
                DeliveryRouteId = RouteId,
                SequenceNumber = 1,
                DeliveryAddress = "123 Main St, City",
                ContactName = "Customer A",
                ContactPhone = "+1234567890",
                Status = "Pending"
            },
            new DeliveryStop
            {
                Id = 2,
                DeliveryRouteId = RouteId,
                SequenceNumber = 2,
                DeliveryAddress = "456 Oak Ave, Town",
                ContactName = "Customer B",
                ContactPhone = "+0987654321",
                Status = "Pending"
            },
            new DeliveryStop
            {
                Id = 3,
                DeliveryRouteId = RouteId,
                SequenceNumber = 3,
                DeliveryAddress = "789 Pine Rd, Village",
                ContactName = "Customer C",
                ContactPhone = "+1122334455",
                Status = "Pending"
            }
        };
    }

    private void SelectStop(DeliveryStop stop)
    {
        selectedStop = stop;
    }

    private void MoveUp(int index)
    {
        if (index > 0)
        {
            var temp = deliveryStops[index];
            deliveryStops[index] = deliveryStops[index - 1];
            deliveryStops[index - 1] = temp;
            
            // Update sequence numbers
            UpdateSequenceNumbers();
        }
    }

    private void MoveDown(int index)
    {
        if (index < deliveryStops.Count - 1)
        {
            var temp = deliveryStops[index];
            deliveryStops[index] = deliveryStops[index + 1];
            deliveryStops[index + 1] = temp;
            
            // Update sequence numbers
            UpdateSequenceNumbers();
        }
    }

    private void UpdateSequenceNumbers()
    {
        for (int i = 0; i < deliveryStops.Count; i++)
        {
            deliveryStops[i].SequenceNumber = i + 1;
        }
    }

    private async Task SaveOrder()
    {
        // TODO: Call API to save new order
        var stopIds = deliveryStops.Select(s => s.Id).ToList();
        
        await Task.Delay(500);
        
        showSaveMessage = true;
        StateHasChanged();
        
        await Task.Delay(3000);
        showSaveMessage = false;
        StateHasChanged();
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/delivery-routes");
    }
}

