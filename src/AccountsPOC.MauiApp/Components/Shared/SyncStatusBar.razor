@using AccountsPOC.MauiApp.Services
@inject ISyncService SyncService
@implements IDisposable

<div class="sync-status-bar">
    <div class="connection-status">
        @if (isOnline)
        {
            <span class="status-icon online" title="Online">ðŸ“¶</span>
        }
        else
        {
            <span class="status-icon offline" title="Offline">ðŸ“µ</span>
        }
        <span class="status-text">@(isOnline ? "Online" : "Offline")</span>
    </div>

    <div class="sync-actions">
        @if (pendingChanges > 0)
        {
            <span class="pending-badge" title="@pendingChanges pending changes">@pendingChanges</span>
        }

        @if (isSyncing)
        {
            <button class="sync-button syncing" disabled title="Syncing...">
                <span class="spinner">âŸ³</span>
            </button>
        }
        else
        {
            <button class="sync-button" @onclick="ManualSync" disabled="@(!isOnline)" title="Manual Sync">
                <span>ðŸ”„</span>
            </button>
        }
    </div>

    @if (!string.IsNullOrEmpty(syncMessage))
    {
        <div class="sync-message @syncMessageType">
            @syncMessage
        </div>
    }
</div>

@code {
    private bool isOnline;
    private bool isSyncing;
    private int pendingChanges;
    private string? syncMessage;
    private string syncMessageType = "";
    private System.Threading.Timer? statusTimer;

    protected override async Task OnInitializedAsync()
    {
        await UpdateStatus();

        // Update status every 5 seconds
        statusTimer = new System.Threading.Timer(async _ =>
        {
            await InvokeAsync(async () =>
            {
                await UpdateStatus();
                StateHasChanged();
            });
        }, null, TimeSpan.FromSeconds(5), TimeSpan.FromSeconds(5));
    }

    private async Task UpdateStatus()
    {
        isOnline = await SyncService.IsOnlineAsync();
        var status = await SyncService.GetSyncStatusAsync();
        pendingChanges = status.PendingChanges;

        if (status.LastSyncTime.HasValue)
        {
            var timeSinceSync = DateTime.UtcNow - status.LastSyncTime.Value;
            if (timeSinceSync.TotalMinutes < 1)
            {
                syncMessage = "Synced just now";
            }
            else if (timeSinceSync.TotalMinutes < 60)
            {
                syncMessage = $"Synced {(int)timeSinceSync.TotalMinutes}m ago";
            }
            else if (timeSinceSync.TotalHours < 24)
            {
                syncMessage = $"Synced {(int)timeSinceSync.TotalHours}h ago";
            }
            else
            {
                syncMessage = $"Synced {(int)timeSinceSync.TotalDays}d ago";
            }
            syncMessageType = "success";
        }

        if (!string.IsNullOrEmpty(status.LastError))
        {
            syncMessage = $"Sync error: {status.LastError}";
            syncMessageType = "error";
        }
    }

    private async Task ManualSync()
    {
        if (!isOnline || isSyncing)
        {
            return;
        }

        isSyncing = true;
        syncMessage = "Syncing...";
        syncMessageType = "info";
        StateHasChanged();

        try
        {
            var success = await SyncService.SyncDataAsync();
            
            if (success)
            {
                syncMessage = "Sync completed successfully";
                syncMessageType = "success";
            }
            else
            {
                syncMessage = "Sync failed. Please try again.";
                syncMessageType = "error";
            }

            await UpdateStatus();
        }
        catch (Exception ex)
        {
            syncMessage = $"Sync error: {ex.Message}";
            syncMessageType = "error";
        }
        finally
        {
            isSyncing = false;
            StateHasChanged();

            // Clear message after 3 seconds
            await Task.Delay(3000);
            syncMessage = null;
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        statusTimer?.Dispose();
    }
}

<style>
    .sync-status-bar {
