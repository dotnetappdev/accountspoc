        animation: slideDown 0.3s ease;
    }

    .sync-message.success {
        background: #51cf66;
        color: white;
    }

    .sync-message.error {
        background: #ff6b6b;
        color: white;
    }

    .sync-message.info {
        background: #339af0;
        color: white;
    }

    @keyframes spin {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }

    @keyframes pulse {
        0%, 100% {
            opacity: 1;
        }
        50% {
            opacity: 0.6;
        }
    }

    @keyframes slideDown {
        from {
            opacity: 0;
            transform: translateX(-50%) translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateX(-50%) translateY(0);
        }
    }
</style>
