@page "/bank-accounts"
@using System.Net.Http.Json
@using AccountsPOC.BlazorApp.Models
@inject HttpClient Http
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Bank Accounts</PageTitle>

<div class="container-fluid">
    <h1 class="mb-4">Bank Accounts</h1>

    <div class="row mb-3">
        <div class="col">
            <button class="btn btn-primary" @onclick="ShowAddForm">
                <i class="bi bi-plus-circle"></i> Add New Bank Account
            </button>
        </div>
    </div>

    @if (showForm)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5>@(editingAccount != null ? "Edit" : "Add") Bank Account</h5>
            </div>
            <div class="card-body">
                <EditForm Model="currentAccount" OnValidSubmit="SaveBankAccount">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Account Name</label>
                            <InputText class="form-control" @bind-Value="currentAccount.AccountName" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Account Number</label>
                            <InputText class="form-control" @bind-Value="currentAccount.AccountNumber" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Bank Name</label>
                            <InputText class="form-control" @bind-Value="currentAccount.BankName" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Branch Code</label>
                            <InputText class="form-control" @bind-Value="currentAccount.BranchCode" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Balance</label>
                            <InputNumber class="form-control" @bind-Value="currentAccount.Balance" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Currency</label>
                            <InputText class="form-control" @bind-Value="currentAccount.Currency" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-check-label">
                            <InputCheckbox class="form-check-input" @bind-Value="currentAccount.IsActive" />
                            Active
                        </label>
                    </div>
                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-secondary" @onclick="CancelForm">Cancel</button>
                </EditForm>
            </div>
        </div>
    }

    @if (loading)
    {
        <p><em>Loading...</em></p>
    }
    else if (bankAccounts == null || !bankAccounts.Any())
    {
        <div class="alert alert-info">No bank accounts found. Add one to get started.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Account Name</th>
                        <th>Account Number</th>
                        <th>Bank Name</th>
                        <th>Branch Code</th>
                        <th>Balance</th>
                        <th>Currency</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var account in bankAccounts)
                    {
                        <tr>
                            <td>@account.AccountName</td>
                            <td>@account.AccountNumber</td>
                            <td>@account.BankName</td>
                            <td>@account.BranchCode</td>
                            <td>@account.Balance.ToString("C")</td>
                            <td>@account.Currency</td>
                            <td>
                                @if (account.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-sm btn-warning" @onclick="() => EditBankAccount(account)">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteBankAccount(account.Id)">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<BankAccount>? bankAccounts;
    private BankAccount currentAccount = new() { AccountName = "", AccountNumber = "", BankName = "", Currency = "USD" };
    private BankAccount? editingAccount;
    private bool showForm = false;
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadBankAccounts();
    }

    private async Task LoadBankAccounts()
    {
        loading = true;
        try
        {
            bankAccounts = await Http.GetFromJsonAsync<List<BankAccount>>("api/BankAccounts");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading bank accounts: {ex.Message}");
            bankAccounts = new List<BankAccount>();
        }
        loading = false;
    }

    private void ShowAddForm()
    {
        currentAccount = new() { AccountName = "", AccountNumber = "", BankName = "", Currency = "USD", IsActive = true };
        editingAccount = null;
        showForm = true;
    }

    private void EditBankAccount(BankAccount account)
    {
        editingAccount = account;
        currentAccount = new BankAccount
        {
            Id = account.Id,
            AccountName = account.AccountName,
            AccountNumber = account.AccountNumber,
            BankName = account.BankName,
            BranchCode = account.BranchCode,
            Balance = account.Balance,
            Currency = account.Currency,
            IsActive = account.IsActive,
            CreatedDate = account.CreatedDate,
            LastModifiedDate = account.LastModifiedDate
        };
        showForm = true;
    }

    private async Task SaveBankAccount()
    {
        try
        {
            if (editingAccount != null)
            {
                await Http.PutAsJsonAsync($"api/BankAccounts/{currentAccount.Id}", currentAccount);
            }
            else
            {
                await Http.PostAsJsonAsync("api/BankAccounts", currentAccount);
            }
            
            showForm = false;
            await LoadBankAccounts();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving bank account: {ex.Message}");
        }
    }

    private async Task DeleteBankAccount(int id)
    {
        if (confirm("Are you sure you want to delete this bank account?"))
        {
            try
            {
                await Http.DeleteAsync($"api/BankAccounts/{id}");
                await LoadBankAccounts();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error deleting bank account: {ex.Message}");
            }
        }
    }

    private void CancelForm()
    {
        showForm = false;
        editingAccount = null;
    }

    private bool confirm(string message)
    {
        // In a real app, use a proper confirmation dialog
        return true;
    }
}
