@page "/bank-accounts"
@using System.Net.Http.Json
@using AccountsPOC.BlazorApp.Models
@using AccountsPOC.BlazorApp.Components.Shared
@inject HttpClient Http
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Bank Accounts</PageTitle>

<div class="container-fluid modern-page">
    <div class="page-header">
        <div>
            <h1 class="page-title">
                <i class="bi bi-bank"></i> Bank Accounts
            </h1>
            <p class="page-subtitle">Manage your banking connections</p>
        </div>
        <button class="btn-gradient btn-primary" @onclick="ShowAddForm">
            <i class="bi bi-plus-circle"></i> Add New Account
        </button>
    </div>

    @if (loading)
    {
        <div class="loading-card">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Loading accounts...</p>
        </div>
    }
    else if (bankAccounts == null || !bankAccounts.Any())
    {
        <div class="empty-state">
            <i class="bi bi-inbox"></i>
            <h3>No bank accounts yet</h3>
            <p>Add your first bank account to get started</p>
        </div>
    }
    else
    {
        <div class="accounts-grid">
            @foreach (var account in bankAccounts)
            {
                <div class="account-card">
                    <div class="account-card-header">
                        <div class="account-icon">
                            <i class="bi bi-bank2"></i>
                        </div>
                        <span class="status-badge @(account.IsActive ? "status-active" : "status-inactive")">
                            @(account.IsActive ? "Active" : "Inactive")
                        </span>
                    </div>
                    <div class="account-card-body">
                        <h4 class="account-name">@account.AccountName</h4>
                        <p class="bank-name">@account.BankName</p>
                        <div class="account-details">
                            <div class="detail-item">
                                <span class="label">Account #:</span>
                                <span class="value">@account.AccountNumber</span>
                            </div>
                            @if (!string.IsNullOrEmpty(account.BranchCode))
                            {
                                <div class="detail-item">
                                    <span class="label">Branch:</span>
                                    <span class="value">@account.BranchCode</span>
                                </div>
                            }
                            <div class="detail-item">
                                <span class="label">Currency:</span>
                                <span class="value">@account.Currency</span>
                            </div>
                            @if (account.VatTaxRate.HasValue)
                            {
                                <div class="detail-item">
                                    <span class="label">VAT/Tax Rate:</span>
                                    <span class="value">@account.VatTaxRate.Value.ToString("0.##")%</span>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(account.Region))
                            {
                                <div class="detail-item">
                                    <span class="label">Region:</span>
                                    <span class="value">@account.Region</span>
                                </div>
                            }
                        </div>
                        <div class="balance-section">
                            <span class="balance-label">Current Balance</span>
                            <h3 class="balance-amount">@account.Balance.ToString("C")</h3>
                        </div>
                    </div>
                    <div class="account-card-footer">
                        <button class="btn-action btn-edit" @onclick="() => EditBankAccount(account)" title="Edit Account">
                            <i class="bi bi-pencil"></i> Edit
                        </button>
                        <button class="btn-action btn-delete" @onclick="() => DeleteBankAccount(account.Id)" title="Delete Account">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </div>
                </div>
            }
        </div>
    }
</div>

<ModalDialog Title="@(editingAccount != null ? "Edit Bank Account" : "Add New Bank Account")"
             IsVisible="showForm"
             OnClose="CancelForm"
             Size="lg">
    <Body>
        <EditForm Model="currentAccount" OnValidSubmit="SaveBankAccount">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Account Name</label>
                    <InputText class="form-control" @bind-Value="currentAccount.AccountName" placeholder="Business Checking" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Account Number</label>
                    <InputText class="form-control" @bind-Value="currentAccount.AccountNumber" placeholder="1234567890" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Bank Name</label>
                    <InputText class="form-control" @bind-Value="currentAccount.BankName" placeholder="First National Bank" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Branch Code</label>
                    <InputText class="form-control" @bind-Value="currentAccount.BranchCode" placeholder="001" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Balance</label>
                    <CurrencyInput @bind-Value="currentAccount.Balance" Currency="@currentAccount.Currency" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Currency</label>
                    <InputSelect class="form-select" @bind-Value="currentAccount.Currency">
                        <option value="USD">USD - US Dollar</option>
                        <option value="EUR">EUR - Euro</option>
                        <option value="GBP">GBP - British Pound</option>
                        <option value="AUD">AUD - Australian Dollar</option>
                        <option value="CAD">CAD - Canadian Dollar</option>
                    </InputSelect>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">VAT/Tax Rate (%)</label>
                    <InputNumber class="form-control" @bind-Value="currentAccount.VatTaxRate" placeholder="20.0" step="0.01" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Region</label>
                    <InputText class="form-control" @bind-Value="currentAccount.Region" placeholder="e.g., UK, EU, North America" />
                </div>
            </div>
            <div class="mb-3 form-check">
                <InputCheckbox class="form-check-input" id="isActive" @bind-Value="currentAccount.IsActive" />
                <label class="form-check-label" for="isActive">
                    Account is active
                </label>
            </div>
            <div class="modal-actions">
                <button type="submit" class="btn-gradient btn-success">
                    <i class="bi bi-check-circle"></i> Save Account
                </button>
                <button type="button" class="btn btn-secondary" @onclick="CancelForm">
                    Cancel
                </button>
            </div>
        </EditForm>
    </Body>
</ModalDialog>

