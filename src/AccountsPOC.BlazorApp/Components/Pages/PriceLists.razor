@page "/price-lists"
@using System.Net.Http.Json
@using AccountsPOC.BlazorApp.Models
@inject HttpClient Http
@rendermode InteractiveServer

<PageTitle>Price Lists</PageTitle>

<div class="container-fluid">
    <h1 class="mb-4">Price Lists Management</h1>

    <div class="row mb-3">
        <div class="col">
            <button class="btn btn-primary" @onclick="ShowAddForm">
                <i class="bi bi-plus-circle"></i> Create New Price List
            </button>
        </div>
    </div>

    @if (showForm)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5>@(editingPriceList != null ? "Edit" : "Create") Price List</h5>
            </div>
            <div class="card-body">
                <EditForm Model="currentPriceList" OnValidSubmit="SavePriceList">
                    <FluentValidationValidator />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Price List Code <span class="text-danger">*</span></label>
                            <InputText class="form-control" @bind-Value="currentPriceList.PriceListCode" />
                            <ValidationMessage For="@(() => currentPriceList.PriceListCode)" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Description <span class="text-danger">*</span></label>
                            <InputText class="form-control" @bind-Value="currentPriceList.Description" />
                            <ValidationMessage For="@(() => currentPriceList.Description)" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Currency</label>
                            <InputText class="form-control" @bind-Value="currentPriceList.Currency" />
                            <ValidationMessage For="@(() => currentPriceList.Currency)" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Effective Date</label>
                            <InputDate class="form-control" @bind-Value="currentPriceList.EffectiveDate" />
                            <ValidationMessage For="@(() => currentPriceList.EffectiveDate)" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Expiry Date</label>
                            <InputDate class="form-control" @bind-Value="currentPriceList.ExpiryDate" />
                            <ValidationMessage For="@(() => currentPriceList.ExpiryDate)" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-check-label">
                                <InputCheckbox class="form-check-input" @bind-Value="currentPriceList.IsDefault" />
                                Default Price List
                            </label>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-check-label">
                                <InputCheckbox class="form-check-input" @bind-Value="currentPriceList.IsActive" />
                                Active
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-secondary" @onclick="CancelForm">Cancel</button>
                </EditForm>
            </div>
        </div>
    }

    @if (loading)
    {
        <p><em>Loading...</em></p>
    }
    else if (priceLists == null || !priceLists.Any())
    {
        <div class="alert alert-info">No price lists found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Code</th>
                        <th>Description</th>
                        <th>Currency</th>
                        <th>Effective Date</th>
                        <th>Expiry Date</th>
                        <th>Default</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var priceList in priceLists)
                    {
                        <tr>
                            <td>@priceList.PriceListCode</td>
                            <td>@priceList.Description</td>
                            <td>@priceList.Currency</td>
                            <td>@priceList.EffectiveDate.ToShortDateString()</td>
                            <td>@priceList.ExpiryDate?.ToShortDateString()</td>
                            <td>
                                @if (priceList.IsDefault)
                                {
                                    <span class="badge bg-primary">Default</span>
                                }
                            </td>
                            <td>
                                @if (priceList.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-sm btn-warning" @onclick="() => EditPriceList(priceList)">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeletePriceList(priceList.Id)">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<PriceList>? priceLists;
    private PriceList currentPriceList = new() { PriceListCode = "", Description = "", Currency = "GBP", EffectiveDate = DateTime.Today };
    private PriceList? editingPriceList;
    private bool showForm = false;
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadPriceLists();
    }

    private async Task LoadPriceLists()
    {
        loading = true;
        try
        {
            priceLists = await Http.GetFromJsonAsync<List<PriceList>>("api/PriceLists");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading price lists: {ex.Message}");
            priceLists = new List<PriceList>();
        }
        loading = false;
    }

    private void ShowAddForm()
    {
        currentPriceList = new() { PriceListCode = "", Description = "", Currency = "GBP", EffectiveDate = DateTime.Today, IsActive = true };
        editingPriceList = null;
        showForm = true;
    }

    private void EditPriceList(PriceList priceList)
    {
        editingPriceList = priceList;
        currentPriceList = new PriceList
        {
            Id = priceList.Id,
            PriceListCode = priceList.PriceListCode,
            Description = priceList.Description,
            Currency = priceList.Currency,
            EffectiveDate = priceList.EffectiveDate,
            ExpiryDate = priceList.ExpiryDate,
            IsDefault = priceList.IsDefault,
            IsActive = priceList.IsActive,
            CreatedDate = priceList.CreatedDate,
            LastModifiedDate = priceList.LastModifiedDate
        };
        showForm = true;
    }

    private async Task SavePriceList()
    {
        try
        {
            if (editingPriceList != null)
            {
                await Http.PutAsJsonAsync($"api/PriceLists/{currentPriceList.Id}", currentPriceList);
            }
            else
            {
                await Http.PostAsJsonAsync("api/PriceLists", currentPriceList);
            }
            
            showForm = false;
            await LoadPriceLists();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving price list: {ex.Message}");
        }
    }

    private async Task DeletePriceList(int id)
    {
        try
        {
            await Http.DeleteAsync($"api/PriceLists/{id}");
            await LoadPriceLists();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting price list: {ex.Message}");
        }
    }

    private void CancelForm()
    {
        showForm = false;
        editingPriceList = null;
    }
}
