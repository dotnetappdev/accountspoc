@page "/branding"
@attribute [Authorize]
@using AccountsPOC.BlazorApp.Models
@using Microsoft.AspNetCore.Components.Forms
@inject HttpClient Http
@inject IJSRuntime JS

<PageTitle>Branding Management</PageTitle>

<div class="card glass">
    <div class="card-header">
        <h3 class="text-gradient">
            <i class="bi bi-palette"></i> Branding Management
        </h3>
        <p class="text-muted mb-0">Manage your company logos and graphics for web, email, and print materials</p>
    </div>
    <div class="card-body">
        @if (loading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
                <p class="mt-3">Loading branding assets...</p>
            </div>
        }
        else
        {
            <div class="mb-4">
                <button class="btn btn-primary btn-icon" @onclick="ShowUploadModal">
                    <i class="bi bi-upload"></i> Upload New Asset
                </button>
            </div>

            <!-- Asset Type Tabs -->
            <div class="nav-tabs-wrapper mb-4">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <button class="nav-link @(selectedAssetType == "All" ? "active" : "")" @onclick="@(() => selectedAssetType = "All")">
                            All Assets
                        </button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link @(selectedAssetType == "Logo" ? "active" : "")" @onclick="@(() => selectedAssetType = "Logo")">
                            <i class="bi bi-badge-tm"></i> Logo
                        </button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link @(selectedAssetType == "EmailHeader" ? "active" : "")" @onclick="@(() => selectedAssetType = "EmailHeader")">
                            <i class="bi bi-envelope"></i> Email Header
                        </button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link @(selectedAssetType == "EmailFooter" ? "active" : "")" @onclick="@(() => selectedAssetType = "EmailFooter")">
                            <i class="bi bi-envelope-at"></i> Email Footer
                        </button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link @(selectedAssetType == "InvoiceLogo" ? "active" : "")" @onclick="@(() => selectedAssetType = "InvoiceLogo")">
                            <i class="bi bi-file-earmark-pdf"></i> Invoice Logo
                        </button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link @(selectedAssetType == "Favicon" ? "active" : "")" @onclick="@(() => selectedAssetType = "Favicon")">
                            <i class="bi bi-globe"></i> Favicon
                        </button>
                    </li>
                </ul>
            </div>

            <!-- Assets Grid -->
            <div class="row g-4">
                @foreach (var asset in FilteredAssets)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="branding-asset-card glass @(asset.IsActive ? "active" : "")">
                            <div class="asset-preview">
                                @if (!string.IsNullOrEmpty(asset.ImageData))
                                {
                                    <img src="@GetImageSrc(asset)" alt="@asset.AltText" class="asset-image" />
                                }
                                else
                                {
                                    <div class="asset-placeholder">
                                        <i class="bi bi-image"></i>
                                        <p>No preview available</p>
                                    </div>
                                }
                                @if (asset.IsActive)
                                {
                                    <span class="badge badge-success active-badge">
                                        <i class="bi bi-check-circle"></i> Active
                                    </span>
                                }
                            </div>
                            <div class="asset-details">
                                <h5 class="asset-name">@asset.AssetName</h5>
                                <div class="asset-meta">
                                    <span class="badge badge-info">@asset.AssetType</span>
                                    @if (!string.IsNullOrEmpty(asset.UsageContext))
                                    {
                                        <span class="badge badge-secondary">@asset.UsageContext</span>
                                    }
                                </div>
                                @if (!string.IsNullOrEmpty(asset.Description))
                                {
                                    <p class="asset-description">@asset.Description</p>
                                }
                                <div class="asset-info">
                                    @if (asset.Width.HasValue && asset.Height.HasValue)
                                    {
                                        <small><i class="bi bi-aspect-ratio"></i> @asset.Width x @asset.Height px</small>
                                    }
                                    @if (asset.FileSizeBytes.HasValue)
                                    {
                                        <small><i class="bi bi-file-earmark"></i> @FormatFileSize(asset.FileSizeBytes.Value)</small>
                                    }
                                </div>
                                <div class="asset-actions mt-3">
                                    @if (!asset.IsActive)
                                    {
                                        <button class="btn btn-sm btn-success" @onclick="@(() => SetActive(asset.Id))">
                                            <i class="bi bi-check-circle"></i> Set Active
                                        </button>
                                    }
                                    <button class="btn btn-sm btn-primary" @onclick="@(() => EditAsset(asset))">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                    <button class="btn btn-sm btn-danger" @onclick="@(() => DeleteAsset(asset.Id))">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (!FilteredAssets.Any())
            {
                <div class="alert alert-info mt-4">
                    <i class="bi bi-info-circle"></i> No branding assets found. Upload your first asset to get started!
                </div>
            }
        }
    </div>
</div>

<!-- Upload/Edit Modal -->
@if (showModal)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show d-block" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content glass">
                <div class="modal-header">
                    <h5 class="modal-title text-gradient">
                        @(isEditing ? "Edit Branding Asset" : "Upload New Branding Asset")
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="uploadRequest" OnValidSubmit="HandleUpload">
                        <DataAnnotationsValidator />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Asset Type <span class="text-danger">*</span></label>
                                <select class="form-select" @bind="uploadRequest.AssetType">
                                    <option value="">Select type...</option>
                                    <option value="Logo">Logo</option>
                                    <option value="EmailHeader">Email Header</option>
                                    <option value="EmailFooter">Email Footer</option>
                                    <option value="InvoiceLogo">Invoice Logo</option>
                                    <option value="Favicon">Favicon</option>
                                    <option value="Banner">Banner</option>
                                    <option value="Watermark">Watermark</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Asset Name <span class="text-danger">*</span></label>
                                <InputText class="form-control" @bind-Value="uploadRequest.AssetName" placeholder="e.g., Primary Company Logo" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Usage Context</label>
                                <select class="form-select" @bind="uploadRequest.UsageContext">
                                    <option value="">Select context...</option>
                                    <option value="Web">Web</option>
                                    <option value="Email">Email</option>
                                    <option value="Print">Print</option>
                                    <option value="Mobile">Mobile</option>
                                    <option value="All">All</option>
                                </select>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Display Order</label>
                                <InputNumber class="form-control" @bind-Value="uploadRequest.DisplayOrder" />
                            </div>

                            <div class="col-12">
                                <label class="form-label">Description</label>
                                <InputTextArea class="form-control" @bind-Value="uploadRequest.Description" rows="2" />
                            </div>

                            <div class="col-12">
                                <label class="form-label">Alt Text (for accessibility)</label>
                                <InputText class="form-control" @bind-Value="uploadRequest.AltText" placeholder="Describe the image for screen readers" />
                            </div>

                            <div class="col-12">
                                <div class="form-check">
                                    <InputCheckbox class="form-check-input" @bind-Value="uploadRequest.IsActive" id="isActive" />
                                    <label class="form-check-label" for="isActive">
                                        Set as active (will deactivate other assets of the same type)
                                    </label>
                                </div>
                            </div>

                            @if (!isEditing)
                            {
                                <div class="col-12">
                                    <label class="form-label">Upload Image <span class="text-danger">*</span></label>
                                    <div class="upload-area @(isDragOver ? "drag-over" : "")" 
                                         @ondrop="HandleDrop" 
                                         @ondragover:preventDefault 
                                         @ondragover="HandleDragOver" 
                                         @ondragleave="HandleDragLeave">
                                        <InputFile OnChange="HandleFileSelected" accept="image/*" class="d-none" id="fileUpload" />
                                        <label for="fileUpload" class="upload-label">
                                            <i class="bi bi-cloud-upload fs-1"></i>
                                            <p class="mb-1">
                                                <strong>Choose a file</strong> or drag it here
                                            </p>
                                            <small class="text-muted">PNG, JPG, GIF, SVG up to 5MB</small>
                                        </label>
                                    </div>
                                    @if (!string.IsNullOrEmpty(uploadRequest.FileName))
                                    {
                                        <div class="alert alert-success mt-3">
                                            <i class="bi bi-check-circle"></i> File selected: <strong>@uploadRequest.FileName</strong>
                                            @if (!string.IsNullOrEmpty(uploadRequest.MimeType))
                                            {
                                                <span class="badge badge-info ms-2">@uploadRequest.MimeType</span>
                                            }
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(previewUrl))
                                    {
                                        <div class="preview-container mt-3">
                                            <p class="fw-bold">Preview:</p>
                                            <img src="@previewUrl" alt="Preview" class="img-thumbnail" style="max-height: 200px;" />
                                        </div>
                                    }
                                </div>
                            }
                        </div>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger mt-3">
                                <i class="bi bi-exclamation-triangle"></i> @errorMessage
                            </div>
                        }

                        <div class="modal-footer mt-4">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                            <button type="submit" class="btn btn-primary" disabled="@uploading">
                                @if (uploading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                <i class="bi bi-upload"></i> @(isEditing ? "Update" : "Upload")
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<BrandingAsset> assets = new();
    private string selectedAssetType = "All";
    private bool loading = true;
    private bool showModal = false;
    private bool isEditing = false;
    private bool uploading = false;
    private bool isDragOver = false;
    private string? errorMessage;
    private string? previewUrl;

    private BrandingAssetUploadRequest uploadRequest = new();
    private int? editingId;

    private IEnumerable<BrandingAsset> FilteredAssets => 
        selectedAssetType == "All" 
            ? assets 
            : assets.Where(a => a.AssetType == selectedAssetType);

    protected override async Task OnInitializedAsync()
    {
        await LoadAssets();
    }

    private async Task LoadAssets()
    {
        loading = true;
        try
        {
            assets = await Http.GetFromJsonAsync<List<BrandingAsset>>("http://localhost:5001/api/BrandingAssets") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading branding assets: {ex.Message}");
        }
        finally
        {
            loading = false;
        }
    }

    private void ShowUploadModal()
    {
        uploadRequest = new BrandingAssetUploadRequest { IsActive = true, DisplayOrder = 0 };
        isEditing = false;
        editingId = null;
        errorMessage = null;
        previewUrl = null;
        showModal = true;
    }

    private void EditAsset(BrandingAsset asset)
    {
        uploadRequest = new BrandingAssetUploadRequest
        {
            AssetType = asset.AssetType,
            AssetName = asset.AssetName,
            FileName = asset.FileName,
            MimeType = asset.MimeType,
            ImageDataBase64 = asset.ImageData ?? "",
            AltText = asset.AltText,
            Width = asset.Width,
            Height = asset.Height,
            IsActive = asset.IsActive,
            DisplayOrder = asset.DisplayOrder,
            Description = asset.Description,
            UsageContext = asset.UsageContext
        };
        isEditing = true;
        editingId = asset.Id;
        errorMessage = null;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        uploadRequest = new();
        isEditing = false;
        editingId = null;
        previewUrl = null;
    }

    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        errorMessage = null;

        if (file.Size > 5 * 1024 * 1024)
        {
            errorMessage = "File size exceeds 5MB limit";
            return;
        }

        try
        {
            var buffer = new byte[file.Size];
            await file.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024).ReadAsync(buffer);
            
            uploadRequest.ImageDataBase64 = Convert.ToBase64String(buffer);
            uploadRequest.FileName = file.Name;
            uploadRequest.MimeType = file.ContentType;

            // Create preview URL
            previewUrl = $"data:{file.ContentType};base64,{uploadRequest.ImageDataBase64}";

            // Extract dimensions if possible (simplified - in production, use proper image library)
            // For now, we'll skip dimension extraction
        }
        catch (Exception ex)
        {
            errorMessage = $"Error reading file: {ex.Message}";
        }
    }

    private void HandleDragOver()
    {
        isDragOver = true;
    }

    private void HandleDragLeave()
    {
        isDragOver = false;
    }

    private void HandleDrop()
    {
        isDragOver = false;
    }

    private async Task HandleUpload()
    {
        if (string.IsNullOrEmpty(uploadRequest.ImageDataBase64) && !isEditing)
        {
            errorMessage = "Please select an image file";
            return;
        }

        uploading = true;
        errorMessage = null;

        try
        {
            if (isEditing && editingId.HasValue)
            {
                // Update existing asset
                var asset = assets.First(a => a.Id == editingId.Value);
                asset.AssetName = uploadRequest.AssetName;
                asset.AssetType = uploadRequest.AssetType;
                asset.AltText = uploadRequest.AltText;
                asset.IsActive = uploadRequest.IsActive;
                asset.DisplayOrder = uploadRequest.DisplayOrder;
                asset.Description = uploadRequest.Description;
                asset.UsageContext = uploadRequest.UsageContext;

                var response = await Http.PutAsJsonAsync($"http://localhost:5001/api/BrandingAssets/{editingId.Value}", asset);
                if (!response.IsSuccessStatusCode)
                {
                    errorMessage = "Failed to update asset";
                    return;
                }
            }
            else
            {
                // Upload new asset
                var response = await Http.PostAsJsonAsync("http://localhost:5001/api/BrandingAssets/upload", uploadRequest);
                if (!response.IsSuccessStatusCode)
                {
                    errorMessage = "Failed to upload asset";
                    return;
                }
            }

            await LoadAssets();
            CloseModal();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            uploading = false;
        }
    }

    private async Task SetActive(int id)
    {
        try
        {
            var response = await Http.PostAsync($"http://localhost:5001/api/BrandingAssets/{id}/set-active", null);
            if (response.IsSuccessStatusCode)
            {
                await LoadAssets();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error setting active: {ex.Message}");
        }
    }

    private async Task DeleteAsset(int id)
    {
        if (!await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this branding asset?"))
        {
            return;
        }

        try
        {
            var response = await Http.DeleteAsync($"http://localhost:5001/api/BrandingAssets/{id}");
            if (response.IsSuccessStatusCode)
            {
                await LoadAssets();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting asset: {ex.Message}");
        }
    }

    private string GetImageSrc(BrandingAsset asset)
    {
        if (string.IsNullOrEmpty(asset.ImageData))
            return "";

        var mimeType = asset.MimeType ?? "image/png";
        return $"data:{mimeType};base64,{asset.ImageData}";
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}
