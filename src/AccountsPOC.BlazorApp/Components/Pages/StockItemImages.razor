@page "/stock-item-images/{StockItemId:int}"
@using System.Net.Http.Json
@using AccountsPOC.BlazorApp.Models
@inject HttpClient Http
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Stock Item Images</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="mt-4">
    <MudBreadcrumbs Items="_breadcrumbs" />
    
    <MudText Typo="Typo.h4" Class="mb-4">
        <MudIcon Icon="@Icons.Material.Filled.Image" Class="mr-2" />
        Stock Item Images
    </MudText>

    @if (stockItem != null)
    {
        <MudAlert Severity="Severity.Info" Class="mb-4">
            Managing images for: <strong>@stockItem.StockCode - @stockItem.Description</strong>
        </MudAlert>
    }

    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="ShowAddForm" Class="mb-4">
        <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-1" />
        Add Image
    </MudButton>

    @if (showForm)
    {
        <MudCard Class="mb-4">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">@(editingImage != null ? "Edit Image" : "Add New Image")</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudGrid>
                    <MudItem xs="12">
                        <MudTextField @bind-Value="imageForm.ImageUrl" Label="Image URL" Required="true" 
                                      HelperText="Enter the URL to the image" />
                    </MudItem>
                    <MudItem xs="12">
                        <MudTextField @bind-Value="imageForm.Caption" Label="Caption" />
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <MudNumericField @bind-Value="imageForm.DisplayOrder" Label="Display Order" 
                                         HelperText="Lower numbers appear first" />
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <MudSwitch @bind-Value="imageForm.IsPrimaryImage" Label="Set as Primary Image" Color="Color.Primary" />
                    </MudItem>
                    <MudItem xs="12">
                        <MudTextField @bind-Value="imageForm.ImageData" Label="Base64 Image Data (Optional)" 
                                      Lines="3" HelperText="Paste base64 encoded image data for embedded storage" />
                    </MudItem>
                </MudGrid>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="SaveImage">
                    <MudIcon Icon="@Icons.Material.Filled.Save" Class="mr-1" />
                    Save
                </MudButton>
                <MudButton Variant="Variant.Outlined" OnClick="CancelForm">Cancel</MudButton>
            </MudCardActions>
        </MudCard>
    }

    @if (loading)
    {
        <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
    }
    else if (images == null || !images.Any())
    {
        <MudAlert Severity="Severity.Info">
            No images found for this stock item. Add one to get started.
        </MudAlert>
    }
    else
    {
        <MudGrid>
            @foreach (var image in images.OrderBy(i => i.DisplayOrder))
            {
                <MudItem xs="12" sm="6" md="4" lg="3">
                    <MudCard>
                        @if (!string.IsNullOrEmpty(image.ImageUrl))
                        {
                            <MudCardMedia Image="@image.ImageUrl" Height="200" />
                        }
                        else if (!string.IsNullOrEmpty(image.ImageData))
                        {
                            <MudCardMedia Image="@($"data:image/jpeg;base64,{image.ImageData}")" Height="200" />
                        }
                        <MudCardContent>
                            <MudText Typo="Typo.body2">
                                @if (image.IsPrimaryImage)
                                {
                                    <MudChip T="string" Size="Size.Small" Color="Color.Success" Icon="@Icons.Material.Filled.Star">Primary</MudChip>
                                }
                            </MudText>
                            @if (!string.IsNullOrEmpty(image.Caption))
                            {
                                <MudText Typo="Typo.body2">@image.Caption</MudText>
                            }
                            <MudText Typo="Typo.caption">Order: @image.DisplayOrder</MudText>
                        </MudCardContent>
                        <MudCardActions>
                            <MudIconButton Icon="@Icons.Material.Filled.Edit" 
                                         Color="Color.Warning" 
                                         Size="Size.Small" 
                                         OnClick="@(() => EditImage(image))" />
                            <MudIconButton Icon="@Icons.Material.Filled.Delete" 
                                         Color="Color.Error" 
                                         Size="Size.Small" 
                                         OnClick="@(() => DeleteImage(image.Id))" />
                        </MudCardActions>
                    </MudCard>
                </MudItem>
            }
        </MudGrid>
    }
</MudContainer>

@code {
    [Parameter]
    public int StockItemId { get; set; }

    private StockItem? stockItem;
    private List<StockItemImage> images = new();
    private StockItemImageForm imageForm = new();
    private StockItemImage? editingImage;
    private bool showForm = false;
    private bool loading = true;
    private List<BreadcrumbItem> _breadcrumbs = new();

    protected override async Task OnInitializedAsync()
    {
        _breadcrumbs = new List<BreadcrumbItem>
        {
            new BreadcrumbItem("Home", href: "/"),
            new BreadcrumbItem("Stock Items", href: "/stock-items"),
            new BreadcrumbItem("Images", href: null, disabled: true)
        };

        await LoadData();
    }

    private async Task LoadData()
    {
        loading = true;
        try
        {
            stockItem = await Http.GetFromJsonAsync<StockItem>($"api/StockItems/{StockItemId}");
            images = await Http.GetFromJsonAsync<List<StockItemImage>>($"api/StockItemImages/stockitem/{StockItemId}") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading data: {ex.Message}");
        }
        loading = false;
    }

    private void ShowAddForm()
    {
        imageForm = new() { StockItemId = StockItemId, DisplayOrder = images.Count };
        editingImage = null;
        showForm = true;
    }

    private void EditImage(StockItemImage image)
    {
        editingImage = image;
        imageForm = new StockItemImageForm
        {
            Id = image.Id,
            StockItemId = image.StockItemId,
            ImageUrl = image.ImageUrl,
            ImageData = image.ImageData,
            Caption = image.Caption,
            DisplayOrder = image.DisplayOrder,
            IsPrimaryImage = image.IsPrimaryImage
        };
        showForm = true;
    }

    private async Task SaveImage()
    {
        try
        {
            var dto = new
            {
                imageForm.StockItemId,
                imageForm.ImageUrl,
                imageForm.ImageData,
                imageForm.Caption,
                imageForm.DisplayOrder,
                imageForm.IsPrimaryImage
            };

            if (editingImage != null)
            {
                await Http.PutAsJsonAsync($"api/StockItemImages/{imageForm.Id}", dto);
            }
            else
            {
                await Http.PostAsJsonAsync("api/StockItemImages", dto);
            }
            
            showForm = false;
            await LoadData();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving image: {ex.Message}");
        }
    }

    private async Task DeleteImage(int id)
    {
        try
        {
            await Http.DeleteAsync($"api/StockItemImages/{id}");
            await LoadData();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting image: {ex.Message}");
        }
    }

    private void CancelForm()
    {
        showForm = false;
        editingImage = null;
    }

    private class StockItemImageForm
    {
        public int Id { get; set; }
        public int StockItemId { get; set; }
        public string ImageUrl { get; set; } = "";
        public string? ImageData { get; set; }
        public string? Caption { get; set; }
        public int DisplayOrder { get; set; }
        public bool IsPrimaryImage { get; set; }
    }
}
