@page "/"
@inject IJSRuntime JSRuntime

<PageTitle>Dashboard</PageTitle>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Dashboard</h1>
            </div>
            <div class="col-sm-6">
                <div class="float-sm-end">
                    <button class="btn btn-sm btn-primary" @onclick="RefreshData">
                        <i class="bi bi-arrow-clockwise"></i> Refresh
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <!-- Key Metrics Row -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>1,247</h3>
                        <p>Total Stock Items</p>
                    </div>
                    <div class="icon">
                        <i class="bi bi-box-seam"></i>
                    </div>
                    <a href="/stock-items" class="small-box-footer">
                        More info <i class="bi bi-arrow-right-circle"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>348</h3>
                        <p>Sales Orders</p>
                    </div>
                    <div class="icon">
                        <i class="bi bi-cart-check"></i>
                    </div>
                    <a href="/sales-orders" class="small-box-footer">
                        More info <i class="bi bi-arrow-right-circle"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>$284,590</h3>
                        <p>Total Revenue</p>
                    </div>
                    <div class="icon">
                        <i class="bi bi-receipt"></i>
                    </div>
                    <a href="/sales-invoices" class="small-box-footer">
                        More info <i class="bi bi-arrow-right-circle"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>$68,240</h3>
                        <p>Profit (YTD)</p>
                    </div>
                    <div class="icon">
                        <i class="bi bi-graph-up-arrow"></i>
                    </div>
                    <a href="#" class="small-box-footer">
                        More info <i class="bi bi-arrow-right-circle"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Secondary Metrics Row -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <div class="info-box">
                    <span class="info-box-icon bg-info"><i class="bi bi-people"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Total Customers</span>
                        <span class="info-box-number">423</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="info-box">
                    <span class="info-box-icon bg-warning"><i class="bi bi-clock-history"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Pending Orders</span>
                        <span class="info-box-number">28</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="info-box">
                    <span class="info-box-icon bg-danger"><i class="bi bi-exclamation-triangle"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Low Stock Alerts</span>
                        <span class="info-box-number">12</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="info-box">
                    <span class="info-box-icon bg-success"><i class="bi bi-bank2"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Bank Balance</span>
                        <span class="info-box-number">$142,850</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Row -->
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header border-0">
                        <div class="d-flex justify-content-between">
                            <h3 class="card-title">Sales Revenue Trend</h3>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="position-relative mb-4">
                            <canvas id="salesChart" height="200"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header border-0">
                        <h3 class="card-title">Order Status</h3>
                    </div>
                    <div class="card-body">
                        <canvas id="orderStatusChart" height="250"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header border-0">
                        <h3 class="card-title">Inventory Trends</h3>
                    </div>
                    <div class="card-body">
                        <div class="position-relative mb-4">
                            <canvas id="inventoryChart" height="180"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions & Recent Activity -->
        <div class="row">
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="bi bi-lightning-charge"></i> Quick Actions
                        </h3>
                    </div>
                    <div class="card-body p-0">
                        <ul class="nav nav-pills flex-column">
                            <li class="nav-item">
                                <a href="/sales-orders" class="nav-link">
                                    <i class="bi bi-plus-circle text-primary"></i> New Sales Order
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/sales-invoices" class="nav-link">
                                    <i class="bi bi-file-earmark-text text-success"></i> New Invoice
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/products" class="nav-link">
                                    <i class="bi bi-box text-warning"></i> Add Product
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/customers" class="nav-link">
                                    <i class="bi bi-person-plus text-info"></i> New Customer
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="bi bi-clock-history"></i> Recent Activity
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="timeline">
                            <div class="time-label">
                                <span class="bg-success">Today</span>
                            </div>
                            <div>
                                <i class="bi bi-cart-check bg-success"></i>
                                <div class="timeline-item">
                                    <span class="time"><i class="bi bi-clock"></i> 2 hours ago</span>
                                    <h3 class="timeline-header">Sales Order #SO-2024-0348</h3>
                                    <div class="timeline-body">
                                        New order received from Acme Corporation - $12,450
                                    </div>
                                </div>
                            </div>
                            <div>
                                <i class="bi bi-file-earmark-text bg-primary"></i>
                                <div class="timeline-item">
                                    <span class="time"><i class="bi bi-clock"></i> 4 hours ago</span>
                                    <h3 class="timeline-header">Invoice #INV-2024-0891</h3>
                                    <div class="timeline-body">
                                        Invoice generated and sent to TechStart Inc.
                                    </div>
                                </div>
                            </div>
                            <div>
                                <i class="bi bi-exclamation-triangle bg-warning"></i>
                                <div class="timeline-item">
                                    <span class="time"><i class="bi bi-clock"></i> 5 hours ago</span>
                                    <h3 class="timeline-header">Stock Alert</h3>
                                    <div class="timeline-body">
                                        Low stock alert for Product SKU-1234 (12 units remaining)
                                    </div>
                                </div>
                            </div>
                            <div class="time-label">
                                <span class="bg-secondary">Yesterday</span>
                            </div>
                            <div>
                                <i class="bi bi-person-plus bg-info"></i>
                                <div class="timeline-item">
                                    <span class="time"><i class="bi bi-clock"></i> Yesterday</span>
                                    <h3 class="timeline-header">New Customer</h3>
                                    <div class="timeline-body">
                                        GlobalTech Solutions added to customer database
                                    </div>
                                </div>
                            </div>
                            <div>
                                <i class="bi bi-clock bg-gray"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await InitializeCharts();
        }
    }

    private async Task InitializeCharts()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("DashboardCharts.initializeCharts");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error initializing charts: {ex.Message}");
        }
    }

    private async Task RefreshData()
    {
        // Refresh dashboard data
        await Task.CompletedTask;
    }
}
