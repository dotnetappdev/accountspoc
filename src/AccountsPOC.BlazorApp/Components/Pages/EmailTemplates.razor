        height: 2px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        margin: 1rem 0;
    }

    .preview-body {
        background: white;
        padding: 2rem;
        border-radius: 8px;
        min-height: 200px;
    }
</style>

@code {
    private List<EmailTemplate>? templates;
    private EmailTemplate currentTemplate = new();
    private EmailTemplate? editingTemplate;
    private EmailTemplate? previewTemplate;
    private bool loading = true;
    private bool showModal = false;
    private bool showPreview = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadTemplates();
    }

    private async Task LoadTemplates()
    {
        try
        {
            loading = true;
            templates = await Http.GetFromJsonAsync<List<EmailTemplate>>("api/emailtemplates");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading email templates: {ex.Message}");
            templates = new List<EmailTemplate>();
        }
        finally
        {
            loading = false;
        }
    }

    private void ShowAddModal()
    {
        editingTemplate = null;
        currentTemplate = new EmailTemplate
        {
            TenantId = 1,
            IsActive = true,
            CreatedDate = DateTime.UtcNow,
            BodyHtml = @"<!DOCTYPE html>
<html>
<head>
    <style>
        body { font-family: Arial, sans-serif; line-height: 1.6; color: #333; }
        .header { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 20px; text-align: center; }
        .content { padding: 30px; }
        .footer { background: #f8f9fa; padding: 20px; text-align: center; font-size: 12px; color: #6c757d; }
    </style>
</head>
<body>
    <div class='header'>
        <h1>{{CompanyName}}</h1>
    </div>
    <div class='content'>
        <p>Dear {{CustomerName}},</p>
        <p>Your content goes here...</p>
        <p>Best regards,<br>{{CompanyName}}</p>
    </div>
    <div class='footer'>
        <p>&copy; {{Year}} {{CompanyName}}. All rights reserved.</p>
    </div>
</body>
</html>"
        };
        showModal = true;
    }

    private void ShowEditModal(EmailTemplate template)
    {
        editingTemplate = template;
        currentTemplate = new EmailTemplate
        {
            Id = template.Id,
            TenantId = template.TenantId,
            TemplateName = template.TemplateName,
            TemplateCode = template.TemplateCode,
            Subject = template.Subject,
            BodyHtml = template.BodyHtml,
            TriggerEvent = template.TriggerEvent,
            IsActive = template.IsActive,
            CreatedDate = template.CreatedDate,
            LastModifiedDate = template.LastModifiedDate
        };
        showModal = true;
    }

    private void ShowPreviewModal(EmailTemplate template)
    {
        previewTemplate = template;
        showPreview = true;
    }

    private void CloseModal()
    {
        showModal = false;
        editingTemplate = null;
    }

    private void ClosePreview()
    {
        showPreview = false;
        previewTemplate = null;
    }

    private async Task SaveTemplate()
    {
        try
        {
            currentTemplate.LastModifiedDate = DateTime.UtcNow;

            if (editingTemplate != null)
            {
                var response = await Http.PutAsJsonAsync($"api/emailtemplates/{currentTemplate.Id}", currentTemplate);
                if (response.IsSuccessStatusCode)
                {
                    var index = templates!.FindIndex(t => t.Id == currentTemplate.Id);
                    if (index >= 0)
                    {
                        templates[index] = currentTemplate;
                    }
                }
            }
            else
            {
                var response = await Http.PostAsJsonAsync("api/emailtemplates", currentTemplate);
                if (response.IsSuccessStatusCode)
                {
                    var newTemplate = await response.Content.ReadFromJsonAsync<EmailTemplate>();
                    if (newTemplate != null)
                    {
                        templates!.Add(newTemplate);
                    }
                }
            }

            CloseModal();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving email template: {ex.Message}");
        }
    }

    private async Task DeleteTemplate(int id)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this template?"))
            return;

        try
        {
            var response = await Http.DeleteAsync($"api/emailtemplates/{id}");
            if (response.IsSuccessStatusCode)
            {
                templates!.RemoveAll(t => t.Id == id);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting email template: {ex.Message}");
        }
    }

    [Inject]
    private IJSRuntime JSRuntime { get; set; } = default!;
}
