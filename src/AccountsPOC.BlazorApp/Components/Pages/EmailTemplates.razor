@page "/emailtemplates"
@using System.Net.Http.Json
@using AccountsPOC.BlazorApp.Models
@inject HttpClient Http
@rendermode InteractiveServer

<PageTitle>Email Templates</PageTitle>

<div class="container-fluid">
    <div class="page-header">
        <h1 class="page-title">
            <i class="bi bi-envelope-paper"></i> Email Templates
        </h1>
        <p class="text-muted">Manage automated email templates for your business</p>
    </div>

    <div class="row mb-4">
        <div class="col">
            <button class="btn btn-primary" @onclick="ShowAddModal">
                <i class="bi bi-plus-circle"></i> Add Email Template
            </button>
        </div>
    </div>

    @if (loading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (templates == null || !templates.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No email templates found. Add one to get started.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var template in templates)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="template-card @(template.IsActive ? "" : "inactive")">
                        <div class="template-header">
                            <h5 class="template-title">@template.TemplateName</h5>
                            @if (template.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </div>
                        <div class="template-body">
                            <div class="template-detail">
                                <i class="bi bi-tag"></i>
                                <span>@template.TemplateCode</span>
                            </div>
                            <div class="template-detail">
                                <i class="bi bi-lightning"></i>
                                <span>@(template.TriggerEvent ?? "Manual")</span>
                            </div>
                            <div class="template-detail">
                                <i class="bi bi-card-text"></i>
                                <span>@template.Subject</span>
                            </div>
                        </div>
                        <div class="template-actions">
                            <button class="btn btn-sm btn-outline-primary" @onclick="() => ShowEditModal(template)">
                                <i class="bi bi-pencil"></i> Edit
                            </button>
                            <button class="btn btn-sm btn-outline-info" @onclick="() => ShowPreviewModal(template)">
                                <i class="bi bi-eye"></i> Preview
                            </button>
                            <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteTemplate(template.Id)">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@if (showModal)
{
    <ModalDialog Title="@(editingTemplate != null ? "Edit Email Template" : "Add Email Template")" 
                 IsVisible="@showModal" 
                 OnClose="CloseModal"
                 Size="xl">
        <Body>
            <EditForm Model="currentTemplate" OnValidSubmit="SaveTemplate">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Template Name</label>
                        <InputText class="form-control" @bind-Value="currentTemplate.TemplateName" placeholder="Invoice Email" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Template Code</label>
                        <InputText class="form-control" @bind-Value="currentTemplate.TemplateCode" placeholder="INVOICE_CREATED" />
                        <small class="form-text text-muted">Unique identifier (uppercase with underscores)</small>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8 mb-3">
                        <label class="form-label">Subject</label>
                        <InputText class="form-control" @bind-Value="currentTemplate.Subject" placeholder="Your Invoice #{{InvoiceNumber}}" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Trigger Event</label>
                        <InputSelect class="form-select" @bind-Value="currentTemplate.TriggerEvent">
                            <option value="">Manual</option>
                            <option value="INVOICE_CREATED">Invoice Created</option>
                            <option value="INVOICE_SENT">Invoice Sent</option>
                            <option value="PAYMENT_RECEIVED">Payment Received</option>
                            <option value="ORDER_CONFIRMED">Order Confirmed</option>
                            <option value="ORDER_SHIPPED">Order Shipped</option>
                            <option value="ORDER_DELIVERED">Order Delivered</option>
                        </InputSelect>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Email Body (HTML)</label>
                    <InputTextArea class="form-control html-editor" @bind-Value="currentTemplate.BodyHtml" rows="15" />
                    <small class="form-text text-muted">You can use HTML and template variables</small>
                </div>

                <div class="alert alert-info">
                    <h6><i class="bi bi-info-circle"></i> Available Template Variables:</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="template-vars">
                                <li><code>{{CompanyName}}</code> - Company name</li>
                                <li><code>{{CustomerName}}</code> - Customer name</li>
                                <li><code>{{InvoiceNumber}}</code> - Invoice number</li>
                                <li><code>{{OrderNumber}}</code> - Order number</li>
                                <li><code>{{TotalAmount}}</code> - Total amount</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="template-vars">
                                <li><code>{{DueDate}}</code> - Due date</li>
                                <li><code>{{PaymentLink}}</code> - Payment link</li>
                                <li><code>{{TrackingNumber}}</code> - Tracking number</li>
                                <li><code>{{Date}}</code> - Current date</li>
                                <li><code>{{Year}}</code> - Current year</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="form-check form-switch">
                        <InputCheckbox class="form-check-input" @bind-Value="currentTemplate.IsActive" id="isActive" />
                        <label class="form-check-label" for="isActive">Active Template</label>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-end gap-2">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Save Template
                    </button>
                </div>
            </EditForm>
        </Body>
    </ModalDialog>
}

@if (showPreview)
{
    <ModalDialog Title="Email Preview" 
                 IsVisible="@showPreview" 
                 OnClose="ClosePreview"
                 Size="lg">
        <Body>
            @if (previewTemplate != null)
            {
                <div class="preview-container">
                    <div class="preview-subject">
                        <strong>Subject:</strong> @previewTemplate.Subject
                    </div>
                    <div class="preview-divider"></div>
                    <div class="preview-body">
                        @((MarkupString)previewTemplate.BodyHtml)
                    </div>
                </div>
            }
        </Body>
        <Footer>
            <button class="btn btn-secondary" @onclick="ClosePreview">Close</button>
        </Footer>
    </ModalDialog>
}

<style>
