@page "/customfields"
@using System.Net.Http.Json
@using AccountsPOC.BlazorApp.Models
@using System.Text.Json
@inject HttpClient Http
@rendermode InteractiveServer

<PageTitle>Custom Fields</PageTitle>

<div class="container-fluid">
    <div class="page-header">
        <h1 class="page-title">
            <i class="bi bi-sliders"></i> Custom Fields Management
        </h1>
        <p class="text-muted">Define custom fields for your entities</p>
    </div>

    <div class="row mb-4">
        <div class="col">
            <button class="btn btn-primary" @onclick="ShowAddModal">
                <i class="bi bi-plus-circle"></i> Add Custom Field
            </button>
        </div>
    </div>

    <!-- Entity Type Tabs -->
    <ul class="nav nav-tabs custom-tabs mb-4">
        <li class="nav-item">
            <button class="nav-link @(selectedEntityType == "BillOfMaterial" ? "active" : "")" 
                    @onclick="@(() => SelectEntityType("BillOfMaterial"))">
                <i class="bi bi-file-earmark-text"></i> Bill of Materials
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link @(selectedEntityType == "SalesOrder" ? "active" : "")" 
                    @onclick="@(() => SelectEntityType("SalesOrder"))">
                <i class="bi bi-cart"></i> Sales Orders
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link @(selectedEntityType == "SalesOrderItem" ? "active" : "")" 
                    @onclick="@(() => SelectEntityType("SalesOrderItem"))">
                <i class="bi bi-list-ul"></i> Sales Order Items
            </button>
        </li>
    </ul>

    @if (loading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (filteredFields == null || !filteredFields.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No custom fields defined for @selectedEntityType. Add one to get started.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover custom-fields-table">
                <thead>
                    <tr>
                        <th>Order</th>
                        <th>Field Name</th>
                        <th>Label</th>
                        <th>Type</th>
                        <th>Required</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var field in filteredFields.OrderBy(f => f.DisplayOrder))
                    {
                        <tr>
                            <td>
                                <span class="badge bg-secondary">@field.DisplayOrder</span>
                            </td>
                            <td>@field.FieldName</td>
                            <td>@field.FieldLabel</td>
                            <td>
                                <span class="badge bg-info">@field.FieldType</span>
                            </td>
                            <td>
                                @if (field.IsRequired)
                                {
                                    <span class="badge bg-danger">Required</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Optional</span>
                                }
                            </td>
                            <td>
                                @if (field.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" @onclick="() => ShowEditModal(field)">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteField(field.Id)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@if (showModal)
{
    <ModalDialog Title="@(editingField != null ? "Edit Custom Field" : "Add Custom Field")" 
                 IsVisible="@showModal" 
                 OnClose="CloseModal"
                 Size="lg">
        <Body>
            <EditForm Model="currentField" OnValidSubmit="SaveField">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Entity Type</label>
                        <InputSelect class="form-select" @bind-Value="currentField.EntityType" disabled="@(editingField != null)">
                            <option value="BillOfMaterial">Bill of Material</option>
                            <option value="SalesOrder">Sales Order</option>
                            <option value="SalesOrderItem">Sales Order Item</option>
                        </InputSelect>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Display Order</label>
                        <InputNumber class="form-control" @bind-Value="currentField.DisplayOrder" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Field Name</label>
                        <InputText class="form-control" @bind-Value="currentField.FieldName" placeholder="custom_field_name" />
                        <small class="form-text text-muted">Internal name (no spaces)</small>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Field Label</label>
                        <InputText class="form-control" @bind-Value="currentField.FieldLabel" placeholder="Custom Field Label" />
                        <small class="form-text text-muted">Display label</small>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Field Type</label>
                    <InputSelect class="form-select" @bind-Value="currentField.FieldType">
                        <option value="Text">Text</option>
                        <option value="TextArea">Text Area</option>
                        <option value="Number">Number</option>
                        <option value="Boolean">Boolean (Checkbox)</option>
                        <option value="Radio">Radio Buttons</option>
                        <option value="Checkbox">Checkboxes (Multiple)</option>
                        <option value="Select">Dropdown Select</option>
                    </InputSelect>
                </div>

                @if (currentField.FieldType == "Radio" || currentField.FieldType == "Checkbox" || currentField.FieldType == "Select")
                {
                    <div class="mb-3">
                        <label class="form-label">Options</label>
                        <InputTextArea class="form-control" @bind-Value="optionsText" rows="4" 
                                      placeholder="Enter options (one per line)&#10;Option 1&#10;Option 2&#10;Option 3" />
                        <small class="form-text text-muted">Enter one option per line</small>
                    </div>
                }

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-check form-switch">
                            <InputCheckbox class="form-check-input" @bind-Value="currentField.IsRequired" id="isRequired" />
                            <label class="form-check-label" for="isRequired">Required Field</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-check form-switch">
                            <InputCheckbox class="form-check-input" @bind-Value="currentField.IsActive" id="isActive" />
                            <label class="form-check-label" for="isActive">Active</label>
                        </div>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-end gap-2">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Save Field
                    </button>
                </div>
            </EditForm>
        </Body>
    </ModalDialog>
}

<style>
    .page-header {
        margin-bottom: 2rem;
    }

    .page-title {
        font-size: 2rem;
        font-weight: 700;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 0.5rem;
    }

    .custom-tabs {
        border-bottom: 2px solid #e9ecef;
    }

    .custom-tabs .nav-link {
        border: none;
        color: #6c757d;
        padding: 1rem 1.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
        position: relative;
    }

    .custom-tabs .nav-link:hover {
        color: #667eea;
    }

    .custom-tabs .nav-link.active {
        color: #667eea;
        background: transparent;
    }

    .custom-tabs .nav-link.active::after {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 0;
        right: 0;
        height: 2px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .custom-fields-table {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    }

    .custom-fields-table thead {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .custom-fields-table thead th {
        border: none;
        padding: 1rem;
        font-weight: 600;
    }

    .custom-fields-table tbody td {
        padding: 1rem;
        vertical-align: middle;
    }

    .custom-fields-table tbody tr:hover {
        background-color: #f8f9fa;
    }
</style>

@code {
    private List<CustomField>? customFields;
    private List<CustomField>? filteredFields;
    private CustomField currentField = new();
    private CustomField? editingField;
    private bool loading = true;
    private bool showModal = false;
    private string selectedEntityType = "BillOfMaterial";
    private string optionsText = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadCustomFields();
    }

    private async Task LoadCustomFields()
    {
        try
        {
            loading = true;
            customFields = await Http.GetFromJsonAsync<List<CustomField>>("api/customfields");
            FilterFields();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading custom fields: {ex.Message}");
            customFields = new List<CustomField>();
        }
        finally
        {
            loading = false;
        }
    }

    private void SelectEntityType(string entityType)
    {
        selectedEntityType = entityType;
        FilterFields();
    }

    private void FilterFields()
    {
        filteredFields = customFields?.Where(f => f.EntityType == selectedEntityType).ToList();
    }

    private void ShowAddModal()
    {
        editingField = null;
        currentField = new CustomField
        {
            TenantId = 1,
            EntityType = selectedEntityType,
            FieldType = "Text",
            IsActive = true,
            DisplayOrder = (filteredFields?.Count ?? 0) + 1,
            CreatedDate = DateTime.UtcNow
        };
        optionsText = "";
        showModal = true;
    }

    private void ShowEditModal(CustomField field)
    {
        editingField = field;
        currentField = new CustomField
        {
            Id = field.Id,
            TenantId = field.TenantId,
            EntityType = field.EntityType,
            FieldName = field.FieldName,
            FieldLabel = field.FieldLabel,
            FieldType = field.FieldType,
            Options = field.Options,
            IsRequired = field.IsRequired,
            DisplayOrder = field.DisplayOrder,
            IsActive = field.IsActive,
            CreatedDate = field.CreatedDate
        };

        // Parse options if they exist
        if (!string.IsNullOrEmpty(field.Options))
        {
            try
            {
                var options = JsonSerializer.Deserialize<string[]>(field.Options);
                optionsText = string.Join("\n", options ?? Array.Empty<string>());
            }
            catch
            {
                optionsText = field.Options;
            }
        }
        else
        {
            optionsText = "";
        }

        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        editingField = null;
    }

    private async Task SaveField()
    {
        try
        {
            // Process options if field type requires them
            if (currentField.FieldType == "Radio" || currentField.FieldType == "Checkbox" || currentField.FieldType == "Select")
            {
                var options = optionsText.Split('\n', StringSplitOptions.RemoveEmptyEntries)
                                        .Select(o => o.Trim())
                                        .Where(o => !string.IsNullOrEmpty(o))
                                        .ToArray();
                currentField.Options = JsonSerializer.Serialize(options);
            }
            else
            {
                currentField.Options = null;
            }

            if (editingField != null)
            {
                var response = await Http.PutAsJsonAsync($"api/customfields/{currentField.Id}", currentField);
                if (response.IsSuccessStatusCode)
                {
                    var index = customFields!.FindIndex(f => f.Id == currentField.Id);
                    if (index >= 0)
                    {
                        customFields[index] = currentField;
                    }
                }
            }
            else
            {
                var response = await Http.PostAsJsonAsync("api/customfields", currentField);
                if (response.IsSuccessStatusCode)
                {
                    var newField = await response.Content.ReadFromJsonAsync<CustomField>();
                    if (newField != null)
                    {
                        customFields!.Add(newField);
                    }
                }
            }

            FilterFields();
            CloseModal();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving custom field: {ex.Message}");
        }
    }

    private async Task DeleteField(int id)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this custom field?"))
            return;

        try
        {
            var response = await Http.DeleteAsync($"api/customfields/{id}");
            if (response.IsSuccessStatusCode)
            {
                customFields!.RemoveAll(f => f.Id == id);
                FilterFields();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting custom field: {ex.Message}");
        }
    }

    [Inject]
    private IJSRuntime JSRuntime { get; set; } = default!;
}
