@page "/configurationsettings"
@attribute [Authorize]
@using AccountsPOC.BlazorApp.Models
@using AccountsPOC.BlazorApp.Components.Shared
@using Microsoft.JSInterop
@inject HttpClient Http
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Configuration Settings</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Configuration Settings</h2>
        <button class="btn btn-primary" @onclick="ShowAddModal">
            <i class="bi bi-plus-circle"></i> Add New Setting
        </button>
    </div>

    @if (loading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (settings == null || !settings.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No configuration settings found. Add one to get started.
        </div>
    }
    else
    {
        <div class="mb-3">
            <label class="form-label">Filter by Category:</label>
            <select class="form-select" style="max-width: 300px;" @onchange="OnCategoryFilterChanged">
                <option value="">All Categories</option>
                @foreach (var cat in categories)
                {
                    <option value="@cat">@cat</option>
                }
            </select>
        </div>

        <div class="accordion" id="settingsAccordion">
            @foreach (var categoryGroup in filteredSettings.GroupBy(s => s.Category).OrderBy(g => g.Key))
            {
                var categoryId = $"category-{categoryGroup.Key.Replace(" ", "-").ToLower()}";
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#@categoryId">
                            <strong>@categoryGroup.Key</strong>
                            <span class="badge bg-primary ms-2">@categoryGroup.Count()</span>
                        </button>
                    </h2>
                    <div id="@categoryId" class="accordion-collapse collapse show" data-bs-parent="#settingsAccordion">
                        <div class="accordion-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Key</th>
                                            <th>Value</th>
                                            <th>Data Type</th>
                                            <th>Description</th>
                                            <th>System</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var setting in categoryGroup.OrderBy(s => s.DisplayOrder).ThenBy(s => s.Key))
                                        {
                                            <tr>
                                                <td>
                                                    <strong>@setting.Key</strong>
                                                    @if (setting.IsEncrypted)
                                                    {
                                                        <span class="badge bg-warning text-dark ms-1">
                                                            <i class="bi bi-lock-fill"></i> Encrypted
                                                        </span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (setting.IsEncrypted)
                                                    {
                                                        <span class="text-muted">••••••••</span>
                                                    }
                                                    else if (setting.Value.Length > 50)
                                                    {
                                                        <span>@setting.Value.Substring(0, 47)...</span>
                                                    }
                                                    else
                                                    {
                                                        <span>@setting.Value</span>
                                                    }
                                                </td>
                                                <td>
                                                    <span class="badge bg-info">@(setting.DataType ?? "String")</span>
                                                </td>
                                                <td>
                                                    <small class="text-muted">@(setting.Description ?? "-")</small>
                                                </td>
                                                <td>
                                                    @if (setting.IsSystem)
                                                    {
                                                        <span class="badge bg-secondary">System</span>
                                                    }
                                                </td>
                                                <td>
                                                    <button class="btn btn-sm btn-warning me-1" @onclick="() => ShowEditModal(setting)">
                                                        <i class="bi bi-pencil"></i> Edit
                                                    </button>
                                                    @if (!setting.IsSystem)
                                                    {
                                                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteSetting(setting.Id)">
                                                            <i class="bi bi-trash"></i> Delete
                                                        </button>
                                                    }
                                                    @if (!string.IsNullOrEmpty(setting.DefaultValue) && setting.Value != setting.DefaultValue)
                                                    {
                                                        <button class="btn btn-sm btn-secondary ms-1" @onclick="() => ResetToDefault(setting.Id)">
                                                            <i class="bi bi-arrow-counterclockwise"></i> Reset
                                                        </button>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@if (showModal)
{
    <ModalDialog Title="@modalTitle" OnClose="CloseModal">
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Category *</label>
                <input type="text" class="form-control" @bind="currentSetting.Category" list="categoryList" />
                <datalist id="categoryList">
                    @foreach (var cat in categories)
                    {
                        <option value="@cat" />
                    }
                </datalist>
                <small class="text-muted">Examples: System, Payment, Email, ApiKey, Tax, Currency</small>
            </div>
            <div class="col-md-6">
                <label class="form-label">Key *</label>
                <input type="text" class="form-control" @bind="currentSetting.Key" />
                <small class="text-muted">Unique identifier within category</small>
            </div>
            <div class="col-md-12">
                <label class="form-label">Value *</label>
                @if (currentSetting.DataType == "Boolean")
                {
                    <select class="form-select" @bind="currentSetting.Value">
                        <option value="true">True</option>
                        <option value="false">False</option>
                    </select>
                }
                else if (currentSetting.DataType == "JSON")
                {
                    <textarea class="form-control" @bind="currentSetting.Value" rows="4"></textarea>
                }
                else
                {
                    <input type="text" class="form-control" @bind="currentSetting.Value" />
                }
            </div>
            <div class="col-md-6">
                <label class="form-label">Data Type</label>
                <select class="form-select" @bind="currentSetting.DataType">
                    <option value="String">String</option>
                    <option value="Number">Number</option>
                    <option value="Boolean">Boolean</option>
                    <option value="JSON">JSON</option>
                    <option value="Encrypted">Encrypted</option>
                </select>
            </div>
            <div class="col-md-6">
                <label class="form-label">Display Order</label>
                <input type="number" class="form-control" @bind="currentSetting.DisplayOrder" />
            </div>
            <div class="col-md-12">
                <label class="form-label">Description</label>
                <textarea class="form-control" @bind="currentSetting.Description" rows="2"></textarea>
            </div>
            <div class="col-md-6">
                <label class="form-label">Default Value</label>
                <input type="text" class="form-control" @bind="currentSetting.DefaultValue" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Validation Rule (Regex)</label>
                <input type="text" class="form-control" @bind="currentSetting.ValidationRule" />
            </div>
            <div class="col-md-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" @bind="currentSetting.IsEncrypted" id="isEncrypted" />
                    <label class="form-check-label" for="isEncrypted">
                        Is Encrypted (sensitive data)
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" @bind="currentSetting.IsSystem" id="isSystem" />
                    <label class="form-check-label" for="isSystem">
                        Is System Setting (cannot be deleted)
                    </label>
                </div>
            </div>
        </div>
        <div class="mt-3">
            <button class="btn btn-primary" @onclick="SaveSetting">
                <i class="bi bi-save"></i> Save
            </button>
            <button class="btn btn-secondary ms-2" @onclick="CloseModal">Cancel</button>
        </div>
    </ModalDialog>
}

@code {
    private List<ConfigurationSetting> settings = new();
    private List<ConfigurationSetting> filteredSettings = new();
    private List<string> categories = new();
    private bool loading = true;
    private bool showModal = false;
    private string modalTitle = "";
    private ConfigurationSetting currentSetting = new() { Category = "", Key = "", Value = "" };
    private string selectedCategory = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadSettings();
    }

    private async Task LoadSettings()
    {
        loading = true;
        try
        {
            settings = await Http.GetFromJsonAsync<List<ConfigurationSetting>>("http://localhost:5001/api/ConfigurationSettings") ?? new();
            categories = settings.Select(s => s.Category).Distinct().OrderBy(c => c).ToList();
            filteredSettings = settings;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading settings: {ex.Message}");
        }
        finally
        {
            loading = false;
        }
    }

    private void OnCategoryFilterChanged(ChangeEventArgs e)
    {
        selectedCategory = e.Value?.ToString() ?? "";
        if (string.IsNullOrEmpty(selectedCategory))
        {
            filteredSettings = settings;
        }
        else
        {
            filteredSettings = settings.Where(s => s.Category == selectedCategory).ToList();
        }
    }

    private void ShowAddModal()
    {
        modalTitle = "Add Configuration Setting";
        currentSetting = new ConfigurationSetting 
        { 
            Category = "", 
            Key = "", 
            Value = "",
            DataType = "String",
            DisplayOrder = 0
        };
        showModal = true;
    }

    private void ShowEditModal(ConfigurationSetting setting)
    {
        modalTitle = "Edit Configuration Setting";
        currentSetting = new ConfigurationSetting
        {
            Id = setting.Id,
            TenantId = setting.TenantId,
            Category = setting.Category,
            Key = setting.Key,
            Value = setting.Value,
            DataType = setting.DataType,
            Description = setting.Description,
            IsEncrypted = setting.IsEncrypted,
            IsSystem = setting.IsSystem,
            DisplayOrder = setting.DisplayOrder,
            ValidationRule = setting.ValidationRule,
            DefaultValue = setting.DefaultValue,
            CreatedDate = setting.CreatedDate,
            LastModifiedDate = setting.LastModifiedDate,
            LastModifiedBy = setting.LastModifiedBy
        };
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
    }

    private async Task SaveSetting()
    {
        try
        {
            if (currentSetting.Id == 0)
            {
                var response = await Http.PostAsJsonAsync("http://localhost:5001/api/ConfigurationSettings", currentSetting);
                if (response.IsSuccessStatusCode)
                {
                    await LoadSettings();
                    CloseModal();
                }
            }
            else
            {
                var response = await Http.PutAsJsonAsync($"http://localhost:5001/api/ConfigurationSettings/{currentSetting.Id}", currentSetting);
                if (response.IsSuccessStatusCode)
                {
                    await LoadSettings();
                    CloseModal();
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving setting: {ex.Message}");
        }
    }

    private async Task DeleteSetting(int id)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this setting?"))
            return;

        try
        {
            var response = await Http.DeleteAsync($"http://localhost:5001/api/ConfigurationSettings/{id}");
            if (response.IsSuccessStatusCode)
            {
                await LoadSettings();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting setting: {ex.Message}");
        }
    }

    private async Task ResetToDefault(int id)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to reset this setting to its default value?"))
            return;

        try
        {
            var response = await Http.PostAsync($"http://localhost:5001/api/ConfigurationSettings/{id}/reset", null);
            if (response.IsSuccessStatusCode)
            {
                await LoadSettings();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error resetting setting: {ex.Message}");
        }
    }
}
