@page "/customers"
@using System.Net.Http.Json
@using AccountsPOC.BlazorApp.Models
@inject HttpClient Http
@rendermode InteractiveServer

<PageTitle>Customers</PageTitle>

<div class="container-fluid">
    <h1 class="mb-4">Customers</h1>

    <div class="row mb-3">
        <div class="col">
            <button class="btn btn-primary" @onclick="ShowAddForm">
                <i class="bi bi-plus-circle"></i> Add New Customer
            </button>
        </div>
    </div>

    @if (showForm)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5>@(editingCustomer != null ? "Edit" : "Add") Customer</h5>
            </div>
            <div class="card-body">
                <EditForm Model="currentCustomer" OnValidSubmit="SaveCustomer">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Customer Code</label>
                            <InputText class="form-control" @bind-Value="currentCustomer.CustomerCode" />
                        </div>
                        <div class="col-md-8 mb-3">
                            <label class="form-label">Company Name</label>
                            <InputText class="form-control" @bind-Value="currentCustomer.CompanyName" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Contact Name</label>
                            <InputText class="form-control" @bind-Value="currentCustomer.ContactName" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Email</label>
                            <InputText class="form-control" type="email" @bind-Value="currentCustomer.Email" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Phone</label>
                            <InputText class="form-control" @bind-Value="currentCustomer.Phone" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label class="form-label">Address</label>
                            <InputText class="form-control" @bind-Value="currentCustomer.Address" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">City</label>
                            <InputText class="form-control" @bind-Value="currentCustomer.City" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">PostCode</label>
                            <InputText class="form-control" @bind-Value="currentCustomer.PostCode" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Country</label>
                            <InputText class="form-control" @bind-Value="currentCustomer.Country" placeholder="United Kingdom" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">VAT Number</label>
                            <InputText class="form-control" @bind-Value="currentCustomer.VATNumber" placeholder="GB123456789" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Credit Limit (Â£)</label>
                            <InputNumber class="form-control" @bind-Value="currentCustomer.CreditLimit" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Payment Terms</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-check-label">
                            <InputCheckbox class="form-check-input" @bind-Value="currentCustomer.IsActive" />
                            Active
                        </label>
                    </div>
                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-secondary" @onclick="CancelForm">Cancel</button>
                </EditForm>
            </div>
        </div>
    }

    @if (loading)
    {
        <div class="d-flex justify-content-center">
            <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
        </div>
    }
    else if (customers == null || !customers.Any())
    {
        <div class="alert alert-info">No customers found. Add one to get started.</div>
    }
    else
    {
        <MudDataGrid T="Customer" Items="@customers" 
                     Filterable="true" 
                     FilterMode="DataGridFilterMode.ColumnFilterMenu"
                     SortMode="SortMode.Multiple"
                     QuickFilter="@_quickFilter"
                     Hideable="true"
                     ColumnResizeMode="ResizeMode.Column"
                     Dense="true"
                     Hover="true"
                     Striped="true"
                     Bordered="true"
                     FixedHeader="true"
                     Height="600px">
            <ToolBarContent>
                <MudText Typo="Typo.h6">Customers</MudText>
                <MudSpacer />
                <MudTextField @bind-Value="_searchString" 
                             Placeholder="Search" 
                             Adornment="Adornment.Start" 
                             AdornmentIcon="@Icons.Material.Filled.Search" 
                             IconSize="Size.Medium" 
                             Class="mt-0"
                             Immediate="true"></MudTextField>
            </ToolBarContent>
            <Columns>
                <PropertyColumn Property="x => x.CustomerCode" Title="Code" Filterable="true" Sortable="true">
                    <CellTemplate>
                        <MudText Typo="Typo.body2"><strong>@context.Item.CustomerCode</strong></MudText>
                    </CellTemplate>
                </PropertyColumn>
                <PropertyColumn Property="x => x.CompanyName" Title="Company Name" Filterable="true" Sortable="true" />
                <PropertyColumn Property="x => x.ContactName" Title="Contact" Filterable="true" Sortable="true" />
                <PropertyColumn Property="x => x.Email" Title="Email" Filterable="true" Sortable="true" />
                <PropertyColumn Property="x => x.Phone" Title="Phone" Filterable="true" Sortable="true" />
                <PropertyColumn Property="x => x.VATNumber" Title="VAT Number" Filterable="true" Sortable="true" />
                <PropertyColumn Property="x => x.CreditLimit" Title="Credit Limit" Filterable="true" Sortable="true" Format="C" />
                <PropertyColumn Property="x => x.CurrentBalance" Title="Current Balance" Filterable="true" Sortable="true" Format="C">
                    <CellTemplate>
                        @{
                            var creditUsagePercent = context.Item.CreditLimit > 0 ? (context.Item.CurrentBalance / context.Item.CreditLimit) * 100 : 0;
                            var isOverLimit = context.Item.CurrentBalance > context.Item.CreditLimit;
                            var isNearLimit = creditUsagePercent >= 80 && !isOverLimit;
                        }
                        <MudText Typo="Typo.body2">
                            <strong>@context.Item.CurrentBalance.ToString("C")</strong>
                            @if (isOverLimit)
                            {
                                <MudChip Size="Size.Small" Color="Color.Error" Icon="@Icons.Material.Filled.Warning">Over Limit</MudChip>
                            }
                            else if (isNearLimit)
                            {
                                <MudChip Size="Size.Small" Color="Color.Warning" Icon="@Icons.Material.Filled.Warning">Near Limit</MudChip>
                            }
                        </MudText>
                    </CellTemplate>
                </PropertyColumn>
                <PropertyColumn Property="x => x.IsActive" Title="Status" Filterable="true" Sortable="true">
                    <CellTemplate>
                        @if (context.Item.IsActive)
                        {
                            <MudChip Size="Size.Small" Color="Color.Success">Active</MudChip>
                        }
                        else
                        {
                            <MudChip Size="Size.Small" Color="Color.Default">Inactive</MudChip>
                        }
                    </CellTemplate>
                </PropertyColumn>
                <TemplateColumn Title="Actions" Filterable="false" Sortable="false">
                    <CellTemplate>
                        <MudStack Row="true" Spacing="1">
                            <MudIconButton Icon="@Icons.Material.Filled.Edit" 
                                         Color="Color.Warning" 
                                         Size="Size.Small" 
                                         OnClick="@(() => EditCustomer(context.Item))" />
                            <MudIconButton Icon="@Icons.Material.Filled.Delete" 
                                         Color="Color.Error" 
                                         Size="Size.Small" 
                                         OnClick="@(() => DeleteCustomer(context.Item.Id))" />
                        </MudStack>
                    </CellTemplate>
                </TemplateColumn>
            </Columns>
            <PagerContent>
                <MudDataGridPager T="Customer" PageSizeOptions="new int[] { 10, 25, 50, 100 }" />
            </PagerContent>
        </MudDataGrid>

        @if (customers.Any(c => c.CurrentBalance > c.CreditLimit))
        {
            <MudAlert Severity="Severity.Error" Icon="@Icons.Material.Filled.Warning" Class="mt-3">
                <strong>Credit Alert:</strong> @customers.Count(c => c.CurrentBalance > c.CreditLimit) customer(s) have exceeded their credit limit.
            </MudAlert>
        }
    }
</div>

@code {
    private List<Customer>? customers;
    private Customer currentCustomer = new() { CustomerCode = "", CompanyName = "", Address = "" };
    private Customer? editingCustomer;
    private bool showForm = false;
    private bool loading = true;
    private string _searchString = "";

    private Func<Customer, bool> _quickFilter => x =>
    {
        if (string.IsNullOrWhiteSpace(_searchString))
            return true;

        if (x.CustomerCode?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) == true)
            return true;

        if (x.CompanyName?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) == true)
            return true;

        if (x.ContactName?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) == true)
            return true;

        if (x.Email?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) == true)
            return true;

        return false;
    };

    protected override async Task OnInitializedAsync()
    {
        await LoadCustomers();
    }

    private async Task LoadCustomers()
    {
        loading = true;
        try
        {
            customers = await Http.GetFromJsonAsync<List<Customer>>("api/Customers");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading customers: {ex.Message}");
            customers = new List<Customer>();
        }
        loading = false;
    }

    private void ShowAddForm()
    {
        currentCustomer = new() { CustomerCode = "", CompanyName = "", Address = "", IsActive = true };
        editingCustomer = null;
        showForm = true;
    }

    private void EditCustomer(Customer customer)
    {
        editingCustomer = customer;
        currentCustomer = new Customer
        {
            Id = customer.Id,
            CustomerCode = customer.CustomerCode,
            CompanyName = customer.CompanyName,
            ContactName = customer.ContactName,
            Email = customer.Email,
            Phone = customer.Phone,
            Address = customer.Address,
            City = customer.City,
            PostCode = customer.PostCode,
            Country = customer.Country,
            VATNumber = customer.VATNumber,
            CreditLimit = customer.CreditLimit,
            CurrentBalance = customer.CurrentBalance,
            IsActive = customer.IsActive,
            CreatedDate = customer.CreatedDate,
            LastModifiedDate = customer.LastModifiedDate
        };
        showForm = true;
    }

    private async Task SaveCustomer()
    {
        try
        {
            if (editingCustomer != null)
            {
                await Http.PutAsJsonAsync($"api/Customers/{currentCustomer.Id}", currentCustomer);
            }
            else
            {
                await Http.PostAsJsonAsync("api/Customers", currentCustomer);
            }
            
            showForm = false;
            await LoadCustomers();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving customer: {ex.Message}");
        }
    }

    private async Task DeleteCustomer(int id)
    {
        try
        {
            await Http.DeleteAsync($"api/Customers/{id}");
            await LoadCustomers();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting customer: {ex.Message}");
        }
    }

    private void CancelForm()
    {
        showForm = false;
        editingCustomer = null;
    }
}
