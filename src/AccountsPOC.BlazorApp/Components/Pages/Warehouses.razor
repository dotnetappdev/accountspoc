@page "/warehouses"
@using System.Net.Http.Json
@using AccountsPOC.BlazorApp.Models
@using AccountsPOC.BlazorApp.Components.Shared
@inject HttpClient Http
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Warehouses</PageTitle>

<div class="container-fluid modern-page">
    <div class="page-header">
        <div>
            <h1 class="page-title">
                <i class="bi bi-building"></i> Warehouses
            </h1>
            <p class="page-subtitle">Manage your warehouse facilities and operations</p>
        </div>
        <button class="btn-gradient btn-primary" @onclick="ShowAddForm">
            <i class="bi bi-plus-circle"></i> Add New Warehouse
        </button>
    </div>

    @if (loading)
    {
        <div class="loading-card">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Loading warehouses...</p>
        </div>
    }
    else if (warehouses == null || !warehouses.Any())
    {
        <div class="empty-state">
            <i class="bi bi-inbox"></i>
            <h3>No warehouses yet</h3>
            <p>Add your first warehouse to get started</p>
        </div>
    }
    else
    {
        <div class="warehouses-grid">
            @foreach (var warehouse in warehouses)
            {
                <div class="warehouse-card">
                    <div class="warehouse-card-header">
                        <div class="warehouse-icon">
                            <i class="bi bi-building"></i>
                        </div>
                        <span class="status-badge @(warehouse.IsActive ? "status-active" : "status-inactive")">
                            @(warehouse.IsActive ? "Active" : "Inactive")
                        </span>
                    </div>
                    <div class="warehouse-card-body">
                        <h4 class="warehouse-name">@warehouse.WarehouseName</h4>
                        <p class="warehouse-code">Code: @warehouse.WarehouseCode</p>
                        <div class="warehouse-details">
                            <div class="detail-item">
                                <span class="label">Location:</span>
                                <span class="value">@warehouse.City, @warehouse.Country</span>
                            </div>
                            <div class="detail-item">
                                <span class="label">Contact:</span>
                                <span class="value">@warehouse.ContactName</span>
                            </div>
                            @if (warehouse.HeightLevels.HasValue)
                            {
                                <div class="detail-item">
                                    <span class="label">Height Levels:</span>
                                    <span class="value">@warehouse.HeightLevels</span>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(warehouse.SecurityLevel))
                            {
                                <div class="detail-item">
                                    <span class="label">Security:</span>
                                    <span class="value">@warehouse.SecurityLevel</span>
                                </div>
                            }
                            @if (warehouse.IsTemperatureControlled)
                            {
                                <div class="detail-item">
                                    <span class="label">Temperature:</span>
                                    <span class="value">
                                        <i class="bi bi-thermometer-snow"></i> Controlled
                                        @if (!string.IsNullOrEmpty(warehouse.TemperatureRange))
                                        {
                                            <text> (@warehouse.TemperatureRange)</text>
                                        }
                                    </span>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="warehouse-card-footer">
                        <button class="btn-action btn-edit" @onclick="() => EditWarehouse(warehouse)" title="Edit Warehouse">
                            <i class="bi bi-pencil"></i> Edit
                        </button>
                        <button class="btn-action btn-delete" @onclick="() => DeleteWarehouse(warehouse.Id)" title="Delete Warehouse">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </div>
                </div>
            }
        </div>
    }
</div>

<ModalDialog Title="@(editingWarehouse != null ? "Edit Warehouse" : "Add New Warehouse")"
             IsVisible="showForm"
             OnClose="CancelForm"
             Size="xl">
    <Body>
        <EditForm Model="currentWarehouse" OnValidSubmit="SaveWarehouse">
            <ul class="nav nav-tabs mb-3" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(activeTab == "basic" ? "active" : "")" 
                            type="button" 
                            @onclick="@(() => SetActiveTab("basic"))">
                        <i class="bi bi-info-circle"></i> Basic Info
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(activeTab == "location" ? "active" : "")" 
                            type="button" 
                            @onclick="@(() => SetActiveTab("location"))">
                        <i class="bi bi-geo-alt"></i> Location
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(activeTab == "management" ? "active" : "")" 
                            type="button" 
                            @onclick="@(() => SetActiveTab("management"))">
                        <i class="bi bi-boxes"></i> Warehouse Management
                    </button>
                </li>
            </ul>

            <div class="tab-content">
                @if (activeTab == "basic")
                {
                    <div class="tab-pane-content">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Warehouse Code</label>
                                <InputText class="form-control" @bind-Value="currentWarehouse.WarehouseCode" placeholder="WH001" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Warehouse Name</label>
                                <InputText class="form-control" @bind-Value="currentWarehouse.WarehouseName" placeholder="Main Distribution Center" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Contact Name</label>
                                <InputText class="form-control" @bind-Value="currentWarehouse.ContactName" placeholder="Warehouse Manager" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Contact Phone</label>
                                <InputText class="form-control" @bind-Value="currentWarehouse.ContactPhone" placeholder="+1 555 1234" />
                            </div>
                        </div>
                        <div class="mb-3 form-check">
                            <InputCheckbox class="form-check-input" id="isActive" @bind-Value="currentWarehouse.IsActive" />
                            <label class="form-check-label" for="isActive">
                                Warehouse is active
                            </label>
                        </div>
                    </div>
                }
                else if (activeTab == "location")
                {
                    <div class="tab-pane-content">
                        <div class="mb-3">
                            <label class="form-label">Address</label>
                            <InputText class="form-control" @bind-Value="currentWarehouse.Address" placeholder="123 Industrial Park Road" />
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">City</label>
                                <InputText class="form-control" @bind-Value="currentWarehouse.City" placeholder="London" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Post Code</label>
                                <InputText class="form-control" @bind-Value="currentWarehouse.PostCode" placeholder="SW1A 1AA" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Country</label>
                                <InputText class="form-control" @bind-Value="currentWarehouse.Country" placeholder="United Kingdom" />
                            </div>
                        </div>
                    </div>
                }
                else if (activeTab == "management")
                {
                    <div class="tab-pane-content">
                        <h6 class="section-title">Storage Organization</h6>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Bins</label>
                                <InputText class="form-control" @bind-Value="currentWarehouse.Bins" placeholder="e.g., A1-A100, B1-B50" />
                                <small class="form-text text-muted">Comma-separated list of bin codes</small>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Zones</label>
                                <InputText class="form-control" @bind-Value="currentWarehouse.Zones" placeholder="e.g., Receiving, Storage, Shipping" />
                                <small class="form-text text-muted">Comma-separated list of zone names</small>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Height Levels</label>
                                <InputNumber class="form-control" @bind-Value="currentWarehouse.HeightLevels" placeholder="e.g., 5" />
                                <small class="form-text text-muted">Number of vertical storage levels</small>
                            </div>
                        </div>
                        
                        <h6 class="section-title mt-4">Operational Configuration</h6>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Security Level</label>
                                <InputSelect class="form-select" @bind-Value="currentWarehouse.SecurityLevel">
                                    <option value="">-- Select Security Level --</option>
                                    <option value="Basic">Basic - Standard access control</option>
                                    <option value="Medium">Medium - Enhanced monitoring</option>
                                    <option value="High">High - 24/7 surveillance</option>
                                    <option value="Maximum">Maximum - Restricted access</option>
                                </InputSelect>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Picking Sequence</label>
                                <InputSelect class="form-select" @bind-Value="currentWarehouse.PickingSequence">
                                    <option value="">-- Select Picking Method --</option>
                                    <option value="FIFO">FIFO (First In, First Out)</option>
                                    <option value="LIFO">LIFO (Last In, First Out)</option>
                                    <option value="FEFO">FEFO (First Expired, First Out)</option>
                                    <option value="Zone">Zone-based Picking</option>
                                    <option value="Batch">Batch Picking</option>
                                    <option value="Wave">Wave Picking</option>
                                </InputSelect>
                            </div>
                        </div>
                        
                        <h6 class="section-title mt-4">Temperature Control</h6>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-check">
                                    <InputCheckbox class="form-check-input" id="isTemperatureControlled" @bind-Value="currentWarehouse.IsTemperatureControlled" />
                                    <label class="form-check-label" for="isTemperatureControlled">
                                        Temperature Controlled Facility
                                    </label>
                                </div>
                            </div>
                            @if (currentWarehouse.IsTemperatureControlled)
                            {
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Temperature Range</label>
                                    <InputText class="form-control" @bind-Value="currentWarehouse.TemperatureRange" placeholder="e.g., 2°C to 8°C" />
                                    <small class="form-text text-muted">Specify the temperature range maintained</small>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>

            <div class="modal-actions">
                <button type="submit" class="btn-gradient btn-success">
                    <i class="bi bi-check-circle"></i> Save Warehouse
                </button>
                <button type="button" class="btn btn-secondary" @onclick="CancelForm">
                    Cancel
                </button>
            </div>
        </EditForm>
    </Body>
</ModalDialog>

