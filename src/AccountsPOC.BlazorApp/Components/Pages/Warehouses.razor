@code {
    private List<Warehouse>? warehouses;
    private Warehouse currentWarehouse = new() { WarehouseCode = "", WarehouseName = "", Address = "" };
    private Warehouse? editingWarehouse;
    private bool showForm = false;
    private bool loading = true;
    private string activeTab = "basic";

    protected override async Task OnInitializedAsync()
    {
        await LoadWarehouses();
    }

    private async Task LoadWarehouses()
    {
        loading = true;
        try
        {
            warehouses = await Http.GetFromJsonAsync<List<Warehouse>>("api/Warehouses");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading warehouses: {ex.Message}");
            warehouses = new List<Warehouse>();
        }
        loading = false;
    }

    private void ShowAddForm()
    {
        currentWarehouse = new() { WarehouseCode = "", WarehouseName = "", Address = "", IsActive = true };
        editingWarehouse = null;
        activeTab = "basic";
        showForm = true;
    }

    private void EditWarehouse(Warehouse warehouse)
    {
        editingWarehouse = warehouse;
        currentWarehouse = new Warehouse
        {
            Id = warehouse.Id,
            WarehouseCode = warehouse.WarehouseCode,
            WarehouseName = warehouse.WarehouseName,
            Address = warehouse.Address,
            City = warehouse.City,
            PostCode = warehouse.PostCode,
            Country = warehouse.Country,
            ContactName = warehouse.ContactName,
            ContactPhone = warehouse.ContactPhone,
            IsActive = warehouse.IsActive,
            Bins = warehouse.Bins,
            Zones = warehouse.Zones,
            HeightLevels = warehouse.HeightLevels,
            IsTemperatureControlled = warehouse.IsTemperatureControlled,
            TemperatureRange = warehouse.TemperatureRange,
            SecurityLevel = warehouse.SecurityLevel,
            PickingSequence = warehouse.PickingSequence,
            CreatedDate = warehouse.CreatedDate,
            LastModifiedDate = warehouse.LastModifiedDate
        };
        activeTab = "basic";
        showForm = true;
    }

    private async Task SaveWarehouse()
    {
        try
        {
            if (editingWarehouse != null)
            {
                await Http.PutAsJsonAsync($"api/Warehouses/{currentWarehouse.Id}", currentWarehouse);
            }
            else
            {
                await Http.PostAsJsonAsync("api/Warehouses", currentWarehouse);
            }
            
            showForm = false;
            await LoadWarehouses();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving warehouse: {ex.Message}");
        }
    }

    private async Task DeleteWarehouse(int id)
    {
        try
        {
            await Http.DeleteAsync($"api/Warehouses/{id}");
            await LoadWarehouses();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting warehouse: {ex.Message}");
        }
    }

    private void CancelForm()
    {
        showForm = false;
        editingWarehouse = null;
    }

    private void SetActiveTab(string tab)
    {
        activeTab = tab;
    }
}
