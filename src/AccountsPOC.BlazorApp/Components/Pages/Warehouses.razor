@page "/warehouses"
@using System.Net.Http.Json
@using AccountsPOC.BlazorApp.Models
@inject HttpClient Http
@rendermode InteractiveServer

<PageTitle>Warehouses</PageTitle>

<div class="container-fluid">
    <h1 class="mb-4">Warehouse Management</h1>

    <div class="row mb-3">
        <div class="col">
            <button class="btn btn-primary" @onclick="ShowAddForm">
                <i class="bi bi-plus-circle"></i> Add New Warehouse
            </button>
        </div>
    </div>

    @if (showForm)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5>@(editingWarehouse != null ? "Edit" : "Add") Warehouse</h5>
            </div>
            <div class="card-body">
                <EditForm Model="currentWarehouse" OnValidSubmit="SaveWarehouse">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Warehouse Code</label>
                            <InputText class="form-control" @bind-Value="currentWarehouse.WarehouseCode" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Warehouse Name</label>
                            <InputText class="form-control" @bind-Value="currentWarehouse.WarehouseName" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Address</label>
                        <InputText class="form-control" @bind-Value="currentWarehouse.Address" />
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">City</label>
                            <InputText class="form-control" @bind-Value="currentWarehouse.City" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Post Code</label>
                            <InputText class="form-control" @bind-Value="currentWarehouse.PostCode" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Country</label>
                            <InputText class="form-control" @bind-Value="currentWarehouse.Country" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Contact Name</label>
                            <InputText class="form-control" @bind-Value="currentWarehouse.ContactName" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Contact Phone</label>
                            <InputText class="form-control" @bind-Value="currentWarehouse.ContactPhone" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-check-label">
                            <InputCheckbox class="form-check-input" @bind-Value="currentWarehouse.IsActive" />
                            Active
                        </label>
                    </div>
                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-secondary" @onclick="CancelForm">Cancel</button>
                </EditForm>
            </div>
        </div>
    }

    @if (loading)
    {
        <p><em>Loading...</em></p>
    }
    else if (warehouses == null || !warehouses.Any())
    {
        <div class="alert alert-info">No warehouses found. Add one to get started.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>Post Code</th>
                        <th>Contact</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var warehouse in warehouses)
                    {
                        <tr>
                            <td>@warehouse.WarehouseCode</td>
                            <td>@warehouse.WarehouseName</td>
                            <td>@warehouse.Address</td>
                            <td>@warehouse.City</td>
                            <td>@warehouse.PostCode</td>
                            <td>@warehouse.ContactName<br/>@warehouse.ContactPhone</td>
                            <td>
                                @if (warehouse.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-sm btn-warning" @onclick="() => EditWarehouse(warehouse)">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteWarehouse(warehouse.Id)">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<Warehouse>? warehouses;
    private Warehouse currentWarehouse = new() { WarehouseCode = "", WarehouseName = "", Address = "" };
    private Warehouse? editingWarehouse;
    private bool showForm = false;
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadWarehouses();
    }

    private async Task LoadWarehouses()
    {
        loading = true;
        try
        {
            warehouses = await Http.GetFromJsonAsync<List<Warehouse>>("api/Warehouses");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading warehouses: {ex.Message}");
            warehouses = new List<Warehouse>();
        }
        loading = false;
    }

    private void ShowAddForm()
    {
        currentWarehouse = new() { WarehouseCode = "", WarehouseName = "", Address = "", IsActive = true };
        editingWarehouse = null;
        showForm = true;
    }

    private void EditWarehouse(Warehouse warehouse)
    {
        editingWarehouse = warehouse;
        currentWarehouse = new Warehouse
        {
            Id = warehouse.Id,
            WarehouseCode = warehouse.WarehouseCode,
            WarehouseName = warehouse.WarehouseName,
            Address = warehouse.Address,
            City = warehouse.City,
            PostCode = warehouse.PostCode,
            Country = warehouse.Country,
            ContactName = warehouse.ContactName,
            ContactPhone = warehouse.ContactPhone,
            IsActive = warehouse.IsActive,
            CreatedDate = warehouse.CreatedDate,
            LastModifiedDate = warehouse.LastModifiedDate
        };
        showForm = true;
    }

    private async Task SaveWarehouse()
    {
        try
        {
            if (editingWarehouse != null)
            {
                await Http.PutAsJsonAsync($"api/Warehouses/{currentWarehouse.Id}", currentWarehouse);
            }
            else
            {
                await Http.PostAsJsonAsync("api/Warehouses", currentWarehouse);
            }
            
            showForm = false;
            await LoadWarehouses();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving warehouse: {ex.Message}");
        }
    }

    private async Task DeleteWarehouse(int id)
    {
        try
        {
            await Http.DeleteAsync($"api/Warehouses/{id}");
            await LoadWarehouses();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting warehouse: {ex.Message}");
        }
    }

    private void CancelForm()
    {
        showForm = false;
        editingWarehouse = null;
    }
}
