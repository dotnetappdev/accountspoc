@code {
    private List<SalesInvoice>? salesInvoices;
    private SalesInvoice currentInvoice = new() { InvoiceNumber = "", Status = "Unpaid" };
    private SalesInvoice? editingInvoice;
    private SalesInvoice? selectedInvoice;
    private bool showForm = false;
    private bool showEmailModal = false;
    private bool showPaymentLinkModal = false;
    private bool loading = true;
    private string currentPaymentLink = "";

    private class EmailForm
    {
        public string ToAddress { get; set; } = "";
        public string Subject { get; set; } = "";
        public string Message { get; set; } = "";
        public bool IncludePaymentLink { get; set; } = true;
    }

    private EmailForm emailForm = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadSalesInvoices();
    }

    private async Task LoadSalesInvoices()
    {
        loading = true;
        try
        {
            salesInvoices = await Http.GetFromJsonAsync<List<SalesInvoice>>("api/SalesInvoices");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading sales invoices: {ex.Message}");
            salesInvoices = new List<SalesInvoice>();
        }
        loading = false;
    }

    private void ShowAddForm()
    {
        currentInvoice = new() { InvoiceNumber = $"INV-{DateTime.Now:yyyyMMddHHmmss}", Status = "Unpaid" };
        editingInvoice = null;
        showForm = true;
    }

    private void EditSalesInvoice(SalesInvoice invoice)
    {
        editingInvoice = invoice;
        currentInvoice = new SalesInvoice
        {
            Id = invoice.Id,
            InvoiceNumber = invoice.InvoiceNumber,
            InvoiceDate = invoice.InvoiceDate,
            SalesOrderId = invoice.SalesOrderId,
            SubTotal = invoice.SubTotal,
            TaxAmount = invoice.TaxAmount,
            TotalAmount = invoice.TotalAmount,
            Status = invoice.Status,
            DueDate = invoice.DueDate,
            CreatedDate = invoice.CreatedDate,
            LastModifiedDate = invoice.LastModifiedDate
        };
        showForm = true;
    }

    private async Task SaveSalesInvoice()
    {
        try
        {
            if (editingInvoice != null)
            {
                await Http.PutAsJsonAsync($"api/SalesInvoices/{currentInvoice.Id}", currentInvoice);
            }
            else
            {
                await Http.PostAsJsonAsync("api/SalesInvoices", currentInvoice);
            }
            
            showForm = false;
            await LoadSalesInvoices();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving sales invoice: {ex.Message}");
        }
    }

    private async Task DeleteSalesInvoice(int id)
    {
        try
        {
            await Http.DeleteAsync($"api/SalesInvoices/{id}");
            await LoadSalesInvoices();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting sales invoice: {ex.Message}");
        }
    }

    private void CancelForm()
    {
        showForm = false;
        editingInvoice = null;
    }

    private void ShowEmailModal(SalesInvoice invoice)
    {
        selectedInvoice = invoice;
        emailForm = new EmailForm
        {
            Subject = $"Invoice {invoice.InvoiceNumber}",
            Message = $"Please find attached invoice {invoice.InvoiceNumber} for {invoice.TotalAmount:C}.",
            IncludePaymentLink = true
        };
        showEmailModal = true;
    }

    private void CloseEmailModal()
    {
        showEmailModal = false;
        selectedInvoice = null;
    }

    private async Task SendEmail()
    {
        Console.WriteLine($"Sending email to {emailForm.ToAddress}");
        Console.WriteLine($"Subject: {emailForm.Subject}");
        Console.WriteLine($"Include payment link: {emailForm.IncludePaymentLink}");
        // In a real app, call an API to send the email
        CloseEmailModal();
    }

    private void ShowPaymentLink(SalesInvoice invoice)
    {
        currentPaymentLink = $"https://payment.example.com/invoice/{invoice.Id}/{Guid.NewGuid():N}";
        showPaymentLinkModal = true;
    }

    private void ClosePaymentLinkModal()
    {
        showPaymentLinkModal = false;
    }

    private async Task CopyPaymentLink()
    {
        // In a real app, use JS interop to copy to clipboard
        Console.WriteLine($"Copied to clipboard: {currentPaymentLink}");
    }
}
