@page "/sales-invoices"
@using System.Net.Http.Json
@using AccountsPOC.BlazorApp.Models
@inject HttpClient Http
@rendermode InteractiveServer

<PageTitle>Sales Invoices</PageTitle>

<div class="container-fluid">
    <h1 class="mb-4">Sales Invoices</h1>

    <div class="row mb-3">
        <div class="col">
            <button class="btn btn-primary" @onclick="ShowAddForm">
                <i class="bi bi-plus-circle"></i> Create New Invoice
            </button>
        </div>
    </div>

    @if (showForm)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5>@(editingInvoice != null ? "Edit" : "Create") Sales Invoice</h5>
            </div>
            <div class="card-body">
                <EditForm Model="currentInvoice" OnValidSubmit="SaveSalesInvoice">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Invoice Number</label>
                            <InputText class="form-control" @bind-Value="currentInvoice.InvoiceNumber" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Sales Order ID</label>
                            <InputNumber class="form-control" @bind-Value="currentInvoice.SalesOrderId" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Sub Total</label>
                            <InputNumber class="form-control" @bind-Value="currentInvoice.SubTotal" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Tax Amount</label>
                            <InputNumber class="form-control" @bind-Value="currentInvoice.TaxAmount" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Total Amount</label>
                            <InputNumber class="form-control" @bind-Value="currentInvoice.TotalAmount" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Status</label>
                        <InputSelect class="form-select" @bind-Value="currentInvoice.Status">
                            <option value="Unpaid">Unpaid</option>
                            <option value="Paid">Paid</option>
                            <option value="Overdue">Overdue</option>
                            <option value="Cancelled">Cancelled</option>
                        </InputSelect>
                    </div>
                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-secondary" @onclick="CancelForm">Cancel</button>
                </EditForm>
            </div>
        </div>
    }

    @if (loading)
    {
        <p><em>Loading...</em></p>
    }
    else if (salesInvoices == null || !salesInvoices.Any())
    {
        <div class="alert alert-info">No sales invoices found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Invoice Number</th>
                        <th>Invoice Date</th>
                        <th>Due Date</th>
                        <th>Sub Total</th>
                        <th>Tax</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var invoice in salesInvoices)
                    {
                        <tr>
                            <td>@invoice.InvoiceNumber</td>
                            <td>@invoice.InvoiceDate.ToShortDateString()</td>
                            <td>@invoice.DueDate?.ToShortDateString()</td>
                            <td>@invoice.SubTotal.ToString("C")</td>
                            <td>@invoice.TaxAmount.ToString("C")</td>
                            <td>@invoice.TotalAmount.ToString("C")</td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(invoice.Status)">@invoice.Status</span>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-warning" @onclick="() => EditSalesInvoice(invoice)">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteSalesInvoice(invoice.Id)">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<SalesInvoice>? salesInvoices;
    private SalesInvoice currentInvoice = new() { InvoiceNumber = "", Status = "Unpaid" };
    private SalesInvoice? editingInvoice;
    private bool showForm = false;
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadSalesInvoices();
    }

    private async Task LoadSalesInvoices()
    {
        loading = true;
        try
        {
            salesInvoices = await Http.GetFromJsonAsync<List<SalesInvoice>>("api/SalesInvoices");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading sales invoices: {ex.Message}");
            salesInvoices = new List<SalesInvoice>();
        }
        loading = false;
    }

    private void ShowAddForm()
    {
        currentInvoice = new() { InvoiceNumber = $"INV-{DateTime.Now:yyyyMMddHHmmss}", Status = "Unpaid" };
        editingInvoice = null;
        showForm = true;
    }

    private void EditSalesInvoice(SalesInvoice invoice)
    {
        editingInvoice = invoice;
        currentInvoice = new SalesInvoice
        {
            Id = invoice.Id,
            InvoiceNumber = invoice.InvoiceNumber,
            InvoiceDate = invoice.InvoiceDate,
            SalesOrderId = invoice.SalesOrderId,
            SubTotal = invoice.SubTotal,
            TaxAmount = invoice.TaxAmount,
            TotalAmount = invoice.TotalAmount,
            Status = invoice.Status,
            DueDate = invoice.DueDate,
            CreatedDate = invoice.CreatedDate,
            LastModifiedDate = invoice.LastModifiedDate
        };
        showForm = true;
    }

    private async Task SaveSalesInvoice()
    {
        try
        {
            if (editingInvoice != null)
            {
                await Http.PutAsJsonAsync($"api/SalesInvoices/{currentInvoice.Id}", currentInvoice);
            }
            else
            {
                await Http.PostAsJsonAsync("api/SalesInvoices", currentInvoice);
            }
            
            showForm = false;
            await LoadSalesInvoices();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving sales invoice: {ex.Message}");
        }
    }

    private async Task DeleteSalesInvoice(int id)
    {
        try
        {
            await Http.DeleteAsync($"api/SalesInvoices/{id}");
            await LoadSalesInvoices();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting sales invoice: {ex.Message}");
        }
    }

    private void CancelForm()
    {
        showForm = false;
        editingInvoice = null;
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Unpaid" => "bg-warning",
            "Paid" => "bg-success",
            "Overdue" => "bg-danger",
            "Cancelled" => "bg-secondary",
            _ => "bg-secondary"
        };
    }
}
