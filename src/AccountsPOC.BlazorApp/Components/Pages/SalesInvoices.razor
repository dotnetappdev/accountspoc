@page "/sales-invoices"
@attribute [Authorize]
@using System.Net.Http.Json
@using AccountsPOC.BlazorApp.Models
@using AccountsPOC.BlazorApp.Components.Shared
@using Microsoft.JSInterop
@inject HttpClient Http
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Sales Invoices</PageTitle>

<div class="container-fluid modern-page">
    <div class="page-header">
        <div>
            <h1 class="page-title">
                <i class="bi bi-receipt"></i> Sales Invoices
            </h1>
            <p class="page-subtitle">Manage and track your sales invoices</p>
        </div>
        <button class="btn-gradient btn-primary" @onclick="ShowAddForm">
            <i class="bi bi-plus-circle"></i> Create New Invoice
        </button>
    </div>

    @if (loading)
    {
        <div class="loading-card">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Loading invoices...</p>
        </div>
    }
    else if (salesInvoices == null || !salesInvoices.Any())
    {
        <div class="empty-state">
            <i class="bi bi-inbox"></i>
            <h3>No invoices yet</h3>
            <p>Create your first sales invoice to get started</p>
        </div>
    }
    else
    {
        <div class="invoices-grid">
            @foreach (var invoice in salesInvoices)
            {
                <div class="invoice-card">
                    <div class="invoice-card-header">
                        <div>
                            <h4 class="invoice-number">@invoice.InvoiceNumber</h4>
                            <p class="invoice-date">
                                <i class="bi bi-calendar3"></i> @invoice.InvoiceDate.ToString("MMM dd, yyyy")
                            </p>
                        </div>
                        <span class="status-badge status-@invoice.Status.ToLower()">
                            @invoice.Status
                        </span>
                    </div>
                    <div class="invoice-card-body">
                        <div class="invoice-amounts">
                            <div class="amount-row">
                                <span class="label">Subtotal:</span>
                                <span class="value">@invoice.SubTotal.ToString("C")</span>
                            </div>
                            <div class="amount-row">
                                <span class="label">Tax:</span>
                                <span class="value">@invoice.TaxAmount.ToString("C")</span>
                            </div>
                            <div class="amount-row total">
                                <span class="label">Total:</span>
                                <span class="value">@invoice.TotalAmount.ToString("C")</span>
                            </div>
                        </div>
                        @if (invoice.DueDate.HasValue)
                        {
                            <p class="due-date">
                                <i class="bi bi-clock"></i> Due: @invoice.DueDate.Value.ToString("MMM dd, yyyy")
                            </p>
                        }
                    </div>
                    <div class="invoice-card-footer">
                        <button class="btn-action btn-edit" @onclick="() => EditSalesInvoice(invoice)" title="Edit Invoice">
                            <i class="bi bi-pencil"></i> Edit
                        </button>
                        <button class="btn-action btn-pdf" @onclick="() => DownloadPdf(invoice.Id)" title="Download PDF">
                            <i class="bi bi-file-pdf"></i> PDF
                        </button>
                        <button class="btn-action btn-email" @onclick="() => ShowEmailModal(invoice)" title="Send Email">
                            <i class="bi bi-envelope"></i> Email
                        </button>
                        <button class="btn-action btn-link" @onclick="() => ShowPaymentLink(invoice)" title="Payment Link">
                            <i class="bi bi-link-45deg"></i> Link
                        </button>
                        <button class="btn-action btn-delete" @onclick="() => DeleteSalesInvoice(invoice.Id)" title="Delete Invoice">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </div>
            }
        </div>
    }
</div>

<ModalDialog Title="@(editingInvoice != null ? "Edit Invoice" : "Create New Invoice")"
             IsVisible="showForm"
             OnClose="CancelForm"
             Size="xl">
    <Body>
        <EditForm Model="currentInvoice" OnValidSubmit="SaveSalesInvoice">
            <ul class="nav nav-tabs mb-3" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(activeTab == "invoice" ? "active" : "")" 
                            type="button" 
                            @onclick="@(() => SetActiveTab("invoice"))">
                        <i class="bi bi-receipt"></i> Invoice Details
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(activeTab == "salesorder" ? "active" : "")" 
                            type="button" 
                            @onclick="@(() => SetActiveTab("salesorder"))"
                            disabled="@(currentSalesOrder == null)">
                        <i class="bi bi-cart3"></i> Sales Order
                        @if (currentSalesOrder != null)
                        {
                            <span class="badge bg-primary ms-2">@currentSalesOrder.OrderNumber</span>
                        }
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(activeTab == "items" ? "active" : "")" 
                            type="button" 
                            @onclick="@(() => SetActiveTab("items"))"
                            disabled="@(currentSalesOrder == null || currentSalesOrder.SalesOrderItems == null || !currentSalesOrder.SalesOrderItems.Any())">
                        <i class="bi bi-list-ul"></i> Order Items
                        @if (currentSalesOrder?.SalesOrderItems != null && currentSalesOrder.SalesOrderItems.Any())
                        {
                            <span class="badge bg-info ms-2">@currentSalesOrder.SalesOrderItems.Count</span>
                        }
                    </button>
                </li>
            </ul>

            <div class="tab-content">
                @if (activeTab == "invoice")
                {
                    <div class="tab-pane-content">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Invoice Number</label>
                                <InputText class="form-control" @bind-Value="currentInvoice.InvoiceNumber" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Sales Order</label>
                                <InputSelect class="form-select" @bind-Value="currentInvoice.SalesOrderId" @bind-Value:after="LoadSalesOrderDetails">
                                    <option value="0">-- Select Sales Order --</option>
                                    @if (availableSalesOrders != null)
                                    {
                                        @foreach (var order in availableSalesOrders)
                                        {
                                            <option value="@order.Id">@order.OrderNumber - @order.CustomerName</option>
                                        }
                                    }
                                </InputSelect>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Sub Total</label>
                                <CurrencyInput @bind-Value="currentInvoice.SubTotal" Currency="USD" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Tax Amount</label>
                                <CurrencyInput @bind-Value="currentInvoice.TaxAmount" Currency="USD" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Total Amount</label>
                                <CurrencyInput @bind-Value="currentInvoice.TotalAmount" Currency="USD" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Status</label>
                            <InputSelect class="form-select" @bind-Value="currentInvoice.Status">
                                <option value="Unpaid">Unpaid</option>
                                <option value="Paid">Paid</option>
                                <option value="Overdue">Overdue</option>
                                <option value="Cancelled">Cancelled</option>
                            </InputSelect>
                        </div>
                    </div>
                }
                else if (activeTab == "salesorder" && currentSalesOrder != null)
                {
                    <div class="tab-pane-content">
                        <div class="sales-order-details">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6 class="section-title">Order Information</h6>
                                    <div class="detail-row">
                                        <span class="label">Order Number:</span>
                                        <span class="value">@currentSalesOrder.OrderNumber</span>
                                    </div>
                                    <div class="detail-row">
                                        <span class="label">Order Date:</span>
                                        <span class="value">@currentSalesOrder.OrderDate.ToString("MMM dd, yyyy")</span>
                                    </div>
                                    <div class="detail-row">
                                        <span class="label">Status:</span>
                                        <span class="value">
                                            <span class="badge bg-secondary">@currentSalesOrder.Status</span>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="section-title">Customer Information</h6>
                                    <div class="detail-row">
                                        <span class="label">Customer:</span>
                                        <span class="value">@currentSalesOrder.CustomerName</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(currentSalesOrder.CustomerEmail))
                                    {
                                        <div class="detail-row">
                                            <span class="label">Email:</span>
                                            <span class="value">@currentSalesOrder.CustomerEmail</span>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(currentSalesOrder.CustomerPhone))
                                    {
                                        <div class="detail-row">
                                            <span class="label">Phone:</span>
                                            <span class="value">@currentSalesOrder.CustomerPhone</span>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-12">
                                    <h6 class="section-title">Order Totals</h6>
                                    <div class="order-totals">
                                        <div class="total-row">
                                            <span class="label">Subtotal:</span>
                                            <span class="value">@currentSalesOrder.SubTotal.ToString("C")</span>
                                        </div>
                                        <div class="total-row">
                                            <span class="label">Tax:</span>
                                            <span class="value">@currentSalesOrder.TaxAmount.ToString("C")</span>
                                        </div>
                                        <div class="total-row">
                                            <span class="label">Discount:</span>
                                            <span class="value">-@currentSalesOrder.DiscountAmount.ToString("C")</span>
                                        </div>
                                        <div class="total-row total">
                                            <span class="label">Total:</span>
                                            <span class="value">@currentSalesOrder.TotalAmount.ToString("C")</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else if (activeTab == "items" && currentSalesOrder?.SalesOrderItems != null)
                {
                    <div class="tab-pane-content">
                        <div class="order-items-table">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Line #</th>
                                        <th>Product</th>
                                        <th>Description</th>
                                        <th class="text-end">Quantity</th>
                                        <th class="text-end">Unit Price</th>
                                        <th class="text-end">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in currentSalesOrder.SalesOrderItems.OrderBy(i => i.LineNumber))
                                    {
                                        <tr>
                                            <td>@item.LineNumber</td>
                                            <td>
                                                @if (item.Product != null)
                                                {
                                                    <strong>@item.Product.ProductCode</strong>
                                                }
                                                else if (item.IsFreeTextItem)
                                                {
                                                    <em>Free Text Item</em>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Description))
                                                {
                                                    @item.Description
                                                }
                                                else if (item.Product != null)
                                                {
                                                    @item.Product.ProductName
                                                }
                                                @if (!string.IsNullOrEmpty(item.Notes))
                                                {
                                                    <br /><small class="text-muted">@item.Notes</small>
                                                }
                                            </td>
                                            <td class="text-end">@item.Quantity</td>
                                            <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                            <td class="text-end"><strong>@item.TotalPrice.ToString("C")</strong></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            </div>

            <div class="modal-actions">
                <button type="submit" class="btn-gradient btn-success">
                    <i class="bi bi-check-circle"></i> Save Invoice
                </button>
                <button type="button" class="btn btn-secondary" @onclick="CancelForm">
                    Cancel
                </button>
            </div>
        </EditForm>
    </Body>
</ModalDialog>

<ModalDialog Title="Send Invoice via Email"
             IsVisible="showEmailModal"
             OnClose="CloseEmailModal"
             Size="md">
    <Body>
        <div class="email-form">
            <div class="mb-3">
                <label class="form-label">To Email Address</label>
                <input type="email" class="form-control" @bind="emailForm.ToAddress" placeholder="customer@example.com" />
            </div>
            <div class="mb-3">
                <label class="form-label">Subject</label>
                <input type="text" class="form-control" @bind="emailForm.Subject" placeholder="Invoice #..." />
            </div>
            <div class="mb-3">
                <label class="form-label">Message</label>
                <textarea class="form-control" rows="4" @bind="emailForm.Message" placeholder="Dear Customer..."></textarea>
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="includePaymentLink" @bind="emailForm.IncludePaymentLink" />
                <label class="form-check-label" for="includePaymentLink">
                    Include payment link in email
                </label>
            </div>
        </div>
    </Body>
    <Footer>
        <button type="button" class="btn-gradient btn-primary" @onclick="SendEmail">
            <i class="bi bi-send"></i> Send Email
        </button>
        <button type="button" class="btn btn-secondary" @onclick="CloseEmailModal">
            Cancel
        </button>
    </Footer>
</ModalDialog>

<ModalDialog Title="Payment Link"
             IsVisible="showPaymentLinkModal"
             OnClose="ClosePaymentLinkModal"
             Size="md">
    <Body>
        <div class="payment-link-display">
            <p class="mb-3">Share this link with your customer to receive payment:</p>
            <div class="link-container">
                <input type="text" class="form-control" readonly value="@currentPaymentLink" id="paymentLinkInput" />
                <button class="btn-gradient btn-primary" @onclick="CopyPaymentLink">
                    <i class="bi bi-clipboard"></i> Copy
                </button>
            </div>
            <p class="text-muted mt-3">
                <i class="bi bi-info-circle"></i> This link is valid for 30 days
            </p>
        </div>
    </Body>
</ModalDialog>

