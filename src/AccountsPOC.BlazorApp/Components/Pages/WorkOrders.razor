@page "/work-orders"
@attribute [Authorize]
@using System.Net.Http.Json
@using AccountsPOC.BlazorApp.Models
@inject HttpClient Http
@rendermode InteractiveServer

<PageTitle>Work Orders</PageTitle>

<div class="container-fluid">
    <h1 class="mb-4">Work Orders</h1>

    <div class="row mb-3">
        <div class="col">
            <button class="btn btn-primary" @onclick="ShowAddForm">
                <i class="bi bi-plus-circle"></i> Create New Work Order
            </button>
        </div>
    </div>

    @if (showForm)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5>@(editingWorkOrder != null ? "Edit" : "Create") Work Order</h5>
            </div>
            <div class="card-body">
                <EditForm Model="currentWorkOrder" OnValidSubmit="SaveWorkOrder">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Work Order Number</label>
                            <InputText class="form-control" @bind-Value="currentWorkOrder.WorkOrderNumber" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Customer Name</label>
                            <InputText class="form-control" @bind-Value="currentWorkOrder.CustomerName" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Customer Email</label>
                            <InputText class="form-control" type="email" @bind-Value="currentWorkOrder.CustomerEmail" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Customer Phone</label>
                            <InputText class="form-control" @bind-Value="currentWorkOrder.CustomerPhone" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <InputTextArea class="form-control" @bind-Value="currentWorkOrder.Description" rows="3" />
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Scheduled Date</label>
                            <InputDate class="form-control" @bind-Value="currentWorkOrder.ScheduledDate" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Priority</label>
                            <InputSelect class="form-select" @bind-Value="currentWorkOrder.Priority">
                                <option value="Low">Low</option>
                                <option value="Normal">Normal</option>
                                <option value="High">High</option>
                                <option value="Urgent">Urgent</option>
                            </InputSelect>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Status</label>
                            <InputSelect class="form-select" @bind-Value="currentWorkOrder.Status">
                                <option value="Pending">Pending</option>
                                <option value="Scheduled">Scheduled</option>
                                <option value="InProgress">In Progress</option>
                                <option value="Completed">Completed</option>
                                <option value="Cancelled">Cancelled</option>
                                <option value="OnHold">On Hold</option>
                            </InputSelect>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Site Address</label>
                            <InputText class="form-control" @bind-Value="currentWorkOrder.SiteAddress" />
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Site City</label>
                            <InputText class="form-control" @bind-Value="currentWorkOrder.SiteCity" />
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Site Postcode</label>
                            <InputText class="form-control" @bind-Value="currentWorkOrder.SitePostCode" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-secondary" @onclick="CancelForm">Cancel</button>
                </EditForm>
            </div>
        </div>
    }

    @if (loading)
    {
        <div class="d-flex justify-content-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (workOrders == null || !workOrders.Any())
    {
        <div class="alert alert-info">No work orders found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>WO Number</th>
                        <th>Customer</th>
                        <th>Description</th>
                        <th>Scheduled Date</th>
                        <th>Priority</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var wo in workOrders)
                    {
                        <tr>
                            <td>@wo.WorkOrderNumber</td>
                            <td>@wo.CustomerName</td>
                            <td>@(wo.Description.Length > 50 ? wo.Description.Substring(0, 50) + "..." : wo.Description)</td>
                            <td>@(wo.ScheduledDate?.ToShortDateString() ?? "Not Scheduled")</td>
                            <td>
                                <span class="badge bg-@GetPriorityColor(wo.Priority)">
                                    @wo.Priority
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-@GetStatusColor(wo.Status)">
                                    @wo.Status
                                </span>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-primary" @onclick="() => EditWorkOrder(wo)">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteWorkOrder(wo.Id)">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<WorkOrder>? workOrders;
    private WorkOrder currentWorkOrder = new WorkOrder 
    { 
        WorkOrderNumber = $"WO-{DateTime.Now:yyyyMMddHHmmss}",
        CustomerName = "",
        Description = "",
        WorkOrderDate = DateTime.Now,
        Status = "Pending",
        Priority = "Normal",
        TenantId = 1
    };
    private WorkOrder? editingWorkOrder;
    private bool showForm = false;
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadWorkOrders();
    }

    private async Task LoadWorkOrders()
    {
        loading = true;
        try
        {
            workOrders = await Http.GetFromJsonAsync<List<WorkOrder>>("http://localhost:5001/api/WorkOrders");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading work orders: {ex.Message}");
        }
        finally
        {
            loading = false;
        }
    }

    private void ShowAddForm()
    {
        currentWorkOrder = new WorkOrder 
        { 
            WorkOrderNumber = $"WO-{DateTime.Now:yyyyMMddHHmmss}",
            CustomerName = "",
            Description = "",
            WorkOrderDate = DateTime.Now,
            Status = "Pending",
            Priority = "Normal",
            TenantId = 1
        };
        editingWorkOrder = null;
        showForm = true;
    }

    private void EditWorkOrder(WorkOrder workOrder)
    {
        currentWorkOrder = workOrder;
        editingWorkOrder = workOrder;
        showForm = true;
    }

    private async Task SaveWorkOrder()
    {
        try
        {
            if (editingWorkOrder != null)
            {
                await Http.PutAsJsonAsync($"http://localhost:5001/api/WorkOrders/{currentWorkOrder.Id}", currentWorkOrder);
            }
            else
            {
                await Http.PostAsJsonAsync("http://localhost:5001/api/WorkOrders", currentWorkOrder);
            }
            
            await LoadWorkOrders();
            CancelForm();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving work order: {ex.Message}");
        }
    }

    private async Task DeleteWorkOrder(int id)
    {
        if (confirm("Are you sure you want to delete this work order?"))
        {
            try
            {
                await Http.DeleteAsync($"http://localhost:5001/api/WorkOrders/{id}");
                await LoadWorkOrders();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error deleting work order: {ex.Message}");
            }
        }
    }

    private void CancelForm()
    {
        showForm = false;
        editingWorkOrder = null;
    }

    private string GetStatusColor(string status) => status switch
    {
        "Pending" => "secondary",
        "Scheduled" => "info",
        "InProgress" => "primary",
        "Completed" => "success",
        "Cancelled" => "danger",
        "OnHold" => "warning",
        _ => "secondary"
    };

    private string GetPriorityColor(string? priority) => priority switch
    {
        "Low" => "secondary",
        "Normal" => "info",
        "High" => "warning",
        "Urgent" => "danger",
        _ => "secondary"
    };

    private bool confirm(string message)
    {
        // In a real implementation, use JS interop for confirmation
        return true;
    }

    public class WorkOrder
    {
        public int Id { get; set; }
        public int TenantId { get; set; }
        public string WorkOrderNumber { get; set; } = "";
        public DateTime WorkOrderDate { get; set; }
        public DateTime? ScheduledDate { get; set; }
        public string CustomerName { get; set; } = "";
        public string? CustomerEmail { get; set; }
        public string? CustomerPhone { get; set; }
        public string Description { get; set; } = "";
        public string Status { get; set; } = "Pending";
        public string? Priority { get; set; }
        public string? SiteAddress { get; set; }
        public string? SiteCity { get; set; }
        public string? SitePostCode { get; set; }
    }
}
