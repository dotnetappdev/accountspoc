@page "/products"
@using System.Net.Http.Json
@using AccountsPOC.BlazorApp.Models
@using AccountsPOC.BlazorApp.Components.Shared
@inject HttpClient Http
@rendermode InteractiveServer

<PageTitle>Products</PageTitle>

<div class="container-fluid modern-page">
    <div class="page-header">
        <div>
            <h1 class="page-title">
                <i class="bi bi-box-seam"></i> Products
            </h1>
            <p class="page-subtitle">Manage your product catalog and inventory</p>
        </div>
        <button class="btn-gradient btn-primary" @onclick="ShowAddForm">
            <i class="bi bi-plus-circle"></i> Add New Product
        </button>
    </div>

    @if (loading)
    {
        <div class="loading-card">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Loading products...</p>
        </div>
    }
    else if (products == null || !products.Any())
    {
        <div class="empty-state">
            <i class="bi bi-inbox"></i>
            <h3>No products yet</h3>
            <p>Add your first product to get started</p>
        </div>
    }
    else
    {
        <div class="products-grid">
            @foreach (var product in products)
            {
                <div class="product-card">
                    <div class="product-card-header">
                        <div>
                            <h4 class="product-code">@product.ProductCode</h4>
                            <h5 class="product-name">@product.ProductName</h5>
                        </div>
                        <span class="status-badge @(product.IsActive ? "status-active" : "status-inactive")">
                            @(product.IsActive ? "Active" : "Inactive")
                        </span>
                    </div>
                    <div class="product-card-body">
                        @if (!string.IsNullOrEmpty(product.Description))
                        {
                            <p class="product-description">@(product.Description.Length > 100 ? product.Description.Substring(0, 100) + "..." : product.Description)</p>
                        }
                        @if (!string.IsNullOrEmpty(product.Category) || !string.IsNullOrEmpty(product.Barcode))
                        {
                            <div class="product-meta">
                                @if (!string.IsNullOrEmpty(product.Category))
                                {
                                    <span class="meta-badge"><i class="bi bi-tag"></i> @product.Category</span>
                                }
                                @if (!string.IsNullOrEmpty(product.Barcode))
                                {
                                    <span class="meta-badge"><i class="bi bi-upc-scan"></i> @product.Barcode</span>
                                }
                            </div>
                        }
                        <div class="product-info">
                            <div class="info-item price-item">
                                <span class="label">Unit Price</span>
                                <span class="value price">@product.UnitPrice.ToString("C")</span>
                            </div>
                            <div class="stock-info">
                                <div class="info-item">
                                    <span class="label">In Stock</span>
                                    <span class="value stock-level @(product.StockLevel <= product.ReorderLevel ? "low-stock" : "")">
                                        @product.StockLevel
                                        @if (product.StockLevel <= product.ReorderLevel)
                                        {
                                            <i class="bi bi-exclamation-triangle-fill" title="Low Stock"></i>
                                        }
                                    </span>
                                </div>
                                <div class="info-item">
                                    <span class="label">Reorder At</span>
                                    <span class="value">@product.ReorderLevel</span>
                                </div>
                            </div>
                        </div>
                        @if (product.StockLevel <= product.ReorderLevel)
                        {
                            <div class="alert-banner">
                                <i class="bi bi-exclamation-circle"></i>
                                Low stock - reorder recommended
                            </div>
                        }
                    </div>
                    <div class="product-card-footer">
                        <button class="btn-action btn-edit" @onclick="() => EditProduct(product)" title="Edit Product">
                            <i class="bi bi-pencil"></i> Edit
                        </button>
                        <button class="btn-action btn-delete" @onclick="() => DeleteProduct(product.Id)" title="Delete Product">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </div>
                </div>
            }
        </div>
    }
</div>

<ModalDialog Title="@(editingProduct != null ? "Edit Product" : "Add New Product")"
             IsVisible="showForm"
             OnClose="CancelForm"
             Size="xl">
    <Body>
        <EditForm Model="currentProduct" OnValidSubmit="SaveProduct">
            <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-4">
                <MudTabPanel Text="Basic Info" Icon="@Icons.Material.Filled.Info">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Product Code <span class="text-danger">*</span></label>
                            <InputText class="form-control" @bind-Value="currentProduct.ProductCode" placeholder="PROD-001" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Product Name <span class="text-danger">*</span></label>
                            <InputText class="form-control" @bind-Value="currentProduct.ProductName" placeholder="Product name" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Category</label>
                            <InputText class="form-control" @bind-Value="currentProduct.Category" placeholder="e.g., Electronics, Hardware" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Unit of Measure</label>
                            <InputText class="form-control" @bind-Value="currentProduct.UnitOfMeasure" placeholder="Each, Box, Pallet" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <InputTextArea class="form-control" @bind-Value="currentProduct.Description" rows="2" placeholder="Short description..." />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Long Description</label>
                        <InputTextArea class="form-control" @bind-Value="currentProduct.LongDescription" rows="3" placeholder="Detailed product description..." />
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Barcode</label>
                            <InputText class="form-control" @bind-Value="currentProduct.Barcode" placeholder="EAN/UPC barcode" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Manufacturer Part #</label>
                            <InputText class="form-control" @bind-Value="currentProduct.ManufacturerPartNumber" placeholder="MPN" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Internal Reference</label>
                            <InputText class="form-control" @bind-Value="currentProduct.InternalReference" placeholder="Internal ref" />
                        </div>
                    </div>
                    <div class="mb-3 form-check">
                        <InputCheckbox class="form-check-input" id="isActive" @bind-Value="currentProduct.IsActive" />
                        <label class="form-check-label" for="isActive">
                            Product is active
                        </label>
                    </div>
                </MudTabPanel>

                <MudTabPanel Text="Pricing" Icon="@Icons.Material.Filled.AttachMoney">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Unit Price</label>
                            <CurrencyInput @bind-Value="currentProduct.UnitPrice" Currency="USD" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Cost Price</label>
                            <CurrencyInput @bind-Value="currentProduct.CostPrice" Currency="USD" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Tax Code</label>
                            <InputText class="form-control" @bind-Value="currentProduct.TaxCode" placeholder="T1, VAT20, etc." />
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-check mt-4">
                                <InputCheckbox class="form-check-input" id="taxExempt" @bind-Value="currentProduct.TaxExempt" />
                                <label class="form-check-label" for="taxExempt">
                                    Tax Exempt
                                </label>
                            </div>
                        </div>
                    </div>
                </MudTabPanel>

                <MudTabPanel Text="Inventory" Icon="@Icons.Material.Filled.Inventory">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Stock Level</label>
                            <InputNumber class="form-control" @bind-Value="currentProduct.StockLevel" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Reorder Level</label>
                            <InputNumber class="form-control" @bind-Value="currentProduct.ReorderLevel" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Reorder Quantity</label>
                            <InputNumber class="form-control" @bind-Value="currentProduct.ReorderQuantity" />
                        </div>
                    </div>
                    @if (currentProduct.StockLevel <= currentProduct.ReorderLevel)
                    {
                        <MudAlert Severity="Severity.Warning" Icon="@Icons.Material.Filled.Warning">
                            Stock level is at or below reorder level. Consider restocking.
                        </MudAlert>
                    }
                </MudTabPanel>

                <MudTabPanel Text="Dimensions" Icon="@Icons.Material.Filled.Straighten">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Length</label>
                            <InputNumber class="form-control" @bind-Value="currentProduct.Length" />
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Width</label>
                            <InputNumber class="form-control" @bind-Value="currentProduct.Width" />
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Height</label>
                            <InputNumber class="form-control" @bind-Value="currentProduct.Height" />
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Dimension UOM</label>
                            <InputText class="form-control" @bind-Value="currentProduct.DimensionUOM" placeholder="cm, in, mm" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Weight</label>
                            <InputNumber class="form-control" @bind-Value="currentProduct.Weight" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Weight UOM</label>
                            <InputText class="form-control" @bind-Value="currentProduct.WeightUOM" placeholder="kg, lb, g" />
                        </div>
                    </div>
                </MudTabPanel>

                <MudTabPanel Text="Images" Icon="@Icons.Material.Filled.Image">
                    <div class="mb-3">
                        <label class="form-label">Primary Image URL</label>
                        <InputText class="form-control" @bind-Value="currentProduct.PrimaryImageUrl" placeholder="https://example.com/image.jpg" />
                        @if (!string.IsNullOrEmpty(currentProduct.PrimaryImageUrl))
                        {
                            <div class="mt-2">
                                <img src="@currentProduct.PrimaryImageUrl" alt="Primary" style="max-width: 200px; max-height: 200px;" class="img-thumbnail" />
                            </div>
                        }
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Additional Images (comma-separated URLs)</label>
                        <InputTextArea class="form-control" @bind-Value="additionalImagesInput" rows="3" placeholder="https://example.com/image1.jpg, https://example.com/image2.jpg" />
                        <small class="form-text text-muted">Enter multiple image URLs separated by commas</small>
                    </div>
                </MudTabPanel>
            </MudTabs>

            <div class="modal-actions">
                <button type="submit" class="btn-gradient btn-success">
                    <i class="bi bi-check-circle"></i> Save Product
                </button>
                <button type="button" class="btn btn-secondary" @onclick="CancelForm">
                    Cancel
                </button>
            </div>
        </EditForm>
    </Body>
</ModalDialog>

