@page "/exchangerates"
@attribute [Authorize]
@using AccountsPOC.BlazorApp.Models
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Exchange Rates</PageTitle>

<div class="page-header">
    <h1 class="text-gradient">Exchange Rates</h1>
    <p>Manage currency exchange rates with automatic updates from European Central Bank</p>
</div>

<div class="action-bar">
    <button class="btn btn-primary" @onclick="UpdateFromECB">
        <i class="bi bi-cloud-download"></i> Update from ECB
    </button>
    <button class="btn btn-success" @onclick="ShowAddModal">
        <i class="bi bi-plus-circle"></i> Add Manual Rate
    </button>
    <button class="btn btn-info" @onclick="ShowConverter">
        <i class="bi bi-calculator"></i> Currency Converter
    </button>
</div>

@if (loading)
{
    <div class="loading-state">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p>Loading exchange rates...</p>
    </div>
}
else if (exchangeRates == null || !exchangeRates.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> No exchange rates found. Click "Update from ECB" to fetch the latest rates.
    </div>
}
else
{
    <div class="stats-row">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-cash-stack"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@exchangeRates.Count</div>
                <div class="stat-label">Total Rates</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-check-circle"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@exchangeRates.Count(r => r.IsActive)</div>
                <div class="stat-label">Active Rates</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-calendar-check"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@(exchangeRates.Any() ? exchangeRates.Max(r => r.RateDate).ToString("MMM d, yyyy") : "N/A")</div>
                <div class="stat-label">Latest Update</div>
            </div>
        </div>
    </div>

    <div class="glass-card">
        <div class="card-header">
            <h5><i class="bi bi-currency-exchange"></i> Exchange Rate List</h5>
            <div class="filter-group">
                <select class="form-control" @bind="filterCurrency">
                    <option value="">All Currencies</option>
                    @foreach (var currency in exchangeRates.Select(r => r.FromCurrency).Distinct().OrderBy(c => c))
                    {
                        <option value="@currency">@currency</option>
                    }
                </select>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>From</th>
                        <th>To</th>
                        <th>Exchange Rate</th>
                        <th>Rate Date</th>
                        <th>Source</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rate in GetFilteredRates())
                    {
                        <tr>
                            <td>
                                <span class="badge badge-primary">@rate.FromCurrency</span>
                            </td>
                            <td>
                                <span class="badge badge-success">@rate.ToCurrency</span>
                            </td>
                            <td>
                                <strong>@rate.Rate.ToString("N6")</strong>
                            </td>
                            <td>
                                @rate.RateDate.ToString("MMM d, yyyy")
                            </td>
                            <td>
                                <span class="badge @(rate.Source.Contains("ECB") ? "badge-info" : "badge-warning")">
                                    @rate.Source
                                </span>
                            </td>
                            <td>
                                @if (rate.IsActive)
                                {
                                    <span class="badge badge-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-sm btn-warning" @onclick="() => EditRate(rate)">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteRate(rate.Id)">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@if (showModal)
{
    <ModalDialog Title="@(editingRate?.Id > 0 ? "Edit Exchange Rate" : "Add Manual Exchange Rate")" OnClose="CloseModal">
        <form @onsubmit="SaveRate">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">From Currency</label>
                    <input type="text" class="form-control" @bind="editingRate.FromCurrency" required maxlength="10" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">To Currency</label>
                    <input type="text" class="form-control" @bind="editingRate.ToCurrency" required maxlength="10" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Exchange Rate</label>
                    <input type="number" class="form-control" @bind="editingRate.Rate" required step="0.000001" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Rate Date</label>
                    <input type="date" class="form-control" @bind="editingRate.RateDate" required />
                </div>
            </div>
            <div class="mb-3">
                <label class="form-check-label">
                    <input type="checkbox" class="form-check-input" @bind="editingRate.IsActive" />
                    Active
                </label>
            </div>
            <div class="modal-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Save
                </button>
                <button type="button" class="btn btn-secondary" @onclick="CloseModal">
                    <i class="bi bi-x-circle"></i> Cancel
                </button>
            </div>
        </form>
    </ModalDialog>
}

@if (showConverter)
{
    <ModalDialog Title="Currency Converter" OnClose="CloseConverter">
        <div class="mb-3">
            <label class="form-label">From Currency</label>
            <select class="form-control" @bind="converterFrom">
                @foreach (var currency in exchangeRates?.Select(r => r.FromCurrency).Distinct().OrderBy(c => c) ?? Enumerable.Empty<string>())
                {
                    <option value="@currency">@currency</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">To Currency</label>
            <select class="form-control" @bind="converterTo">
                @foreach (var currency in exchangeRates?.Select(r => r.ToCurrency).Distinct().OrderBy(c => c) ?? Enumerable.Empty<string>())
                {
                    <option value="@currency">@currency</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Amount</label>
            <input type="number" class="form-control" @bind="converterAmount" step="0.01" />
        </div>
        <button class="btn btn-primary" @onclick="Convert">
            <i class="bi bi-calculator"></i> Convert
        </button>
        @if (conversionResult.HasValue)
        {
            <div class="alert alert-success mt-3">
                <h5>@converterAmount @converterFrom = @conversionResult.Value.ToString("N2") @converterTo</h5>
            </div>
        }
    </ModalDialog>
}

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert @(isError ? "alert-danger" : "alert-success") alert-dismissible fade show" role="alert">
        @message
        <button type="button" class="btn-close" @onclick="() => message = null"></button>
    </div>
}

@code {
    private List<ExchangeRate>? exchangeRates;
    private ExchangeRate editingRate = new();
    private bool showModal = false;
    private bool showConverter = false;
    private bool loading = true;
    private string? message;
    private bool isError;
    private string filterCurrency = "";
    
    // Converter fields
    private string converterFrom = "USD";
    private string converterTo = "EUR";
    private decimal converterAmount = 100;
    private decimal? conversionResult;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        loading = true;
        try
        {
            exchangeRates = await Http.GetFromJsonAsync<List<ExchangeRate>>("http://localhost:5001/api/ExchangeRates?tenantId=1");
        }
        catch (Exception ex)
        {
            ShowMessage($"Error loading data: {ex.Message}", true);
        }
        finally
        {
            loading = false;
        }
    }

    private IEnumerable<ExchangeRate> GetFilteredRates()
    {
        if (exchangeRates == null) return Enumerable.Empty<ExchangeRate>();
        
        if (string.IsNullOrEmpty(filterCurrency))
            return exchangeRates;
        
        return exchangeRates.Where(r => r.FromCurrency == filterCurrency);
    }

    private async Task UpdateFromECB()
    {
        loading = true;
        try
        {
            var response = await Http.PostAsync("http://localhost:5001/api/ExchangeRates/update-from-ecb?tenantId=1&baseCurrency=USD", null);
            if (response.IsSuccessStatusCode)
            {
                ShowMessage("Exchange rates updated successfully from ECB!", false);
                await LoadData();
            }
            else
            {
                ShowMessage("Failed to update exchange rates", true);
            }
        }
        catch (Exception ex)
        {
            ShowMessage($"Error: {ex.Message}", true);
        }
        finally
        {
            loading = false;
        }
    }

    private void ShowAddModal()
    {
        editingRate = new ExchangeRate 
        { 
            TenantId = 1,
            RateDate = DateTime.Today,
            IsActive = true
        };
        showModal = true;
    }

    private void EditRate(ExchangeRate rate)
    {
        editingRate = new ExchangeRate
        {
            Id = rate.Id,
            TenantId = rate.TenantId,
            FromCurrency = rate.FromCurrency,
            ToCurrency = rate.ToCurrency,
            Rate = rate.Rate,
            RateDate = rate.RateDate,
            IsActive = rate.IsActive
        };
        showModal = true;
    }

    private async Task SaveRate()
    {
        try
        {
            if (editingRate.Id == 0)
            {
                var response = await Http.PostAsJsonAsync("http://localhost:5001/api/ExchangeRates", editingRate);
                if (response.IsSuccessStatusCode)
                {
                    ShowMessage("Exchange rate added successfully!", false);
                }
                else
                {
                    ShowMessage("Failed to add exchange rate", true);
                }
            }
            else
            {
                var response = await Http.PutAsJsonAsync($"http://localhost:5001/api/ExchangeRates/{editingRate.Id}", editingRate);
                if (response.IsSuccessStatusCode)
                {
                    ShowMessage("Exchange rate updated successfully!", false);
                }
                else
                {
                    ShowMessage("Failed to update exchange rate", true);
                }
            }

            showModal = false;
            await LoadData();
        }
        catch (Exception ex)
        {
            ShowMessage($"Error: {ex.Message}", true);
        }
    }

    private async Task DeleteRate(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this exchange rate?"))
        {
            try
            {
                var response = await Http.DeleteAsync($"http://localhost:5001/api/ExchangeRates/{id}?tenantId=1");
                if (response.IsSuccessStatusCode)
                {
                    ShowMessage("Exchange rate deleted successfully!", false);
                    await LoadData();
                }
                else
                {
                    ShowMessage("Failed to delete exchange rate", true);
                }
            }
            catch (Exception ex)
            {
                ShowMessage($"Error: {ex.Message}", true);
            }
        }
    }

    private void ShowConverter()
    {
        converterFrom = "USD";
        converterTo = "EUR";
        converterAmount = 100;
        conversionResult = null;
        showConverter = true;
    }

    private async Task Convert()
    {
        try
        {
            var url = $"http://localhost:5001/api/ExchangeRates/convert?from={converterFrom}&to={converterTo}&amount={converterAmount}&tenantId=1";
            conversionResult = await Http.GetFromJsonAsync<decimal>(url);
        }
        catch (Exception ex)
        {
            ShowMessage($"Conversion error: {ex.Message}", true);
        }
    }

    private void CloseModal()
    {
        showModal = false;
        editingRate = new();
    }

    private void CloseConverter()
    {
        showConverter = false;
        conversionResult = null;
    }

    private void ShowMessage(string msg, bool error)
    {
        message = msg;
        isError = error;
    }

    [Inject] private IJSRuntime JSRuntime { get; set; } = default!;
}
