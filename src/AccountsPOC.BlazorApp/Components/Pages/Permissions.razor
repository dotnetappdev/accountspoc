@page "/permissions"
@using System.Net.Http.Json
@using AccountsPOC.BlazorApp.Models
@inject HttpClient Http
@rendermode InteractiveServer

<PageTitle>Permission Management</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="mt-4">
    <MudText Typo="Typo.h4" Class="mb-4">
        <MudIcon Icon="@Icons.Material.Filled.Lock" Class="mr-2" />
        Permission Management
    </MudText>

    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="ShowAddForm" Class="mb-4">
        <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-1" />
        Add New Permission
    </MudButton>

    @if (showForm)
    {
        <MudCard Class="mb-4">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">@(editingPermission != null ? "Edit Permission" : "Create New Permission")</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudGrid>
                    <MudItem xs="12" md="6">
                        <MudTextField @bind-Value="permissionForm.Name" Label="Permission Name" Required="true" />
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <MudTextField @bind-Value="permissionForm.Resource" Label="Resource" Required="true" 
                                      HelperText="e.g., Tenant, Customer, StockItem" />
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <MudSelect @bind-Value="permissionForm.Action" Label="Action" Required="true">
                            <MudSelectItem Value="@("Create")">Create</MudSelectItem>
                            <MudSelectItem Value="@("Read")">Read</MudSelectItem>
                            <MudSelectItem Value="@("Update")">Update</MudSelectItem>
                            <MudSelectItem Value="@("Delete")">Delete</MudSelectItem>
                            <MudSelectItem Value="@("Manage")">Manage</MudSelectItem>
                        </MudSelect>
                    </MudItem>
                    <MudItem xs="12">
                        <MudTextField @bind-Value="permissionForm.Description" Label="Description" Lines="3" />
                    </MudItem>
                </MudGrid>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="SavePermission">
                    <MudIcon Icon="@Icons.Material.Filled.Save" Class="mr-1" />
                    Save
                </MudButton>
                <MudButton Variant="Variant.Outlined" OnClick="CancelForm">Cancel</MudButton>
            </MudCardActions>
        </MudCard>
    }

    <MudDataGrid T="Permission" Items="@permissions" Filterable="true" QuickFilter="@_quickFilter" 
                 Loading="@loading" Hover="true" Dense="true">
        <ToolBarContent>
            <MudText Typo="Typo.h6">Permissions</MudText>
            <MudSpacer />
            <MudTextField @bind-Value="_searchString" Placeholder="Search..." Adornment="Adornment.Start" 
                         AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0" />
        </ToolBarContent>
        <Columns>
            <PropertyColumn Property="x => x.Name" Title="Permission Name" />
            <PropertyColumn Property="x => x.Resource" Title="Resource">
                <CellTemplate>
                    <MudChip Size="Size.Small" Color="Color.Primary">@context.Item.Resource</MudChip>
                </CellTemplate>
            </PropertyColumn>
            <PropertyColumn Property="x => x.Action" Title="Action">
                <CellTemplate>
                    <MudChip Size="Size.Small" Color="@GetActionColor(context.Item.Action)">@context.Item.Action</MudChip>
                </CellTemplate>
            </PropertyColumn>
            <PropertyColumn Property="x => x.Description" Title="Description" />
            <TemplateColumn Title="Actions" Filterable="false" Sortable="false">
                <CellTemplate>
                    <MudStack Row="true" Spacing="1">
                        <MudIconButton Icon="@Icons.Material.Filled.Edit" 
                                     Color="Color.Warning" 
                                     Size="Size.Small" 
                                     OnClick="@(() => EditPermission(context.Item))" />
                        <MudIconButton Icon="@Icons.Material.Filled.Delete" 
                                     Color="Color.Error" 
                                     Size="Size.Small" 
                                     OnClick="@(() => DeletePermission(context.Item.Id))" />
                    </MudStack>
                </CellTemplate>
            </TemplateColumn>
        </Columns>
        <PagerContent>
            <MudDataGridPager T="Permission" PageSizeOptions="new int[] { 10, 25, 50 }" />
        </PagerContent>
    </MudDataGrid>
</MudContainer>

@code {
    private List<Permission> permissions = new();
    private PermissionForm permissionForm = new();
    private Permission? editingPermission;
    private bool showForm = false;
    private bool loading = true;
    private string _searchString = "";

    private Func<Permission, bool> _quickFilter => x =>
    {
        if (string.IsNullOrWhiteSpace(_searchString))
            return true;

        if (x.Name?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) == true)
            return true;

        if (x.Resource?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) == true)
            return true;

        if (x.Action?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) == true)
            return true;

        return false;
    };

    private Color GetActionColor(string action) => action switch
    {
        "Create" => Color.Success,
        "Read" => Color.Info,
        "Update" => Color.Warning,
        "Delete" => Color.Error,
        "Manage" => Color.Primary,
        _ => Color.Default
    };

    protected override async Task OnInitializedAsync()
    {
        await LoadPermissions();
    }

    private async Task LoadPermissions()
    {
        loading = true;
        try
        {
            permissions = await Http.GetFromJsonAsync<List<Permission>>("api/Permissions") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading permissions: {ex.Message}");
        }
        loading = false;
    }

    private void ShowAddForm()
    {
        permissionForm = new() { Action = "Read" };
        editingPermission = null;
        showForm = true;
    }

    private void EditPermission(Permission permission)
    {
        editingPermission = permission;
        permissionForm = new PermissionForm
        {
            Id = permission.Id,
            Name = permission.Name,
            Description = permission.Description,
            Resource = permission.Resource,
            Action = permission.Action
        };
        showForm = true;
    }

    private async Task SavePermission()
    {
        try
        {
            var dto = new
            {
                permissionForm.Name,
                permissionForm.Description,
                permissionForm.Resource,
                permissionForm.Action
            };

            if (editingPermission != null)
            {
                await Http.PutAsJsonAsync($"api/Permissions/{permissionForm.Id}", dto);
            }
            else
            {
                await Http.PostAsJsonAsync("api/Permissions", dto);
            }
            
            showForm = false;
            await LoadPermissions();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving permission: {ex.Message}");
        }
    }

    private async Task DeletePermission(int id)
    {
        try
        {
            await Http.DeleteAsync($"api/Permissions/{id}");
            await LoadPermissions();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting permission: {ex.Message}");
        }
    }

    private void CancelForm()
    {
        showForm = false;
        editingPermission = null;
    }

    private class PermissionForm
    {
        public int Id { get; set; }
        public string Name { get; set; } = "";
        public string? Description { get; set; }
        public string Resource { get; set; } = "";
        public string Action { get; set; } = "";
    }
}
