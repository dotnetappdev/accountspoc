@page "/stock-items"
@using System.Net.Http.Json
@using AccountsPOC.BlazorApp.Models
@inject HttpClient Http
@rendermode InteractiveServer

<PageTitle>Stock Items</PageTitle>

<div class="container-fluid">
    <h1 class="mb-4">Stock Items</h1>

    <div class="row mb-3">
        <div class="col">
            <button class="btn btn-primary" @onclick="ShowAddForm">
                <i class="bi bi-plus-circle"></i> Add New Stock Item
            </button>
        </div>
    </div>

    @if (showForm)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5>@(editingItem != null ? "Edit" : "Add") Stock Item</h5>
            </div>
            <div class="card-body">
                <EditForm Model="currentItem" OnValidSubmit="SaveStockItem">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Stock Code</label>
                            <InputText class="form-control" @bind-Value="currentItem.StockCode" />
                        </div>
                        <div class="col-md-8 mb-3">
                            <label class="form-label">Description</label>
                            <InputText class="form-control" @bind-Value="currentItem.Description" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Cost Price (£)</label>
                            <InputNumber class="form-control" @bind-Value="currentItem.CostPrice" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Selling Price (£)</label>
                            <InputNumber class="form-control" @bind-Value="currentItem.SellingPrice" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Unit of Measure</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Quantity On Hand</label>
                            <InputNumber class="form-control" @bind-Value="currentItem.QuantityOnHand" />
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Quantity Available</label>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Reorder Level</label>
                            <InputNumber class="form-control" @bind-Value="currentItem.ReorderLevel" />
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Warehouse ID</label>
                            <InputNumber class="form-control" @bind-Value="currentItem.WarehouseId" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Bin Location</label>
                            <InputText class="form-control" @bind-Value="currentItem.BinLocation" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-check-label mt-4">
                                <InputCheckbox class="form-check-input" @bind-Value="currentItem.IsActive" />
                                Active
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-secondary" @onclick="CancelForm">Cancel</button>
                </EditForm>
            </div>
        </div>
    }

    @if (loading)
    {
        <div class="d-flex justify-content-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (stockItems == null || !stockItems.Any())
    {
        <div class="alert alert-info">No stock items found. Add one to get started.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Stock Code</th>
                        <th>Description</th>
                        <th>Cost Price</th>
                        <th>Selling Price</th>
                        <th>Qty On Hand</th>
                        <th>Qty Available</th>
                        <th>Warehouse</th>
                        <th>Bin Location</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in stockItems)
                    {
                        <tr class="@(item.QuantityOnHand <= item.ReorderLevel ? "table-warning" : "")">
                            <td><strong>@item.StockCode</strong></td>
                            <td>@item.Description</td>
                            <td>@item.CostPrice.ToString("C")</td>
                            <td>@item.SellingPrice.ToString("C")</td>
                            <td>
                                @item.QuantityOnHand
                                @if (item.QuantityOnHand <= item.ReorderLevel)
                                {
                                    <span class="badge bg-warning text-dark ms-1">
                                        <i class="bi bi-exclamation-triangle"></i> Low Stock
                                    </span>
                                }
                            </td>
                            <td>@item.Warehouse</td>
                            <td>@item.BinLocation</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-sm btn-warning" @onclick="() => EditStockItem(item)">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteStockItem(item.Id)">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (stockItems.Any(i => i.QuantityOnHand <= i.ReorderLevel))
        {
            <div class="alert alert-warning mt-3">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <strong>Warning:</strong> @stockItems.Count(i => i.QuantityOnHand <= i.ReorderLevel) item(s) are at or below reorder level.
            </div>
        }
    }
</div>

@code {
    private List<StockItem>? stockItems;
    private StockItem currentItem = new() { StockCode = "", Description = "", ProductId = 1 };
    private StockItem? editingItem;
    private bool showForm = false;
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadStockItems();
    }

    private async Task LoadStockItems()
    {
        loading = true;
        try
        {
            stockItems = await Http.GetFromJsonAsync<List<StockItem>>("api/StockItems");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading stock items: {ex.Message}");
            stockItems = new List<StockItem>();
        }
        loading = false;
    }

    private void ShowAddForm()
    {
        currentItem = new() { StockCode = "", Description = "", ProductId = 1, IsActive = true };
        editingItem = null;
        showForm = true;
    }

    private void EditStockItem(StockItem item)
    {
        editingItem = item;
        currentItem = new StockItem
        {
            Id = item.Id,
            StockCode = item.StockCode,
            Description = item.Description,
            CostPrice = item.CostPrice,
            SellingPrice = item.SellingPrice,
            QuantityOnHand = item.QuantityOnHand,
            ReorderLevel = item.ReorderLevel,
            Warehouse = item.Warehouse,
            BinLocation = item.BinLocation,
            IsActive = item.IsActive,
            CreatedDate = item.CreatedDate,
            LastModifiedDate = item.LastModifiedDate
        };
        showForm = true;
    }

    private async Task SaveStockItem()
    {
        try
        {
            if (editingItem != null)
            {
                await Http.PutAsJsonAsync($"api/StockItems/{currentItem.Id}", currentItem);
            }
            else
            {
                await Http.PostAsJsonAsync("api/StockItems", currentItem);
            }
            
            showForm = false;
            await LoadStockItems();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving stock item: {ex.Message}");
        }
    }

    private async Task DeleteStockItem(int id)
    {
        try
        {
            await Http.DeleteAsync($"api/StockItems/{id}");
            await LoadStockItems();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting stock item: {ex.Message}");
        }
    }

    private void CancelForm()
    {
        showForm = false;
        editingItem = null;
    }
}
