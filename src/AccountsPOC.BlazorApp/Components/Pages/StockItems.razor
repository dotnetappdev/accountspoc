@page "/stock-items"
@using System.Net.Http.Json
@using AccountsPOC.BlazorApp.Models
@using AccountsPOC.BlazorApp.Components.Shared
@inject HttpClient Http
@rendermode InteractiveServer

<PageTitle>Stock Items</PageTitle>

<div class="container-fluid">
    <h1 class="mb-4">Stock Items</h1>

    <div class="row mb-3">
        <div class="col">
            <button class="btn btn-primary" @onclick="ShowAddForm">
                <i class="bi bi-plus-circle"></i> Add New Stock Item
            </button>
        </div>
    </div>

    @if (loading)
    {
        <div class="d-flex justify-content-center">
            <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
        </div>
    }
    else if (stockItems == null || !stockItems.Any())
    {
        <div class="alert alert-info">No stock items found. Add one to get started.</div>
    }
    else
    {
        <MudDataGrid T="StockItem" Items="@stockItems" 
                     Filterable="true" 
                     FilterMode="DataGridFilterMode.ColumnFilterMenu"
                     SortMode="SortMode.Multiple"
                     QuickFilter="@_quickFilter"
                     Hideable="true"
                     ColumnResizeMode="ResizeMode.Column"
                     Dense="true"
                     Hover="true"
                     Striped="true"
                     Bordered="true"
                     FixedHeader="true"
                     Height="600px">
            <ToolBarContent>
                <MudSpacer />
                <MudTextField @bind-Value="_searchString" 
                             Placeholder="Search" 
                             Adornment="Adornment.Start" 
                             AdornmentIcon="@Icons.Material.Filled.Search" 
                             IconSize="Size.Medium" 
                             Class="mt-0"
                             Immediate="true"></MudTextField>
            </ToolBarContent>
            <Columns>
                <PropertyColumn Property="x => x.StockCode" Title="Stock Code" Filterable="true" Sortable="true">
                    <CellTemplate>
                        <MudText Typo="Typo.body2"><strong>@context.Item.StockCode</strong></MudText>
                    </CellTemplate>
                </PropertyColumn>
                <PropertyColumn Property="x => x.Description" Title="Description" Filterable="true" Sortable="true" />
                <PropertyColumn Property="x => x.CostPrice" Title="Cost Price" Filterable="true" Sortable="true" Format="C" />
                <PropertyColumn Property="x => x.SellingPrice" Title="Selling Price" Filterable="true" Sortable="true" Format="C" />
                <PropertyColumn Property="x => x.QuantityOnHand" Title="Qty On Hand" Filterable="true" Sortable="true">
                    <CellTemplate>
                        <MudText Typo="Typo.body2">
                            @context.Item.QuantityOnHand
                            @if (context.Item.QuantityOnHand <= context.Item.ReorderLevel)
                            {
                                <MudChip Size="Size.Small" Color="Color.Warning" Icon="@Icons.Material.Filled.Warning">Low Stock</MudChip>
                            }
                        </MudText>
                    </CellTemplate>
                </PropertyColumn>
                <PropertyColumn Property="x => x.QuantityAvailable" Title="Qty Available" Filterable="true" Sortable="true" />
                <TemplateColumn Title="Warehouse" Filterable="false" Sortable="false">
                    <CellTemplate>
                        @(context.Item.Warehouse?.WarehouseName ?? "N/A")
                    </CellTemplate>
                </TemplateColumn>
                <PropertyColumn Property="x => x.BinLocation" Title="Bin Location" Filterable="true" Sortable="true" />
                <PropertyColumn Property="x => x.IsActive" Title="Status" Filterable="true" Sortable="true">
                    <CellTemplate>
                        @if (context.Item.IsActive)
                        {
                            <MudChip Size="Size.Small" Color="Color.Success">Active</MudChip>
                        }
                        else
                        {
                            <MudChip Size="Size.Small" Color="Color.Default">Inactive</MudChip>
                        }
                    </CellTemplate>
                </PropertyColumn>
                <TemplateColumn Title="Actions" Filterable="false" Sortable="false">
                    <CellTemplate>
                        <MudStack Row="true" Spacing="1">
                            <MudIconButton Icon="@Icons.Material.Filled.Edit" 
                                         Color="Color.Warning" 
                                         Size="Size.Small" 
                                         OnClick="@(() => EditStockItem(context.Item))" />
                            <MudIconButton Icon="@Icons.Material.Filled.Delete" 
                                         Color="Color.Error" 
                                         Size="Size.Small" 
                                         OnClick="@(() => DeleteStockItem(context.Item.Id))" />
                        </MudStack>
                    </CellTemplate>
                </TemplateColumn>
            </Columns>
            <PagerContent>
                <MudDataGridPager T="StockItem" PageSizeOptions="new int[] { 10, 25, 50, 100 }" />
            </PagerContent>
        </MudDataGrid>

        @if (stockItems.Any(i => i.QuantityOnHand <= i.ReorderLevel))
        {
            <MudAlert Severity="Severity.Warning" Icon="@Icons.Material.Filled.Warning" Class="mt-3">
                <strong>Warning:</strong> @stockItems.Count(i => i.QuantityOnHand <= i.ReorderLevel) item(s) are at or below reorder level.
            </MudAlert>
        }
    }
</div>

<ModalDialog Title="@(editingItem != null ? "Edit Stock Item" : "Add New Stock Item")"
             IsVisible="showForm"
             OnClose="CancelForm"
             Size="lg">
    <Body>
        <EditForm Model="currentItem" OnValidSubmit="SaveStockItem">
            <DataAnnotationsValidator />
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Stock Code <span class="text-danger">*</span></label>
                    <InputText class="form-control" @bind-Value="currentItem.StockCode" placeholder="STK-001" />
                    <ValidationMessage For="@(() => currentItem.StockCode)" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Unit of Measure</label>
                    <InputText class="form-control" @bind-Value="currentItem.UnitOfMeasure" placeholder="Each, Box, Pallet" />
                </div>
            </div>
            
            <div class="mb-3">
                <label class="form-label">Description <span class="text-danger">*</span></label>
                <InputText class="form-control" @bind-Value="currentItem.Description" placeholder="Short description" />
                <ValidationMessage For="@(() => currentItem.Description)" />
            </div>
            
            <div class="mb-3">
                <label class="form-label">Long Description</label>
                <InputTextArea class="form-control" @bind-Value="currentItem.LongDescription" rows="2" placeholder="Detailed description..." />
            </div>
            
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label class="form-label">Category</label>
                    <InputText class="form-control" @bind-Value="currentItem.Category" placeholder="e.g., Electronics" />
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Barcode</label>
                    <InputText class="form-control" @bind-Value="currentItem.Barcode" placeholder="Barcode/EAN" />
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Manufacturer Part #</label>
                    <InputText class="form-control" @bind-Value="currentItem.ManufacturerPartNumber" placeholder="MPN" />
                </div>
            </div>
            
            <hr class="my-4" />
            <h6 class="text-muted mb-3"><i class="bi bi-currency-dollar"></i> Pricing</h6>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Cost Price</label>
                    <InputNumber class="form-control" @bind-Value="currentItem.CostPrice" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Selling Price</label>
                    <InputNumber class="form-control" @bind-Value="currentItem.SellingPrice" />
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Tax Code</label>
                    <InputText class="form-control" @bind-Value="currentItem.TaxCode" placeholder="T1" />
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-check mt-4">
                        <InputCheckbox class="form-check-input" @bind-Value="currentItem.TaxExempt" id="taxExempt" />
                        <label class="form-check-label" for="taxExempt">Tax Exempt</label>
                    </div>
                </div>
            </div>
            
            <hr class="my-4" />
            <h6 class="text-muted mb-3"><i class="bi bi-boxes"></i> Stock Information</h6>
            
            <div class="row">
                <div class="col-md-3 mb-3">
                    <label class="form-label">Qty On Hand</label>
                    <InputNumber class="form-control" @bind-Value="currentItem.QuantityOnHand" />
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">Qty Allocated</label>
                    <InputNumber class="form-control" @bind-Value="currentItem.QuantityAllocated" />
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">Qty On Order</label>
                    <InputNumber class="form-control" @bind-Value="currentItem.QuantityOnOrder" />
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">Qty Available</label>
                    <input type="text" class="form-control" value="@(currentItem.QuantityOnHand - currentItem.QuantityAllocated)" readonly />
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Reorder Level</label>
                    <InputNumber class="form-control" @bind-Value="currentItem.ReorderLevel" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Reorder Quantity</label>
                    <InputNumber class="form-control" @bind-Value="currentItem.ReorderQuantity" />
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Warehouse ID</label>
                    <InputNumber class="form-control" @bind-Value="currentItem.WarehouseId" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Bin Location</label>
                    <InputText class="form-control" @bind-Value="currentItem.BinLocation" placeholder="A1-B2-C3" />
                </div>
            </div>
            
            <hr class="my-4" />
            <h6 class="text-muted mb-3"><i class="bi bi-truck"></i> Supplier Information</h6>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Default Supplier ID</label>
                    <InputNumber class="form-control" @bind-Value="currentItem.DefaultSupplierId" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Supplier Part Number</label>
                    <InputText class="form-control" @bind-Value="currentItem.SupplierPartNumber" placeholder="Supplier's part #" />
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="form-check">
                        <InputCheckbox class="form-check-input" @bind-Value="currentItem.IsActive" id="isActive" />
                        <label class="form-check-label" for="isActive">Active</label>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="form-check">
                        <InputCheckbox class="form-check-input" @bind-Value="currentItem.IsDiscontinued" id="isDiscontinued" />
                        <label class="form-check-label" for="isDiscontinued">Discontinued</label>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="form-check">
                        <InputCheckbox class="form-check-input" @bind-Value="currentItem.IsAgeRestricted" id="isAgeRestricted" />
                        <label class="form-check-label" for="isAgeRestricted">Age Restricted</label>
                    </div>
                </div>
            </div>
            
            <div class="mt-3 d-flex justify-content-end gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Save Stock Item
                </button>
                <button type="button" class="btn btn-secondary" @onclick="CancelForm">
                    <i class="bi bi-x-circle"></i> Cancel
                </button>
            </div>
        </EditForm>
    </Body>
</ModalDialog>

@code {
    private List<StockItem>? stockItems;
    private StockItem currentItem = new() { StockCode = "", Description = "", ProductId = 1 };
    private StockItem? editingItem;
    private bool showForm = false;
    private bool loading = true;
    private string _searchString = "";

    private Func<StockItem, bool> _quickFilter => x =>
    {
        if (string.IsNullOrWhiteSpace(_searchString))
            return true;

        if (x.StockCode?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) == true)
            return true;

        if (x.Description?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) == true)
            return true;

        if (x.BinLocation?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) == true)
            return true;

        return false;
    };

    protected override async Task OnInitializedAsync()
    {
        await LoadStockItems();
    }

    private async Task LoadStockItems()
    {
        loading = true;
        try
        {
            stockItems = await Http.GetFromJsonAsync<List<StockItem>>("api/StockItems");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading stock items: {ex.Message}");
            stockItems = new List<StockItem>();
        }
        loading = false;
    }

    private void ShowAddForm()
    {
        currentItem = new() { 
            StockCode = "", 
            Description = "", 
            ProductId = 1, 
            IsActive = true,
            UnitOfMeasure = "Each",
            MinimumAge = 18
        };
        editingItem = null;
        showForm = true;
    }

    private void EditStockItem(StockItem item)
    {
        editingItem = item;
        currentItem = new StockItem
        {
            Id = item.Id,
            StockCode = item.StockCode,
            Description = item.Description,
            LongDescription = item.LongDescription,
            ProductId = item.ProductId,
            WarehouseId = item.WarehouseId,
            CostPrice = item.CostPrice,
            SellingPrice = item.SellingPrice,
            QuantityOnHand = item.QuantityOnHand,
            QuantityAllocated = item.QuantityAllocated,
            QuantityOnOrder = item.QuantityOnOrder,
            ReorderLevel = item.ReorderLevel,
            ReorderQuantity = item.ReorderQuantity,
            Warehouse = item.Warehouse,
            BinLocation = item.BinLocation,
            UnitOfMeasure = item.UnitOfMeasure,
            AlternativeUnitOfMeasure = item.AlternativeUnitOfMeasure,
            UnitsPerPack = item.UnitsPerPack,
            DefaultSupplierId = item.DefaultSupplierId,
            SupplierPartNumber = item.SupplierPartNumber,
            SupplierLeadTimeDays = item.SupplierLeadTimeDays,
            Barcode = item.Barcode,
            ManufacturerPartNumber = item.ManufacturerPartNumber,
            InternalReference = item.InternalReference,
            Category = item.Category,
            Weight = item.Weight,
            WeightUOM = item.WeightUOM,
            Length = item.Length,
            Width = item.Width,
            Height = item.Height,
            DimensionUOM = item.DimensionUOM,
            TaxExempt = item.TaxExempt,
            TaxCode = item.TaxCode,
            AccountCode = item.AccountCode,
            IsActive = item.IsActive,
            IsDiscontinued = item.IsDiscontinued,
            DiscontinuedDate = item.DiscontinuedDate,
            IsAgeRestricted = item.IsAgeRestricted,
            MinimumAge = item.MinimumAge,
            RequiresOTPVerification = item.RequiresOTPVerification,
            Notes = item.Notes,
            CreatedDate = item.CreatedDate,
            LastModifiedDate = item.LastModifiedDate
        };
        showForm = true;
    }

    private async Task SaveStockItem()
    {
        try
        {
            if (editingItem != null)
            {
                await Http.PutAsJsonAsync($"api/StockItems/{currentItem.Id}", currentItem);
            }
            else
            {
                await Http.PostAsJsonAsync("api/StockItems", currentItem);
            }
            
            showForm = false;
            await LoadStockItems();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving stock item: {ex.Message}");
        }
    }

    private async Task DeleteStockItem(int id)
    {
        try
        {
            await Http.DeleteAsync($"api/StockItems/{id}");
            await LoadStockItems();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting stock item: {ex.Message}");
        }
    }

    private void CancelForm()
    {
        showForm = false;
        editingItem = null;
    }
}
