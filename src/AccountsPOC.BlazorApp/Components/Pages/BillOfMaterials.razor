@page "/bill-of-materials"
@using System.Net.Http.Json
@using AccountsPOC.BlazorApp.Models
@inject HttpClient Http
@rendermode InteractiveServer

<PageTitle>Bill of Materials</PageTitle>

<div class="container-fluid">
    <h1 class="mb-4">Bill of Materials (BOM)</h1>

    <div class="row mb-3">
        <div class="col">
            <button class="btn btn-primary" @onclick="ShowAddForm">
                <i class="bi bi-plus-circle"></i> Create New BOM
            </button>
        </div>
    </div>

    @if (showForm)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5>@(editingBOM != null ? "Edit" : "Create") Bill of Materials</h5>
            </div>
            <div class="card-body">
                <EditForm Model="currentBOM" OnValidSubmit="SaveBOM">
                    <FluentValidationValidator />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">BOM Number <span class="text-danger">*</span></label>
                            <InputText class="form-control" @bind-Value="currentBOM.BOMNumber" />
                            <ValidationMessage For="@(() => currentBOM.BOMNumber)" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Name <span class="text-danger">*</span></label>
                            <InputText class="form-control" @bind-Value="currentBOM.Name" />
                            <ValidationMessage For="@(() => currentBOM.Name)" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <InputTextArea class="form-control" @bind-Value="currentBOM.Description" rows="3" />
                        <ValidationMessage For="@(() => currentBOM.Description)" />
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Product ID</label>
                            <InputNumber class="form-control" @bind-Value="currentBOM.ProductId" />
                            <ValidationMessage For="@(() => currentBOM.ProductId)" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Quantity</label>
                            <InputNumber class="form-control" @bind-Value="currentBOM.Quantity" />
                            <ValidationMessage For="@(() => currentBOM.Quantity)" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Estimated Cost</label>
                            <InputNumber class="form-control" @bind-Value="currentBOM.EstimatedCost" />
                            <ValidationMessage For="@(() => currentBOM.EstimatedCost)" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-check-label">
                            <InputCheckbox class="form-check-input" @bind-Value="currentBOM.IsActive" />
                            Active
                        </label>
                    </div>
                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-secondary" @onclick="CancelForm">Cancel</button>
                </EditForm>
            </div>
        </div>
    }

    @if (loading)
    {
        <p><em>Loading...</em></p>
    }
    else if (boms == null || !boms.Any())
    {
        <div class="alert alert-info">No BOMs found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>BOM Number</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Estimated Cost</th>
                        <th>Components</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var bom in boms)
                    {
                        <tr>
                            <td>@bom.BOMNumber</td>
                            <td>@bom.Name</td>
                            <td>@(bom.Description?.Substring(0, Math.Min(50, bom.Description?.Length ?? 0)))</td>
                            <td>@bom.Product?.ProductName</td>
                            <td>@bom.Quantity</td>
                            <td>@bom.EstimatedCost.ToString("C")</td>
                            <td>@bom.Components.Count components</td>
                            <td>
                                @if (bom.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-sm btn-info" @onclick="() => ViewBOMDetails(bom)">
                                    <i class="bi bi-eye"></i> View
                                </button>
                                <button class="btn btn-sm btn-warning" @onclick="() => EditBOM(bom)">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteBOM(bom.Id)">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<BillOfMaterial>? boms;
    private BillOfMaterial currentBOM = new() { BOMNumber = "", Name = "" };
    private BillOfMaterial? editingBOM;
    private bool showForm = false;
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadBOMs();
    }

    private async Task LoadBOMs()
    {
        loading = true;
        try
        {
            boms = await Http.GetFromJsonAsync<List<BillOfMaterial>>("api/BillOfMaterials");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading BOMs: {ex.Message}");
            boms = new List<BillOfMaterial>();
        }
        loading = false;
    }

    private void ShowAddForm()
    {
        currentBOM = new() { BOMNumber = $"BOM-{DateTime.Now:yyyyMMddHHmmss}", Name = "", IsActive = true };
        editingBOM = null;
        showForm = true;
    }

    private void EditBOM(BillOfMaterial bom)
    {
        editingBOM = bom;
        currentBOM = new BillOfMaterial
        {
            Id = bom.Id,
            BOMNumber = bom.BOMNumber,
            Name = bom.Name,
            Description = bom.Description,
            ProductId = bom.ProductId,
            Quantity = bom.Quantity,
            EstimatedCost = bom.EstimatedCost,
            IsActive = bom.IsActive,
            CreatedDate = bom.CreatedDate,
            LastModifiedDate = bom.LastModifiedDate
        };
        showForm = true;
    }

    private async Task SaveBOM()
    {
        try
        {
            if (editingBOM != null)
            {
                await Http.PutAsJsonAsync($"api/BillOfMaterials/{currentBOM.Id}", currentBOM);
            }
            else
            {
                await Http.PostAsJsonAsync("api/BillOfMaterials", currentBOM);
            }
            
            showForm = false;
            await LoadBOMs();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving BOM: {ex.Message}");
        }
    }

    private async Task DeleteBOM(int id)
    {
        try
        {
            await Http.DeleteAsync($"api/BillOfMaterials/{id}");
            await LoadBOMs();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting BOM: {ex.Message}");
        }
    }

    private void ViewBOMDetails(BillOfMaterial bom)
    {
        // In a real app, navigate to a details page showing components
    }

    private void CancelForm()
    {
        showForm = false;
        editingBOM = null;
    }
}
