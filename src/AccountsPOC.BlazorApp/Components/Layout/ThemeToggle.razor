@inject IJSRuntime JS

<button class="theme-toggle" @onclick="ToggleTheme" title="@GetTooltip()">
    @if (isDarkMode)
    {
        <i class="bi bi-sun-fill"></i>
    }
    else
    {
        <i class="bi bi-moon-fill"></i>
    }
</button>

@code {
    private bool isDarkMode = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                // Get theme from themeManager
                var theme = await JS.InvokeAsync<string>("themeManager.getTheme");
                isDarkMode = theme == "dark";
                StateHasChanged();
            }
            catch (Exception ex)
            {
                // Default to light mode if there's any error
                Console.WriteLine($"Error getting theme: {ex.Message}");
                isDarkMode = false;
            }
        }
    }

    private async Task ToggleTheme()
    {
        isDarkMode = !isDarkMode;
        
        try
        {
            var newTheme = isDarkMode ? "dark" : "light";
            await JS.InvokeVoidAsync("themeManager.setTheme", newTheme);
        }
        catch (Exception ex)
        {
            // Log error and revert state
            Console.WriteLine($"Error setting theme: {ex.Message}");
            isDarkMode = !isDarkMode;
        }
    }

    private string GetTooltip()
    {
        return isDarkMode ? "Switch to Light Mode" : "Switch to Dark Mode";
    }
}
